{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-knee-pads-section-{{ ai_gen_id }} {
    width: 100%;
    min-height: {{ block.settings.section_height }}px;
    position: relative;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.section_padding }}px;
  }

  .ai-knee-pads-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-knee-pads-bg-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-knee-pads-bg-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.bg_fallback_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-knee-pads-bg-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-knee-pads-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-knee-pads-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.column_gap }}px;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
  }

  .ai-knee-pads-banner-{{ ai_gen_id }} {
    background-color: {{ block.settings.banner_bg_color }};
    border-radius: {{ block.settings.banner_border_radius }}px;
    padding: {{ block.settings.banner_padding }}px;
    text-align: {{ block.settings.text_alignment }};
    position: relative;
    overflow: hidden;
    min-height: 200px;
    display: flex;
    flex-direction: column;
    justify-content: center;
    {% if block.settings.text_alignment == 'left' %}
      align-items: flex-start;
    {% elsif block.settings.text_alignment == 'right' %}
      align-items: flex-end;
    {% else %}
      align-items: center;
    {% endif %}
  }

  .ai-knee-pads-banner-bg-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-knee-pads-banner-bg-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: {{ block.settings.banner_bg_opacity | divided_by: 100.0 }};
  }

  .ai-knee-pads-banner-bg-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f0f0f0;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-knee-pads-banner-bg-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.3;
  }

  .ai-knee-pads-banner-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
  }

  .ai-knee-pads-foreground-{{ ai_gen_id }} {
    position: absolute;
    z-index: 2;
    max-width: {{ block.settings.foreground_max_width }}px;
    {% case block.settings.foreground_position %}
      {% when 'top-left' %}
        top: {{ block.settings.foreground_offset }}px;
        left: {{ block.settings.foreground_offset }}px;
      {% when 'top-center' %}
        top: {{ block.settings.foreground_offset }}px;
        left: 50%;
        transform: translateX(-50%);
      {% when 'top-right' %}
        top: {{ block.settings.foreground_offset }}px;
        right: {{ block.settings.foreground_offset }}px;
      {% when 'center-left' %}
        top: 50%;
        left: {{ block.settings.foreground_offset }}px;
        transform: translateY(-50%);
      {% when 'center' %}
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
      {% when 'center-right' %}
        top: 50%;
        right: {{ block.settings.foreground_offset }}px;
        transform: translateY(-50%);
      {% when 'bottom-left' %}
        bottom: {{ block.settings.foreground_offset }}px;
        left: {{ block.settings.foreground_offset }}px;
      {% when 'bottom-center' %}
        bottom: {{ block.settings.foreground_offset }}px;
        left: 50%;
        transform: translateX(-50%);
      {% when 'bottom-right' %}
        bottom: {{ block.settings.foreground_offset }}px;
        right: {{ block.settings.foreground_offset }}px;
    {% endcase %}
  }

  .ai-knee-pads-foreground-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
  }

  .ai-knee-pads-foreground-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 120px;
    background-color: #e0e0e0;
    border-radius: 8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-knee-pads-foreground-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    opacity: 0.5;
  }

  .ai-knee-pads-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    color: {{ block.settings.headline_color }};
    margin: 0 0 {{ block.settings.headline_margin }}px 0;
    line-height: 1.2;
  }

  .ai-knee-pads-subhead-{{ ai_gen_id }} {
    font-size: {{ block.settings.subhead_size }}px;
    font-weight: {{ block.settings.subhead_weight }};
    color: {{ block.settings.subhead_color }};
    margin: 0 0 {{ block.settings.subhead_margin }}px 0;
    line-height: 1.4;
  }

  .ai-knee-pads-custom-content-{{ ai_gen_id }} {
    font-size: {{ block.settings.content_size }}px;
    color: {{ block.settings.content_color }};
    line-height: 1.6;
  }

  .ai-knee-pads-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    background: rgba(0, 0, 0, 0.7);
    color: white;
    padding: 8px 16px;
    border-radius: 4px;
    font-size: 12px;
    z-index: 10;
  }

  @media screen and (max-width: 990px) {
    .ai-knee-pads-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-knee-pads-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
    }
    
    .ai-knee-pads-section-{{ ai_gen_id }} {
      min-height: {{ block.settings.section_height | times: 0.7 }}px;
      padding: {{ block.settings.section_padding | times: 0.5 }}px;
    }
    
    .ai-knee-pads-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }
    
    .ai-knee-pads-subhead-{{ ai_gen_id }} {
      font-size: {{ block.settings.subhead_size | times: 0.9 }}px;
    }
    
    .ai-knee-pads-foreground-{{ ai_gen_id }} {
      max-width: {{ block.settings.foreground_max_width | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-knee-pads-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-knee-pads-bg-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-knee-pads-bg-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% unless block.settings.background_image %}
    <div class="ai-knee-pads-empty-state-{{ ai_gen_id }}">
      Add a background image to get started
    </div>
  {% endunless %}

  <div class="ai-knee-pads-content-{{ ai_gen_id }}">
    <div class="ai-knee-pads-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% assign columns_desktop_num = block.settings.columns_desktop | plus: 0 %}
        {% if i <= columns_desktop_num %}
          {% liquid
            assign banner_bg_key = 'banner_' | append: i | append: '_bg_image'
            assign foreground_key = 'banner_' | append: i | append: '_foreground_image'
            assign foreground_enabled_key = 'banner_' | append: i | append: '_foreground_enabled'
            assign headline_key = 'banner_' | append: i | append: '_headline'
            assign subhead_key = 'banner_' | append: i | append: '_subhead'
            assign content_key = 'banner_' | append: i | append: '_content'
          %}
          <div class="ai-knee-pads-banner-{{ ai_gen_id }}">
            {% if block.settings[banner_bg_key] %}
              <div class="ai-knee-pads-banner-bg-{{ ai_gen_id }}">
                <img
                  src="{{ block.settings[banner_bg_key] | image_url: width: 800 }}"
                  alt="{{ block.settings[banner_bg_key].alt | escape }}"
                  loading="lazy"
                  width="{{ block.settings[banner_bg_key].width }}"
                  height="{{ block.settings[banner_bg_key].height }}"
                >
              </div>
            {% else %}
              <div class="ai-knee-pads-banner-bg-{{ ai_gen_id }}">
                <div class="ai-knee-pads-banner-bg-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              </div>
            {% endif %}

            {% if block.settings[foreground_enabled_key] %}
              {% if block.settings[foreground_key] %}
                <div class="ai-knee-pads-foreground-{{ ai_gen_id }}">
                  <img
                    src="{{ block.settings[foreground_key] | image_url: width: 400 }}"
                    alt="{{ block.settings[foreground_key].alt | escape }}"
                    loading="lazy"
                    width="{{ block.settings[foreground_key].width }}"
                    height="{{ block.settings[foreground_key].height }}"
                  >
                </div>
              {% else %}
                <div class="ai-knee-pads-foreground-{{ ai_gen_id }}">
                  <div class="ai-knee-pads-foreground-placeholder-{{ ai_gen_id }}">
                    {{ 'product-apparel-1' | placeholder_svg_tag }}
                  </div>
                </div>
              {% endif %}
            {% endif %}<div class="ai-knee-pads-banner-content-{{ ai_gen_id }}">
              {% if block.settings[headline_key] != blank %}
                <h2 class="ai-knee-pads-headline-{{ ai_gen_id }}">{{ block.settings[headline_key] }}</h2>
              {% endif %}

              {% if block.settings[subhead_key] != blank %}
                <h3 class="ai-knee-pads-subhead-{{ ai_gen_id }}">{{ block.settings[subhead_key] }}</h3>
              {% endif %}

              {% if block.settings[content_key] != blank %}
                <div class="ai-knee-pads-custom-content-{{ ai_gen_id }}">{{ block.settings[content_key] }}</div>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

