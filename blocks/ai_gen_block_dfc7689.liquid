{% doc %}
  @prompt
    Generate a hero banner slider with animation. mobile friendly up to 6 slides. 
    
    Background image.
    left:  Heading 1, Sub Heading,  heading 3,  buttons. 
    
    right: foreground image. 
    
    in mobile  the foreground image will display first and  then the rest of de content. 
    
    add slide animations, and controls for  content style. 
    
    use modern shopify 2.0 structure. 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.slider_bg_color }};
  }

  .ai-hero-slider__wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height_desktop }}px;
  }

  .ai-hero-slider__track-{{ ai_gen_id }} {
    display: flex;
    height: 100%;
    transition: transform 0.6s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .ai-hero-slider__slide-{{ ai_gen_id }} {
    min-width: 100%;
    height: 100%;
    position: relative;
    display: flex;
    align-items: center;
  }

  .ai-hero-slider__background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-hero-slider__background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-hero-slider__background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #e5e5e5;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slider__background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 400px;
    max-height: 400px;
    opacity: 0.3;
  }

  .ai-hero-slider__overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.overlay_color }};
    opacity: {{ block.settings.overlay_opacity | divided_by: 100.0 }};
    z-index: 2;
  }

  .ai-hero-slider__container-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: {{ block.settings.content_max_width }}px;
    margin: 0 auto;
    padding: 0 40px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
  }

  .ai-hero-slider__content-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateX(-30px);
  }

  .ai-hero-slider__slide-{{ ai_gen_id }}.active .ai-hero-slider__content-{{ ai_gen_id }} {
    animation: ai-hero-slide-in-left-{{ ai_gen_id }} 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.2s forwards;
  }

  .ai-hero-slider__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
  }

  .ai-hero-slider__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    font-weight: {{ block.settings.subheading_weight }};
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    line-height: 1.4;
  }

  .ai-hero-slider__heading3-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading3_size }}px;
    font-weight: {{ block.settings.heading3_weight }};
    color: {{ block.settings.heading3_color }};
    margin: 0 0 {{ block.settings.heading3_spacing }}px;
    line-height: 1.5;
  }

  .ai-hero-slider__buttons-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    flex-wrap: wrap;
  }

  .ai-hero-slider__button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    transition: all 0.3s ease;
    border: {{ block.settings.button_border_width }}px solid;
  }

  .ai-hero-slider__button--primary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_primary_bg }};
    color: {{ block.settings.button_primary_text }};
    border-color: {{ block.settings.button_primary_border }};
  }

  .ai-hero-slider__button--primary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_primary_bg_hover }};
    color: {{ block.settings.button_primary_text_hover }};
    border-color: {{ block.settings.button_primary_border_hover }};
  }

  .ai-hero-slider__button--secondary-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_secondary_bg }};
    color: {{ block.settings.button_secondary_text }};
    border-color: {{ block.settings.button_secondary_border }};
  }

  .ai-hero-slider__button--secondary-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_secondary_bg_hover }};
    color: {{ block.settings.button_secondary_text_hover }};
    border-color: {{ block.settings.button_secondary_border_hover }};
  }

  .ai-hero-slider__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    opacity: 0;
    transform: translateX(30px);
  }

  .ai-hero-slider__slide-{{ ai_gen_id }}.active .ai-hero-slider__image-wrapper-{{ ai_gen_id }} {
    animation: ai-hero-slide-in-right-{{ ai_gen_id }} 0.8s cubic-bezier(0.4, 0, 0.2, 1) 0.4s forwards;
  }

  .ai-hero-slider__foreground-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.foreground_border_radius }}px;
  }

  .ai-hero-slider__foreground-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.foreground_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-hero-slider__foreground-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.4;
  }

  .ai-hero-slider__controls-{{ ai_gen_id }} {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 4;
    display: flex;
    gap: 12px;
    align-items: center;
  }

  .ai-hero-slider__nav-button-{{ ai_gen_id }} {
    width: 48px;
    height: 48px;
    border-radius: 50%;
    background-color: {{ block.settings.nav_button_bg }};
    color: {{ block.settings.nav_button_color }};
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-hero-slider__nav-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.nav_button_bg_hover }};
    color: {{ block.settings.nav_button_color_hover }};
  }

  .ai-hero-slider__nav-button-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-hero-slider__dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }} {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background-color: {{ block.settings.dot_color }};
    opacity: 0.4;
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 0;
  }

  .ai-hero-slider__dot-{{ ai_gen_id }}.active {
    opacity: 1;
    background-color: {{ block.settings.dot_active_color }};
  }

  @keyframes ai-hero-slide-in-left-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @keyframes ai-hero-slide-in-right-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  @media screen and (max-width: 989px) {
    .ai-hero-slider__wrapper-{{ ai_gen_id }} {
      height: auto;
      min-height: {{ block.settings.slider_height_mobile }}px;
    }

    .ai-hero-slider__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 32px;
      padding: 40px 24px;
    }

    .ai-hero-slider__image-wrapper-{{ ai_gen_id }} {
      order: -1;
    }

    .ai-hero-slider__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.7 }}px;
    }

    .ai-hero-slider__subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.8 }}px;
    }

    .ai-hero-slider__heading3-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading3_size | times: 0.85 }}px;
    }

    .ai-hero-slider__buttons-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-hero-slider__button-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-hero-slider__controls-{{ ai_gen_id }} {
      bottom: 20px;
    }

    .ai-hero-slider__nav-button-{{ ai_gen_id }} {
      width: 40px;
      height: 40px;
    }

    .ai-hero-slider__nav-button-{{ ai_gen_id }} svg {
