<bestseller-slider-{{ ai_gen_id }} class="ai-bestseller-module-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-bestseller-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-bestseller-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
          <h2 class="ai-bestseller-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
        {% endif %}
        {% if block.settings.subtitle != blank %}
          <p class="ai-bestseller-subtitle-{{ ai_gen_id }}">{{ block.settings.subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}<div class="ai-bestseller-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-bestseller-grid-{{ ai_gen_id }}" data-slider-track>
        {% for i in (1..block.settings.max_products) %}
          {% assign product_key = 'product_' | append: i %}
          {% assign product = block.settings[product_key] %}
          
          {% if product != blank %}
            <div class="ai-bestseller-card-{{ ai_gen_id }}">
              <div class="ai-bestseller-image-wrapper-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-bestseller-image-link-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 600}}"
                      alt="{{ product.featured_image.alt | escape }}"
                      class="ai-bestseller-image-{{ ai_gen_id }}"
                loading="lazy"
                      width="600"
                      height="{{600 | divided_by: block.settings.image_aspect_ratio }}"
                    >
                  {% else %}
                    <div class="ai-bestseller-image-placeholder-{{ ai_gen_id }}">
                      {{ 'product-apparel-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                </a>
              </div>

              <div class="ai-bestseller-content-{{ ai_gen_id }}">
                <h3 class="ai-bestseller-product-title-{{ ai_gen_id }}">
                  <a href="{{ product.url }}" class="ai-bestseller-product-title-link-{{ ai_gen_id }}">{{ product.title }}</a>
                </h3>

                {% if block.settings.show_description and product.description != blank %}
                  <div class="ai-bestseller-description-{{ ai_gen_id }}">
                    {{ product.description | strip_html | truncate: 120 }}
                  </div>
                {% endif %}

                {% if block.settings.show_price %}
                  <div class="ai-bestseller-price-{{ ai_gen_id }}">
                    {% if product.compare_at_price > product.price %}
                      <span class="ai-bestseller-price-compare-{{ ai_gen_id }}">{{ product.compare_at_price | money }}</span>
                    {% endif %}
                    {{ product.price | money }}
                  </div>
                {% endif %}

                {% if block.settings.show_colors %}
                  {% assign color_option = product.options_by_name['Color'] %}
                  {% if color_option %}
                    <div class="ai-bestseller-colors-{{ ai_gen_id }}">
                      {% for color_value in color_option.values limit: block.settings.max_colors %}
                        {% assign color_variant = product.variants | where: 'option1', color_value | first %}
                        {% if color_variant %}
                          <a 
                            href="{{ color_variant.url }}"
                            class="ai-bestseller-color-{{ ai_gen_id }}"
                            style="background-color: {{ color_value | downcase }};"title="{{ color_value }}"
                            aria-label="Select {{ color_value }} variant"
                          ></a>
                        {% endif %}
                      {% endfor %}
                    </div>
                  {% endif %}
                {% endif %}
              </div>
            </div>
          {% else %}
            <div class="ai-bestseller-card-{{ ai_gen_id }}">
              <div class="ai-bestseller-image-wrapper-{{ ai_gen_id }}">
                <div class="ai-bestseller-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-apparel-1' | placeholder_svg_tag }}<div class="ai-bestseller-empty-state-{{ ai_gen_id }}">
                    Select product {{ i }}
                  </div>
                </div>
              </div><div class="ai-bestseller-content-{{ ai_gen_id }}">
                <h3 class="ai-bestseller-product-title-{{ ai_gen_id }}">Product title</h3>
                {% if block.settings.show_description %}
                  <div class="ai-bestseller-description-{{ ai_gen_id }}">Product description will appear here when you select a product.</div>
                {% endif %}
                {% if block.settings.show_price %}
                  <div class="ai-bestseller-price-{{ ai_gen_id }}">$0.00</div>
                {% endif %}
                {% if block.settings.show_colors %}<div class="ai-bestseller-colors-{{ ai_gen_id }}"><div class="ai-bestseller-color-{{ ai_gen_id }}" style="background-color: #cccccc;"></div>
                    <div class="ai-bestseller-color-{{ ai_gen_id }}" style="background-color: #999999;"></div>
                  </div>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    {% if block.settings.enable_slider and block.settings.show_autoplay_toggle %}
      <div class="ai-bestseller-slider-controls-{{ ai_gen_id }}">
        <button class="ai-bestseller-autoplay-toggle-{{ ai_gen_id }}" data-autoplay-toggle>
          <svg data-play-icon xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polygon points="5,3 19,12 5,21"></polygon>
          </svg><svg data-pause-icon style="display: none;" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <rect x="6" y="4" width="4" height="16"></rect>
            <rect x="14" y="4" width="4" height="16"></rect>
          </svg>
          <span data-autoplay-text>Play</span>
        </button>
      </div>
    {% endif %}
  </div>
</bestseller-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class BestsellerSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.enableSlider = {{ block.settings.enable_slider | json }};
        this.autoplayEnabled = {{ block.settings.autoplay_enabled | json }};
        this.autoplayInterval = {{ block.settings.autoplay_interval | times: 1000 }};
        this.currentSlide = 0;
        this.autoplayTimer = null;
        this.isAutoplayActive = this.autoplayEnabled;
        this.isMobile = window.innerWidth <= 749;
        
        if (this.isMobile) {
          this.slidesPerView = {{ block.settings.columns_mobile }};
        } else if (window.innerWidth <= 989) {
          this.slidesPerView = {{ block.settings.columns_tablet }};
        } else {
          this.slidesPerView = {{ block.settings.columns_desktop }};
        }
        
        this.totalProducts = {{ block.settings.max_products }};
        this.maxSlides = Math.max(0, this.totalProducts - this.slidesPerView);
      }

      connectedCallback() {
        if (!this.enableSlider || this.isMobile) return;
        
        this.track = this.querySelector('[data-slider-track]');
        this.autoplayToggle = this.querySelector('[data-autoplay-toggle]');
        
        this.setupEventListeners();
        this.updateSlider();
        
        if (this.autoplayEnabled) {
          this.startAutoplay();
        }
        
        this.updateAutoplayButton();
      }

      setupEventListeners() {
        if (this.autoplayToggle) {
          this.autoplayToggle.addEventListener('click', () => this.toggleAutoplay());
        }
        
        window.addEventListener('resize', () => this.handleResize());
        
        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => this.resumeAutoplay());
      }

      handleResize() {
        const oldIsMobile = this.isMobile;
        const oldSlidesPerView = this.slidesPerView;
        
        this.isMobile = window.innerWidth <= 749;
        
        if (this.isMobile) {
          this.slidesPerView = {{ block.settings.columns_mobile }};
        } else if (window.innerWidth <= 989) {
          this.slidesPerView = {{ block.settings.columns_tablet }};
        } else {
          this.slidesPerView = {{ block.settings.columns_desktop }};
        }
        
        if (oldIsMobile !== this.isMobile || oldSlidesPerView !== this.slidesPerView) {
          this.maxSlides = Math.max(0, this.totalProducts - this.slidesPerView);
          this.currentSlide = Math.min(this.currentSlide, this.maxSlides);
          if (this.isMobile && this.enableSlider) {
            this.stopAutoplay();
            const controls = this.querySelector('.ai-bestseller-slider-controls-{{ ai_gen_id }}');
            if (controls) controls.style.display = 'none';
          } else if (!this.isMobile && this.enableSlider) {
            const controls = this.querySelector('.ai-bestseller-slider-controls-{{ ai_gen_id }}');
            if (controls) controls.style.display = 'flex';
            this.updateSlider();
            if (this.isAutoplayActive) {
              this.startAutoplay();
            }
          }
        }
      }

      nextSlide() {
        if (this.currentSlide < this.maxSlides) {
          this.currentSlide++;
        } else {
          this.currentSlide = 0;
        }
        this.updateSlider();
      }

      updateSlider() {
        if (!this.track || this.isMobile) return;
        
        const translateX = -(this.currentSlide * (100 / this.slidesPerView));
        this.track.style.transform = `translateX(${translateX}%)`;
      }

      startAutoplay() {
        if (!this.autoplayEnabled || this.maxSlides === 0 || this.isMobile) return;
        
        this.autoplayTimer = setInterval(() => {
          this.nextSlide();
        }, this.autoplayInterval);
      }

      stopAutoplay() {
        if (this.autoplayTimer) {
          clearInterval(this.autoplayTimer);
          this.autoplayTimer = null;
        }
      }

      pauseAutoplay() {
        if (this.isAutoplayActive && !this.isMobile) {
          this.stopAutoplay();
        }
      }

      resumeAutoplay() {
        if (this.isAutoplayActive && !this.isMobile) {
          this.startAutoplay();
        }
      }

      toggleAutoplay() {
        if (this.isMobile) return;
        
        this.isAutoplayActive = !this.isAutoplayActive;
        
        if (this.isAutoplayActive) {
          this.startAutoplay();
        } else {
          this.stopAutoplay();
        }
        
        this.updateAutoplayButton();
      }

      updateAutoplayButton() {
        if (!this.autoplayToggle || this.isMobile) return;
        
        const playIcon = this.autoplayToggle.querySelector('[data-play-icon]');
        const pauseIcon = this.autoplayToggle.querySelector('[data-pause-icon]');
        const text = this.autoplayToggle.querySelector('[data-autoplay-text]');
        
        if (this.isAutoplayActive) {
          playIcon.style.display = 'none';
          pauseIcon.style.display = 'block';
          text.textContent = 'Pause';
        } else {
          playIcon.style.display = 'block';
          pauseIcon.style.display = 'none';
          text.textContent = 'Play';
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('bestseller-slider-{{ ai_gen_id }}', BestsellerSlider{{ ai_gen_id }});
  })();
</script>

