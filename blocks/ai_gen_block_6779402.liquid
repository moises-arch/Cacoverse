    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-bestseller-container-{{ ai_gen_id }} {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 {{ settings.spacing_grid_horizontal }}px;
  }

  .ai-bestseller-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-bestseller-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_bottom_margin }}px 0;
    font-weight: {{ block.settings.title_weight }};
  }

  .ai-bestseller-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    opacity: 0.8;
    font-weight: {{ block.settings.subtitle_weight }};
  }

  .ai-bestseller-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-bestseller-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    {% if block.settings.enable_slider %}
      transition: transform 0.5s ease;
    {% endif %}
  }

  {% if block.settings.enable_slider %}
    .ai-bestseller-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.max_products }}, minmax(0, 1fr));width: calc(100% * {{ block.settings.max_products }} / {{ block.settings.columns_desktop }});
    }

    .ai-bestseller-slider-controls-{{ ai_gen_id }} {
      display: flex;
      justify-content: center;
      align-items: center;
      gap: 16px;
      margin-top: {{ block.settings.controls_spacing }}px;
    }

    .ai-bestseller-autoplay-toggle-{{ ai_gen_id }} {
      background-color: {{ block.settings.autoplay_button_color }};
      color: {{ block.settings.autoplay_button_text_color }};
      border: none;
      border-radius: 20px;
      padding: 8px 16px;
      font-size: 14px;
      cursor: pointer;
      transition: all 0.3s ease;display: flex;
      align-items: center;
      gap: 6px;
    }

    .ai-bestseller-autoplay-toggle-{{ ai_gen_id }}:hover {
      background-color: {{ block.settings.autoplay_button_hover_color }};
    }

    .ai-bestseller-autoplay-toggle-{{ ai_gen_id }} svg {
      width: 16px;
      height: 16px;
    }
  {% endif %}

  .ai-bestseller-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
  }

  .ai-bestseller-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-bestseller-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.image_aspect_ratio }};
    overflow: hidden;
  }

  .ai-bestseller-image-link-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    height: 100%;
  }

  .ai-bestseller-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

