    text-decoration: line-through;
    opacity: 0.6;
    margin-right: 8px;
  }

  .ai-bestseller-colors-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.color_gap }}px;
    flex-wrap: wrap;
  }

  .ai-bestseller-color-{{ ai_gen_id }} {
    width: {{ block.settings.color_size }}px;
    height: {{ block.settings.color_size }}px;
    border-radius: 50%;
    border: 2px solid {{ block.settings.color_border }};
    cursor: pointer;
    transition: transform 0.2s ease;
    position: relative;
  }

