      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
      {% if block.settings.enable_slider %}
        grid-template-columns: repeat({{ block.settings.max_products }}, minmax(0, 1fr));
        width: calc(100% * {{ block.settings.max_products }} / {{ block.settings.columns_tablet }});
