          data-slide="{{ forloop.index0 }}"
          data-animate="{{ slide_animate }}"
          style="justify-content: {{ justify_content }};"
          role="group"
          aria-roledescription="slide"
          aria-label="Slide {{ forloop.index }} of {{ block.settings.slide_1_enabled | plus: block.settings.slide_2_enabled | plus: block.settings.slide_3_enabled }}"
        >
          <div class="ai-hero-carousel-{{ ai_gen_id }}__background" style="background-color: {{ slide_bg_color }};">
            {% if slide_image %}
              <img
                src="{{ slide_image | image_url: width: 2000 }}"
                srcset="{{ slide_image | image_url: width: 750 }} 750w,
                        {{ slide_image | image_url: width: 1500 }} 1500w,
                        {{ slide_image | image_url: width: 2000 }} 2000w"
                sizes="100vw"
                alt="{{ slide_image.alt | escape }}"
                loading="{% if forloop.index == 1 %}eager{% else %}lazy{% endif %}"
                width="{{ slide_image.width }}"
                height="{{ slide_image.height }}"
                class="ai-hero-carousel-{{ ai_gen_id }}__background-image"
              >
