                {% endif %}

                {% if slide_button2_text != blank %}
                  <a
                    href="{{ slide_button2_link }}"
                    class="ai-hero-carousel-{{ ai_gen_id }}__button ai-hero-carousel-{{ ai_gen_id }}__button--{{ slide_button2_style }}"
                    style="--ai-button-bg: {{ slide_button1_bg }}; --ai-button-text: {{ slide_button1_text_color }}; --ai-button-hover-bg: {{ slide_button1_text_color }};"
                  >
                    {{ slide_button2_text }}
                  </a>
                {% endif %}
              </div>
            {% endif %}
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>

