        assign slide_heading_key = 'slide_' | append: i | append: '_heading'
        assign slide_heading_size_key = 'slide_' | append: i | append: '_heading_size'
        assign slide_heading_color_key = 'slide_' | append: i | append: '_heading_color'
        assign slide_subheading_key = 'slide_' | append: i | append: '_subheading'
        assign slide_subheading_size_key = 'slide_' | append: i | append: '_subheading_size'
        assign slide_subheading_color_key = 'slide_' | append: i | append: '_subheading_color'
        assign slide_text_align_key = 'slide_' | append: i | append: '_text_align'
