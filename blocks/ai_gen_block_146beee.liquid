            style="background-color: rgba(0, 0, 0, {{ slide_overlay | divided_by: 100.0 }});"
          ></div>

          <div
            class="ai-hero-carousel-{{ ai_gen_id }}__content"
            style="text-align: {{ slide_text_align }};"
          >
            {% if slide_heading != blank %}
              <h2
                class="ai-hero-carousel-{{ ai_gen_id }}__heading"
                style="font-size: {{ slide_heading_size }}px; color: {{ slide_heading_color }};"
              >
                {{ slide_heading }}
              </h2>
            {% endif %}

            {% if slide_subheading != blank %}
              <div
                class="ai-hero-carousel-{{ ai_gen_id }}__subheading"
                style="font-size: {{ slide_subheading_size }}px; color: {{ slide_subheading_color }};"
              >
                {{ slide_subheading }}
              </div>
            {% endif %}

            {% if slide_button1_text != blank or slide_button2_text != blank %}
              <div
                class="ai-hero-carousel-{{ ai_gen_id }}__buttons"
                style="justify-content: {{ slide_text_align }};"
              >
                {% if slide_button1_text != blank %}
                  <a
                    href="{{ slide_button1_link }}"
                    class="ai-hero-carousel-{{ ai_gen_id }}__button ai-hero-carousel-{{ ai_gen_id }}__button--{{ slide_button1_style }}"
                    style="--ai-button-bg: {{ slide_button1_bg }}; --ai-button-text: {{ slide_button1_text_color }}; --ai-button-hover-bg: {{ slide_button1_text_color }};"
                  >
                    {{ slide_button1_text }}
