<script>
  (function() {
    class HeroCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.totalSlides = 0;
        this.autoplayInterval = null;
        this.touchStartX = 0;
        this.touchEndX = 0;
        this.isTransitioning = false;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-hero-carousel-{{ ai_gen_id }}__track');
        this.slides = this.querySelectorAll('.ai-hero-carousel-{{ ai_gen_id }}__slide');
        this.totalSlides = this.slides.length;
        this.prevButton = this.querySelector('.ai-hero-carousel-{{ ai_gen_id }}__arrow--prev');
        this.nextButton = this.querySelector('.ai-hero-carousel-{{ ai_gen_id }}__arrow--next');
        this.dotsContainer = this.querySelector('.ai-hero-carousel-{{ ai_gen_id }}__controls');
        this.srAnnouncer = this.querySelector('.ai-hero-carousel-{{ ai_gen_id }}__sr-only');

        this.autoplay = this.dataset.autoplay === 'true';
        this.interval = parseInt(this.dataset.interval) || 5000;
        this.loop = this.dataset.loop === 'true';
        this.pauseOnHover = this.dataset.pauseOnHover === 'true';

        if (this.totalSlides === 0) return;

        this.createDots();
        this.setupEventListeners();
        this.goToSlide(0);

        if (this.autoplay) {
          this.startAutoplay();
        }

        window.addEventListener('hero-carousel-api-{{ ai_gen_id }}', (e) => this.handleAPI(e));
      }

      createDots() {
        if (!this.dotsContainer) return;

        this.dotsContainer.innerHTML = '';
        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = 'ai-hero-carousel-{{ ai_gen_id }}__dot';
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.setAttribute('role', 'tab');
          dot.setAttribute('aria-selected', i === 0 ? 'true' : 'false');
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      setupEventListeners() {
        if (this.prevButton) {
          this.prevButton.addEventListener('click', () => this.prev());
        }

        if (this.nextButton) {
          this.nextButton.addEventListener('click', () => this.next());
        }

        this.track.addEventListener('touchstart', (e) => {
          this.touchStartX = e.changedTouches[0].screenX;
        }, { passive: true });

        this.track.addEventListener('touchend', (e) => {
          this.touchEndX = e.changedTouches[0].screenX;
          this.handleSwipe();
        }, { passive: true });

        this.addEventListener('keydown', (e) => {
          if (e.key === 'ArrowLeft') {
            e.preventDefault();
            this.prev();
          } else if (e.key === 'ArrowRight') {
            e.preventDefault();
            this.next();
          }
        });

        if (this.pauseOnHover && this.autoplay) {
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        }

        this.dispatchEvent(new CustomEvent('carousel-init', {
          detail: { totalSlides: this.totalSlides },
          bubbles: true
        }));
      }

      handleSwipe() {
        const swipeThreshold = 50;
        const diff = this.touchStartX - this.touchEndX;

        if (Math.abs(diff) > swipeThreshold) {
          if (diff > 0) {
            this.next();
          } else {
            this.prev();
          }
        }
      }

      goToSlide(index) {
        if (this.isTransitioning) return;

        if (index < 0) {
          index = this.loop ? this.totalSlides - 1 : 0;
        } else if (index >= this.totalSlides) {
          index = this.loop ? 0 : this.totalSlides - 1;
        }

        this.isTransitioning = true;
        this.currentSlide = index;

        this.track.style.transform = `translateX(-${index * 100}%)`;

        this.slides.forEach((slide, i) => {
          const isActive = i === index;
          slide.setAttribute('aria-hidden', !isActive);
          if (isActive && slide.dataset.animate === 'true') {
            slide.querySelectorAll('.ai-hero-carousel-{{ ai_gen_id }}__heading, .ai-hero-carousel-{{ ai_gen_id }}__subheading, .ai-hero-carousel-{{ ai_gen_id }}__buttons').forEach(el => {
              el.style.animation = 'none';
              el.offsetHeight;
              el.style.animation = null;
            });
          }
        });

        if (this.dotsContainer) {
          const dots = this.dotsContainer.querySelectorAll('.ai-hero-carousel-{{ ai_gen_id }}__dot');
          dots.forEach((dot, i) => {
            if (i === index) {
              dot.classList.add('ai-hero-carousel-{{ ai_gen_id }}__dot--active');
              dot.setAttribute('aria-selected', 'true');
            } else {
              dot.classList.remove('ai-hero-carousel-{{ ai_gen_id }}__dot--active');
              dot.setAttribute('aria-selected', 'false');
            }
          });
        }

        if (this.srAnnouncer) {
          this.srAnnouncer.textContent = `Slide ${index + 1} of ${this.totalSlides}`;
        }

        setTimeout(() => {
          this.isTransitioning = false;
        }, 600);

        this.dispatchEvent(new CustomEvent('carousel-change', {
          detail: { currentSlide: index, totalSlides: this.totalSlides },
          bubbles: true
        }));
      }

      next() {
        this.goToSlide(this.currentSlide + 1);
      }

      prev() {
        this.goToSlide(this.currentSlide - 1);
      }

      startAutoplay() {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.next();
        }, this.interval);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      handleAPI(event) {
        const { action, index } = event.detail;
        if (action === 'next') this.next();
        else if (action === 'prev') this.prev();
        else if (action === 'goTo' && typeof index === 'number') this.goToSlide(index);
      }

      disconnectedCallback() {
        this.stopAutoplay();
