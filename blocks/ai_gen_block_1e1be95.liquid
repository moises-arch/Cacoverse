{% doc %}
  @prompt
    generate a newsletter subscribe section exactly like the one in this page (¡Suscríbete a nuestra newsletter y obtén un 10% de descuento en tu primer pedido!) : https://www.helloprint.es/pedido
    
    
    , error 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: 60px 20px;
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .ai-newsletter-icon-{{ ai_gen_id }} {
    width: 60px;
    height: 60px;
    margin: 0 auto 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: 50%;
  }

  .ai-newsletter-icon-{{ ai_gen_id }} svg {
    width: 30px;
    height: 30px;
    fill: {{ block.settings.icon_color }};
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-newsletter-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 30px;
    opacity: 0.9;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    max-width: 600px;
    margin: 0 auto;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
    justify-content: center;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    flex: 1;
    min-width: 250px;
    padding: 16px 20px;
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    font-size: 16px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: 16px 40px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
  }

  .ai-newsletter-discount-{{ ai_gen_id }} {
    display: inline-block;
    margin-top: 16px;
    padding: 8px 16px;
    background-color: {{ block.settings.discount_badge_color }};
    color: {{ block.settings.discount_badge_text_color }};
    border-radius: 20px;
    font-size: 14px;
    font-weight: 600;
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: 16px;
    font-size: 14px;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-section-{{ ai_gen_id }} {
      padding: 40px 20px;
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }

    .ai-newsletter-subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_size }}px * 0.9);
    }

    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
    }

    .ai-newsletter-input-{{ ai_gen_id }} {
      min-width: 100%;
    }

    .ai-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-newsletter-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-container-{{ ai_gen_id }}">
    <div class="ai-newsletter-icon-{{ ai_gen_id }}">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
        <path d="M20 4H4c-1.1 0-1.99.9-1.99 2L2 18c0 1.1.9 2 2 2h16c1.1 0 2-.9 2-2V6c0-1.1-.9-2-2-2zm0 4l-8 5-8-5V6l8 5 8-5v2z"/>
      </svg>
    </div>

    {%- if block.settings.heading != blank -%}
      <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {%- endif -%}

    {%- if block.settings.subheading != blank -%}
      <p class="ai-newsletter-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {%- endif -%}

    <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
      {%- form 'customer', class: 'ai-newsletter-form-' | append: ai_gen_id -%}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input
          type="email"
          name="contact[email]"
          class="ai-newsletter-input-{{ ai_gen_id }}"
          value="{% if customer %}{{ customer.email }}{% endif %}"
          placeholder="{{ block.settings.email_placeholder }}"
          aria-label="{{ block.settings.email_placeholder }}"
          autocorrect="off"
          autocapitalize="off"
          autocomplete="email"
          {% if form.errors %}
            aria-invalid="true"
            aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
          {% endif %}
          {% if form.posted_successfully? %}
            aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
          {% endif %}
          required
        >
        <button type="submit" class="ai-newsletter-button-{{ ai_gen_id }}">
          {{ block.settings.button_text }}
        </button>
      {%- endform -%}

      {%- if form.errors -%}
        <div id="ai-newsletter-error-{{ ai_gen_id }}" class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}">
          {{ form.errors.messages.email }}
        </div>
      {%- endif -%}

      {%- if form.posted_successfully? -%}
        <div id="ai-newsletter-success-{{ ai_gen_id }}" class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}">
          {{ block.settings.success_message }}
        </div>
      {%- endif -%}
    </div>

    {%- if block.settings.show_discount_badge -%}
      <div class="ai-newsletter-discount-{{ ai_gen_id }}">
        {{ block.settings.discount_text }}
      </div>
    {%- endif -%}
  </div>
</div>

