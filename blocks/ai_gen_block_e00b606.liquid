{% comment %}
  Slider Functionality Improvements:
  1. Smoothness: Added 'scroll-behavior: smooth;' and removed JS speed multiplier.
  2. UX: **Hiding the horizontal scrollbar** for a clean look.
{% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-best-sellers-wrapper-{{ ai_gen_id }} {
    max-width: 1500px;
    margin: 0 auto;
    width: 100%;
  }

  .ai-best-sellers-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.container_margin }}px;
    overflow: hidden;
  }

  .ai-best-sellers-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: {{ block.settings.section_spacing }}px;
  }

  .ai-best-sellers-main-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_title_size }}px;
    font-weight: {{ block.settings.main_title_weight }};
    color: {{ block.settings.main_title_color }};
    margin: 0;
  }

  .ai-best-sellers-slider-{{ ai_gen_id }} {
    position: relative;
    /* Allow scrolling but hide the bar */
    overflow-x: scroll; 
    overflow-y: hidden;
    cursor: grab;
    scroll-behavior: smooth; 
    
    /* ðŸš€ HIDE SCROLLBAR: For IE and Edge */
    -ms-overflow-style: none;  
    /* ðŸš€ HIDE SCROLLBAR: For Firefox */
    scrollbar-width: none;  
  }

  /* ðŸš€ HIDE SCROLLBAR: For Chrome, Safari, and Opera */
  .ai-best-sellers-slider-{{ ai_gen_id }}::-webkit-scrollbar {
    display: none;
  }

  .ai-best-sellers-slider-{{ ai_gen_id }}:active {
    cursor: grabbing;
  }

  .ai-best-sellers-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease; 
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-best-sellers-card-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.card_spacing | times: 4 }}px) / 5);
    background: #ffffff;
    {% if block.settings.show_card_border %}
      border: {{ block.settings.card_border_thickness }}px solid {{ block.settings.card_border_color }};
    {% else %}
      border: none;
    {% endif %}
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    {% if block.settings.show_card_shadow %}
      box-shadow: 0 {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    {% else %}
      box-shadow: none;
    {% endif %}
    min-width: 200px;
  }

  .ai-best-sellers-image-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: {{ block.settings.photo_aspect_ratio }};
    overflow: hidden;padding: {{ block.settings.photo_padding }}px;
  }

  .ai-best-sellers-image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    border-radius: {{ block.settings.photo_border_radius }}px;
    overflow: hidden;
  }

  .ai-best-sellers-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-best-sellers-card-{{ ai_gen_id }}:hover .ai-best-sellers-image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-best-sellers-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.photo_border_radius }}px;}

  .ai-best-sellers-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-best-sellers-content-{{ ai_gen_id }} {
    padding: {{ block.settings.photo_padding }}px;
    padding-top: 16px;
  }

  .ai-best-sellers-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.typography_margin }}px 0;padding-top: {{ block.settings.title_padding }}px;
    padding-bottom: {{ block.settings.title_padding }}px;text-decoration: none;
    display: block;
  }

  .ai-best-sellers-title-{{ ai_gen_id }}:hover {
    opacity: 0.8;
  }

  .ai-best-sellers-junip-{{ ai_gen_id }} {
    margin:0 0 {{ block.settings.typography_margin }}px 0;
  }

  .ai-best-sellers-custom-text-after-title-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.typography_margin }}px 0;
  }

  .ai-best-sellers-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 {{ block.settings.typography_margin }}px 0;
    padding-top: {{ block.settings.subtitle_padding }}px;
    padding-bottom: {{ block.settings.subtitle_padding }}px;
    {% if block.settings.description_lines == '1' %}
      display: -webkit-box;
      -webkit-line-clamp: 1;
      -webkit-box-orient: vertical;
      overflow: hidden;
    {% elsif block.settings.description_lines == '2' %}
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    {% endif %}
  }

  .ai-best-sellers-custom-text-after-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.typography_margin }}px 0;
  }

  .ai-best-sellers-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    font-weight: {{ block.settings.price_weight }};
    color: {{ block.settings.price_color }};
    margin: 0 0 {{ block.settings.typography_margin }}px 0;
    padding-top: {{ block.settings.price_padding }}px;
    padding-bottom: {{ block.settings.price_padding }}px;
  }

  .ai-best-sellers-variants-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    flex-wrap: wrap;
    margin: 0;}

  .ai-best-sellers-variant-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    border: 2px solid {{ block.settings.card_border_color }};
    cursor: pointer;
    transition: transform 0.2s ease;
  }

  .ai-best-sellers-variant-{{ ai_gen_id }}:hover {
    transform: scale(1.1);
  }

  @media (max-width: 1200px) {
    .ai-best-sellers-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.card_spacing | times: 3 }}px) / 4);
    }
  }

  @media (max-width: 992px) {
    .ai-best-sellers-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.card_spacing | times: 2 }}px) / 3);
    }
  }

  @media (max-width: 768px) {
    .ai-best-sellers-card-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.card_spacing }}px) / 2);
    }

    .ai-best-sellers-{{ ai_gen_id }} {
      padding: {{ block.settings.container_margin | times: 0.5 }}px;
    }

    .ai-best-sellers-main-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_title_size | times: 0.8 }}px;
    }
  }

  @media (max-width: 480px) {
    .ai-best-sellers-card-{{ ai_gen_id }} {
      flex: 0 0 calc(100% - {{ block.settings.card_spacing }}px);
      min-width: calc(100% - {{ block.settings.card_spacing }}px);
    }

    .ai-best-sellers-{{ ai_gen_id }} {
      padding: {{ block.settings.container_margin | times: 0.3 }}px;
    }

    .ai-best-sellers-main-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.main_title_size | times: 0.7 }}px;
    }
  }
{% endstyle %}
<div class="ai-best-sellers-wrapper-{{ ai_gen_id }}">
  <best-sellers-slider-{{ ai_gen_id }}
    class="ai-best-sellers-{{ ai_gen_id }}"
    data-autoplay="{{ block.settings.autoplay }}"
    data-autoplay-speed="{{ block.settings.autoplay_speed }}"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.main_title != blank %}
      <div class="ai-best-sellers-header-{{ ai_gen_id }}">
        <h2 class="ai-best-sellers-main-title-{{ ai_gen_id }}">{{ block.settings.main_title }}</h2>
      </div>
    {% endif %}
    <div class="ai-best-sellers-slider-{{ ai_gen_id }}">
      <div class="ai-best-sellers-track-{{ ai_gen_id }}">
        {% if block.settings.product_list != blank %}
          {% for product in block.settings.product_list %}
            <div class="ai-best-sellers-card-{{ ai_gen_id }}">
              <div class="ai-best-sellers-image-container-{{ ai_gen_id }}">
                <div class="ai-best-sellers-image-wrapper-{{ ai_gen_id }}">
                <a href="{{ product.url }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 400}}"
                        alt="{{ product.featured_image.alt | escape }}"
                        class="ai-best-sellers-image-{{ ai_gen_id }}"loading="lazy"
                        width="400"
                        height="400"
                      >
                    {% else %}
                      <div class="ai-best-sellers-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </a>
                </div>
              </div>

              <div class="ai-best-sellers-content-{{ ai_gen_id }}">
                <a href="{{ product.url }}" class="ai-best-sellers-title-{{ ai_gen_id }}">
                  {{ product.title }}
                </a>

                <div class="ai-best-sellers-junip-{{ ai_gen_id }}">
                  {% render 'junip-product-summary', product: product %}
                </div>

                {% if block.settings.custom_text_after_title != blank %}
                  <div class="ai-best-sellers-custom-text-after-title-{{ ai_gen_id }}">
                    {{ block.settings.custom_text_after_title }}
                  </div>
                {% endif %}

                {% if product.metafields.custom.sub_title != blank %}
                  {% assign truncated_subtitle = product.metafields.custom.sub_title | strip_html | truncate: block.settings.description_character_limit %}
                  <div class="ai-best-sellers-description-{{ ai_gen_id }}">
                    {{ truncated_subtitle }}
                  </div>
                {% endif %}

                {% if block.settings.custom_text_after_description != blank %}
                  <div class="ai-best-sellers-custom-text-after-description-{{ ai_gen_id }}">
                    {{ block.settings.custom_text_after_description }}
                  </div>
                {% endif %}

                <div class="ai-best-sellers-price-{{ ai_gen_id }}">
                  From {{ product.price | money }}
                </div>

                {% assign color_option = product.options_with_values | where: 'name', 'Color' | first %}
                {% if color_option and color_option.values.size > 1 %}
                  <div class="ai-best-sellers-variants-{{ ai_gen_id }}">
                    {% for color_value in color_option.values limit: 6 %}
                      {% assign color_variant = product.variants | where: 'option1', color_value | first %}
                      {% if color_variant and color_variant.featured_image %}
                        <div
                          class="ai-best-sellers-variant-{{ ai_gen_id }}"
                          style="background-image: url('{{ color_variant.featured_image | image_url: width: 50 }}'); background-size: cover; background-position: center;"
                title="{{ color_value }}"
                ></div>
                      {% else %}
                        {% assign color_hex = color_value | downcase | replace: ' ', '' %}
                        {% case color_hex %}
                          {% when 'red' %}
                            {% assign hex_color = '#ff0000' %}
                          {% when 'blue' %}
                            {% assign hex_color = '#0000ff' %}
                          {% when 'green' %}
                            {% assign hex_color = '#008000' %}
                          {% when 'black' %}
                            {% assign hex_color = '#000000' %}
                          {% when 'white' %}
                            {% assign hex_color = '#ffffff' %}
                          {% when 'yellow' %}
                            {% assign hex_color = '#ffff00' %}
                          {% when 'pink' %}
                            {% assign hex_color = '#ffc0cb' %}
                          {% when 'purple' %}
                            {% assign hex_color = '#800080' %}
                          {% when 'orange' %}
                            {% assign hex_color = '#ffa500' %}
                          {% when 'brown' %}
                            {% assign hex_color = '#a52a2a' %}
                          {% when 'gray', 'grey' %}
                            {% assign hex_color = '#808080' %}
                          {% else %}
                            {% assign hex_color = '#cccccc' %}
                        {% endcase %}
                        <div
                          class="ai-best-sellers-variant-{{ ai_gen_id }}"
                          style="background-color: {{ hex_color }};"
                          title="{{ color_value }}"
                        ></div>
                      {% endif %}
                    {% endfor %}
                  </div>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        {% else %}
          {% for i in (1..6) %}
            <div class="ai-best-sellers-card-{{ ai_gen_id }}">
              <div class="ai-best-sellers-image-container-{{ ai_gen_id }}">
                <div class="ai-best-sellers-image-wrapper-{{ ai_gen_id }}">
                  <div class="ai-best-sellers-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                </div>
              </div>
              <div class="ai-best-sellers-content-{{ ai_gen_id }}">
                <div class="ai-best-sellers-title-{{ ai_gen_id }}">Sample Product {{ i }}</div>
                <div class="ai-best-sellers-description-{{ ai_gen_id }}">Add your best selling products to showcase them here.</div>
                <div class="ai-best-sellers-price-{{ ai_gen_id }}">From $29.99</div>
              </div>
            </div>
          {% endfor %}
        {% endif %}
      </div>
    </div>
  </best-sellers-slider-{{ ai_gen_id }}>
</div>

<script>
  (function() {
    class BestSellersSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-best-sellers-track-{{ ai_gen_id }}');
        this.slider = this.querySelector('.ai-best-sellers-slider-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-best-sellers-card-{{ ai_gen_id }}');
        this.currentIndex = 0;
        this.isDragging = false;
        this.startX = 0;
        this.scrollLeft = 0;
        this.autoplayInterval = null;
        this.autoplayEnabled = this.dataset.autoplay === 'true';
        this.autoplaySpeed = parseInt(this.dataset.autoplaySpeed) * 1000;
      }

      connectedCallback() {
        this.setupEventListeners();
        if (this.autoplayEnabled) {
          this.startAutoplay();
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        this.slider.addEventListener('mousedown', this.handleMouseDown.bind(this));
        this.slider.addEventListener('mousemove', this.handleMouseMove.bind(this));
        this.slider.addEventListener('mouseup', this.handleMouseUp.bind(this));
        this.slider.addEventListener('mouseleave', this.handleMouseUp.bind(this));

        this.slider.addEventListener('touchstart', this.handleTouchStart.bind(this), { passive: true });
        this.slider.addEventListener('touchmove', this.handleTouchMove.bind(this), { passive: true });
        this.slider.addEventListener('touchend', this.handleTouchEnd.bind(this));

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => {
          if (this.autoplayEnabled) this.startAutoplay();
        });

        window.addEventListener('resize', this.handleResize.bind(this));
      }

      handleMouseDown(e) {
        this.isDragging = true;
        this.startX = e.pageX - this.slider.offsetLeft;
        this.scrollLeft = this.slider.scrollLeft;
        this.slider.style.cursor = 'grabbing';
        e.preventDefault(); 
      }

      handleMouseMove(e) {
        if (!this.isDragging) return;
        const x = e.pageX - this.slider.offsetLeft;
        // Smoother 1:1 drag
        const walk = (x - this.startX); 
        this.slider.scrollLeft = this.scrollLeft - walk;
      }

      handleMouseUp() {
        this.isDragging = false;
        this.slider.style.cursor = 'grab';
      }

      handleTouchStart(e) {
        this.startX = e.touches[0].pageX;
        this.scrollLeft = this.slider.scrollLeft;
      }

      handleTouchMove(e) {
        const x = e.touches[0].pageX;
        // Smoother 1:1 drag
        const walk = (x - this.startX); 
        this.slider.scrollLeft = this.scrollLeft - walk;
      }

      handleTouchEnd() {
        // Touch end logic if needed
      }

      handleResize() {
        // Adjust scroll position on resize if needed
      }

      startAutoplay() {
        if (!this.autoplayEnabled || this.cards.length <= 1) return;
        
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, this.autoplaySpeed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      nextSlide() {
        const cardWidth = this.cards[0].offsetWidth + parseInt(this.dataset.cardSpacing || 20);
        const maxScroll = this.track.scrollWidth - this.slider.offsetWidth;
        
        if (this.slider.scrollLeft >= maxScroll -10) {
          this.slider.scrollTo({ left: 0 }); 
        } else {
          this.slider.scrollBy({ left: cardWidth }); 
        }
      }
    }

    customElements.define('best-sellers-slider-{{ ai_gen_id }}', BestSellersSlider{{ ai_gen_id }});
  })();
</script>

