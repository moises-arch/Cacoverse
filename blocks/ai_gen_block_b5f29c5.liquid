{% doc %}
  @prompt
    Create a Shopify custom banner section that includes:
    
    Background image filling the entire banner.
    
    Foreground image (smaller, overlaid on top of the background, aligned bottom-right by default).
    
    Headline (H1) placed prominently in the center or left side.
    
    Sub-heading (paragraph) under the headline.
    
    Call-to-action button below the text.
    
    The section must be fully responsive:
    
    On desktop, show the foreground image overlayed bottom-right.
    
    On mobile, stack the foreground image below the text.
    
    All text and button should stay visible and readable over the background (add an overlay if needed).
    
    Allow customization in the editor: background image, foreground image, headline, sub-head, button label, button link, and alignment (left/center).

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-banner-{{ ai_gen_id }} {
    position: relative;
    min-height: {{ block.settings.banner_height }}px;
    display: flex;
    align-items: center;
    overflow: hidden;
    background-color: {{ block.settings.fallback_color }};
  }

  .ai-custom-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: 1;
  }

  .ai-custom-banner-background-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 1;
  }

  .ai-custom-banner-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
    opacity: 0.3;
  }

  .ai-custom-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-custom-banner-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: {{ settings.page_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    z-index: 3;
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: center;
  }

  .ai-custom-banner-content-{{ ai_gen_id }} {
    {% if block.settings.text_alignment == 'center' %}
      text-align: center;
    {% else %}
      text-align: left;
    {% endif %}
    color: {{ block.settings.text_color }};
  }

  .ai-custom-banner-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-custom-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 24px 0;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-custom-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    transition: all 0.3s ease;
    border: 2px solid {{ block.settings.button_color }};
  }

  .ai-custom-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_color }};
  }

  .ai-custom-banner-foreground-wrapper-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    right: 20px;
    z-index: 4;
    max-width: {{ block.settings.foreground_max_width }}px;
    width: 100%;
  }

  .ai-custom-banner-foreground-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-custom-banner-foreground-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 200px;
    background-color: rgba(244, 244, 244, 0.8);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8px;
  }

  .ai-custom-banner-foreground-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.5;
  }

  .ai-custom-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 6px;
    font-size: 14px;
    color: #666;
    text-align: center;
    z-index: 5;
  }

  @media screen and (min-width: 750px) {
    .ai-custom-banner-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr auto;
      padding: 0 40px;
    }

    .ai-custom-banner-foreground-wrapper-{{ ai_gen_id }} {
      position: static;
      grid-column: 2;
      max-width: none;
      width: {{ block.settings.foreground_max_width }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-custom-banner-{{ ai_gen_id }} {
      min-height: {{ block.settings.banner_height_mobile }}px;
    }

    .ai-custom-banner-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 20px;
      padding: 40px 20px;
    }

    .ai-custom-banner-content-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-custom-banner-foreground-wrapper-{{ ai_gen_id }} {
      position: static;
      order: 2;
      right: auto;
      bottom: auto;
      max-width: 250px;
      margin: 0 auto;
    }

    .ai-custom-banner-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-custom-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<section
  class="ai-custom-banner-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.background_image %}
    <img
      src="{{ block.settings.background_image | image_url: width: 2000 }}"
      alt="{{ block.settings.background_image.alt | escape }}"
      class="ai-custom-banner-background-{{ ai_gen_id }}"
      loading="lazy"
      width="{{ block.settings.background_image.width }}"
      height="{{ block.settings.background_image.height }}"
    >
  {% else %}
    <div class="ai-custom-banner-background-placeholder-{{ ai_gen_id }}">
      {{ 'hero-apparel-1' | placeholder_svg_tag }}
    </div>
  {% endif %}

  <div class="ai-custom-banner-overlay-{{ ai_gen_id }}"></div>

  <div class="ai-custom-banner-container-{{ ai_gen_id }}">
    <div class="ai-custom-banner-content-{{ ai_gen_id }}">
      {% if block.settings.headline != blank %}
        <h1 class="ai-custom-banner-headline-{{ ai_gen_id }}">
          {{ block.settings.headline }}
        </h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-custom-banner-subheading-{{ ai_gen_id }}">
          {{ block.settings.subheading }}
        </div>
      {% endif %}

      {% if block.settings.button_label != blank %}
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-custom-banner-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_label }}
        </a>
      {% endif %}
    </div>

    <div class="ai-custom-banner-foreground-wrapper-{{ ai_gen_id }}">
      {% if block.settings.foreground_image %}
        <img
          src="{{ block.settings.foreground_image | image_url: width: 800 }}"
          alt="{{ block.settings.foreground_image.alt | escape }}"
          class="ai-custom-banner-foreground-{{ ai_gen_id }}"
          loading="lazy"
          width="{{ block.settings.foreground_image.width }}"
          height="{{ block.settings.foreground_image.height }}"
        >
      {% else %}
        <div class="ai-custom-banner-foreground-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>
  </div>

  {% unless block.settings.background_image and block.settings.foreground_image and block.settings.headline != blank %}
    <div class="ai-custom-banner-empty-state-{{ ai_gen_id }}">
      Next, add your background image, foreground image, and headline
    </div>
  {% endunless %}
</section>

