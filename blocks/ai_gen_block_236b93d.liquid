<script>
  (function() {
    class AnnouncementBar{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.blockId = this.dataset.blockId;
        this.storageKey = 'announcement-bar-closed-' + this.blockId;
        this.currentSlide = 0;
        this.autoplayInterval = null;
        this.transitionEffect = this.dataset.transitionEffect || 'slide';
        this.isMobile = window.innerWidth <= 749;
      }

      connectedCallback() {
        if (this.isClosedInStorage()) {
          this.classList.add('hidden');
          return;
        }

        this.slides = this.querySelectorAll('.ai-announcement-bar__slide-{{ ai_gen_id }}');
        this.slidesContainer = this.querySelector('.ai-announcement-bar__slides-{{ ai_gen_id }}');
        this.totalSlides = this.slides.length;

        if (this.totalSlides === 0) {
          return;
        }

        this.setupNavigation();
        this.setupDots();
        this.setupCloseButton();
        this.setupMobileScroll();
        this.setupAutoplay();

        window.addEventListener('resize', () => this.handleResize());
      }

      handleResize() {
        const wasMobile = this.isMobile;
        this.isMobile = window.innerWidth <= 749;

        if (wasMobile !== this.isMobile) {
          this.setupMobileScroll();
        }
      }

      setupMobileScroll() {
        if (!this.isMobile) {
          this.slides.forEach((slide) => {
            const wrapper = slide.querySelector('.ai-announcement-bar__content-wrapper-{{ ai_gen_id }}');
            const content = slide.querySelector('.ai-announcement-bar__content-{{ ai_gen_id }}');
            if (content && wrapper) {
              content.classList.remove('scrolling');
              const originalHTML = content.getAttribute('data-original-html');
              if (originalHTML) {
                content.innerHTML = originalHTML;
              }
            }
          });
          return;
        }

        this.slides.forEach((slide) => {
          const wrapper = slide.querySelector('.ai-announcement-bar__content-wrapper-{{ ai_gen_id }}');
          const content = slide.querySelector('.ai-announcement-bar__content-{{ ai_gen_id }}');
          if (!content || !wrapper) return;

          if (!content.getAttribute('data-original-html')) {
            content.setAttribute('data-original-html', content.innerHTML);
          }

          setTimeout(() => {
            const contentWidth = content.scrollWidth;
            const wrapperWidth = wrapper.offsetWidth;

            if (contentWidth > wrapperWidth) {
              const originalContent = content.innerHTML;
              content.innerHTML = originalContent + originalContent;
              content.classList.add('scrolling');
            } else {
              content.classList.remove('scrolling');
            }
          }, 100);
        });
      }

      setupNavigation() {
        const prevButton = this.querySelector('.ai-announcement-bar__prev-{{ ai_gen_id }}');
        const nextButton = this.querySelector('.ai-announcement-bar__next-{{ ai_gen_id }}');

        if (prevButton) {
          prevButton.addEventListener('click', () => this.previousSlide());
        }

        if (nextButton) {
          nextButton.addEventListener('click', () => this.nextSlide());
        }
      }

      setupDots() {
        const dotsContainer = this.querySelector('.ai-announcement-bar__dots-{{ ai_gen_id }}');
        if (!dotsContainer || this.totalSlides <= 1) {
          return;
        }

        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.classList.add('ai-announcement-bar__dot-{{ ai_gen_id }}');
          dot.setAttribute('aria-label', 'Go to announcement ' + (i + 1));
          if (i === 0) {
            dot.classList.add('active');
          }
          dot.addEventListener('click', () => this.goToSlide(i));
          dotsContainer.appendChild(dot);
        }

        this.dots = dotsContainer.querySelectorAll('.ai-announcement-bar__dot-{{ ai_gen_id }}');
      }

      setupCloseButton() {
        const closeButton = this.querySelector('.ai-announcement-bar__close-{{ ai_gen_id }}');
        if (closeButton) {
          closeButton.addEventListener('click', () => this.handleClose());
        }
      }

      setupAutoplay() {
        const autoplay = this.dataset.autoplay === 'true';
        const speed = parseInt(this.dataset.autoplaySpeed) * 1000 || 5000;

        if (autoplay && this.totalSlides > 1) {
          this.startAutoplay(speed);

          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay(speed));
        }
      }

      startAutoplay(speed) {
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          this.nextSlide();
        }, speed);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      goToSlide(index) {
        if (index === this.currentSlide) return;
        
        const previousSlide = this.currentSlide;
        this.currentSlide = index;
        this.updateSlider(previousSlide);
      }

      nextSlide() {
        const previousSlide = this.currentSlide;
        this.currentSlide = (this.currentSlide + 1) % this.totalSlides;
        this.updateSlider(previousSlide);
      }

      previousSlide() {
        const previousSlide = this.currentSlide;
        this.currentSlide = (this.currentSlide - 1 + this.totalSlides) % this.totalSlides;
        this.updateSlider(previousSlide);
      }

      updateSlider(previousSlide) {
        if (this.transitionEffect === 'fade') {
          this.slides[previousSlide].classList.remove('active');
          this.slides[this.currentSlide].classList.add('active');
        } else {
          this.slidesContainer.classList.add('transitioning');
          const offset = -this.currentSlide * 100;
          this.slidesContainer.style.transform = 'translateX(' + offset + '%)';
          
          this.slides.forEach((slide, index) => {
            if (index === this.currentSlide) {
              slide.classList.add('active');
            } else {
              slide.classList.remove('active');
            }
          });
        }

        if (this.dots) {
          this.dots.forEach((dot, index) => {
            if (index === this.currentSlide) {
              dot.classList.add('active');
            } else {
              dot.classList.remove('active');
            }
          });
        }
      }

      handleClose() {
        this.stopAutoplay();
        this.classList.add('hidden');
        this.saveClosedState();
      }

      isClosedInStorage() {
        try {
          return localStorage.getItem(this.storageKey) === 'true';
        } catch (e) {
          return false;
        }
      }

      saveClosedState() {
        try {
          localStorage.setItem(this.storageKey, 'true');
        } catch (e) {
          console.warn('Could not save announcement bar state');
        }
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }
    }

    customElements.define('announcement-bar-{{ ai_gen_id }}', AnnouncementBar{{ ai_gen_id }});
  })();
</script>



