{% doc %}
  @prompt
    generate  responsive mobile and desktop friendly  testimonial module with start rating
    review text
    
    small photo and name of the person
    
    everything is fully adjustable

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-{{ ai_gen_id }} {
    padding: {{ block.settings.padding }}px;
    background-color: {{ block.settings.background_color }};
    border-radius: {{ block.settings.border_radius }}px;
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
  }

  .ai-testimonial-stars-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.star_spacing }}px;
    margin-bottom: {{ block.settings.stars_margin_bottom }}px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    color: {{ block.settings.star_color }};
  }

  .ai-testimonial-star-empty-{{ ai_gen_id }} {
    color: {{ block.settings.star_empty_color }};
  }

  .ai-testimonial-review-{{ ai_gen_id }} {
    font-size: {{ block.settings.review_font_size }}px;
    line-height: {{ block.settings.review_line_height }};
    color: {{ block.settings.review_text_color }};
    margin-bottom: {{ block.settings.review_margin_bottom }}px;font-style: {% if block.settings.review_italic %}italic{% else %}normal{% endif %};
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.author_gap }}px;
    {% if block.settings.text_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.text_alignment == 'right' %}
      justify-content: flex-end;
    {% else %}
      justify-content: flex-start;
    {% endif %}
  }

  .ai-testimonial-photo-wrapper-{{ ai_gen_id }} {
    width: {{ block.settings.photo_size }}px;
    height: {{ block.settings.photo_size }}px;
    border-radius: {% if block.settings.photo_shape == 'circle' %}50%{% else %}{{ block.settings.photo_border_radius }}px{% endif %};
    overflow: hidden;
    flex-shrink: 0;background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-testimonial-photo-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-photo-wrapper-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    color: #ccc;
  }

  .ai-testimonial-author-info-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    font-size: {{ block.settings.name_font_size }}px;
    font-weight: {{ block.settings.name_font_weight }};
    color: {{ block.settings.name_color }};
    margin: 0;
  }

  .ai-testimonial-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
  }

  .ai-testimonial-empty-state-{{ ai_gen_id }} {
    color: #999;
    font-style: italic;
    text-align: center;
    padding: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_mobile }}px;
      text-align: {{ block.settings.text_alignment_mobile }};
    }

    .ai-testimonial-stars-{{ ai_gen_id }} {
      {% if block.settings.text_alignment_mobile == 'center' %}
        justify-content: center;
      {% elsif block.settings.text_alignment_mobile == 'right' %}
        justify-content: flex-end;
      {% else %}
        justify-content: flex-start;
      {% endif %}
    }

    .ai-testimonial-star-{{ ai_gen_id }} {
      width: {{ block.settings.star_size_mobile }}px;
      height: {{ block.settings.star_size_mobile }}px;
    }

    .ai-testimonial-review-{{ ai_gen_id }} {
      font-size: {{ block.settings.review_font_size_mobile }}px;
    }

    .ai-testimonial-author-{{ ai_gen_id }} {
      {% if block.settings.text_alignment_mobile == 'center' %}
        justify-content: center;
      {% elsif block.settings.text_alignment_mobile == 'right' %}
        justify-content: flex-end;
      {% else %}
        justify-content: flex-start;
      {% endif %}gap: {{ block.settings.author_gap_mobile }}px;
    }

    .ai-testimonial-photo-wrapper-{{ ai_gen_id }} {
      width: {{ block.settings.photo_size_mobile }}px;
      height: {{ block.settings.photo_size_mobile }}px;
    }

    .ai-testimonial-name-{{ ai_gen_id }} {
      font-size: {{ block.settings.name_font_size_mobile }}px;
    }

    .ai-testimonial-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_font_size_mobile }}px;
    }
  }
{% endstyle %}<div class="ai-testimonial-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.show_stars %}
    <div class="ai-testimonial-stars-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        <svg
          class="ai-testimonial-star-{{ ai_gen_id }} {% if i > block.settings.rating %}ai-testimonial-star-empty-{{ ai_gen_id }}{% endif %}"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
        </svg>
      {% endfor %}
    </div>
  {% endif %}

  {% if block.settings.review_text != blank %}
    <div class="ai-testimonial-review-{{ ai_gen_id }}">
      {{ block.settings.review_text }}
    </div>
  {% else %}
    <div class="ai-testimonial-empty-state-{{ ai_gen_id }}">
      Add your testimonial text
    </div>
  {% endif %}

  {% if block.settings.author_name != blank or block.settings.author_photo %}
    <div class="ai-testimonial-author-{{ ai_gen_id }}"><div class="ai-testimonial-photo-wrapper-{{ ai_gen_id }}">
        {% if block.settings.author_photo %}
          <img
            src="{{ block.settings.author_photo | image_url: width: 200}}"
            alt="{{ block.settings.author_name | escape }}"
            class="ai-testimonial-photo-{{ ai_gen_id }}"
            loading="lazy"
            width="200"
            height="200"
          >
        {% else %}
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
          </svg>
        {% endif %}
      </div>

      <div class="ai-testimonial-author-info-{{ ai_gen_id }}">
        {% if block.settings.author_name != blank %}
          <div class="ai-testimonial-name-{{ ai_gen_id }}">
            {{ block.settings.author_name }}
          </div>
        {% endif %}
        {% if block.settings.author_title != blank %}
          <div class="ai-testimonial-title-{{ ai_gen_id }}">
            {{ block.settings.author_title }}
          </div>
        {% endif %}
      </div>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "review_text",
      "label": "Review text",
      "default": "This product exceeded my expectations! The quality is outstanding and the customer service was fantastic. I would definitely recommend this to anyone looking for a reliable solution."
    },
    {
      "type": "text",
      "id": "author_name",
      "label": "Author name",
      "default": "Sarah Johnson"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author title",
      "default": "Verified Customer"
    },
    {
      "type": "image_picker",
      "id": "author_photo",
      "label": "Author photo"
    },
    {
      "type": "header",
      "content": "Star rating"
    },
    {
      "type": "checkbox",
      "id": "show_stars",
      "label": "Show star rating",
      "default": true
    },
    {
      "type": "range",
      "id": "rating",
      "label": "Rating",
      "min": 1,
      "max": 5,
      "step": 1,
      "default": 5
    },
    {
      "type": "range",
      "id": "star_size",
      "label": "Star size",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "star_size_mobile",
      "label": "Star size on mobile",
      "min": 12,
      "max": 40,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "star_spacing",
      "label": "Star spacing",
      "min": 0,
      "max": 10,
      "step": 1,
      "unit": "px",
      "default": 2
    },
    {
      "type": "color",
      "id": "star_color",
      "label": "Star color",
      "default": "#FFD700"
    },
    {
      "type": "color",
      "id": "star_empty_color",
      "label": "Empty star color",
      "default": "#E0E0E0"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "left"
    },
    {
      "type": "select",
      "id": "text_alignment_mobile",
      "label": "Text alignment on mobile",
      "options": [
        {"value": "left", "label": "Left"},
        {"value": "center", "label": "Center"},
        {"value": "right", "label": "Right"}
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum width",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "default": 600
    },
    {
      "type": "range",
      "id": "padding",
      "label": "Padding",
      "min": 0,
      "max": 80,
      "step": 4,
      "unit": "px",
      "default": 32
    },
    {
      "type": "range",
      "id": "padding_mobile",
      "label": "Padding on mobile",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "header",
      "content": "Author photo"
    },
    {
      "type": "select",
      "id": "photo_shape",
      "label": "Photo shape",
      "options": [
        {"value": "circle", "label": "Circle"},
        {"value": "square", "label": "Square"}
      ],
      "default": "circle"
    },
    {
      "type": "range",
      "id": "photo_size",
      "label": "Photo size",
      "min": 30,
      "max": 100,
      "step": 5,
      "unit": "px",
      "default": 50
    },
    {
      "type": "range",
      "id": "photo_size_mobile",
      "label": "Photo size on mobile",
      "min": 30,
      "max": 80,
      "step": 5,
      "unit": "px",
      "default": 40
    },
    {
      "type": "range",
      "id": "photo_border_radius",
      "label": "Photo border radius",
      "min": 0,
      "max": 20,
      "step": 2,
      "unit": "px",
      "default": 8
    },
    {
      "type": "range",
      "id": "author_gap",
      "label": "Gap between photo and text",
      "min": 8,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": 12
    },
    {
      "type": "range",
      "id": "author_gap_mobile",
      "label": "Gap on mobile",
      "min": 8,
      "max": 30,
      "step": 2,
      "unit": "px",
      "default": 10
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "review_font_size",
      "label": "Review font size",
      "min": 12,
      "max": 24,
      "step": 1,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "review_font_size_mobile",
      "label": "Review font size on mobile",
      "min": 12,
