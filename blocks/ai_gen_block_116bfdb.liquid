      "default": 12
    },
    {
      "type": "range",
      "id": "shadow_opacity",
      "label": "Shadow opacity",
      "min": 0,
      "max": 30,
      "step": 5,
      "unit": "%",
      "default": 10
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
