{% doc %}
  @prompt
    generate a category section  for the wd-40 microfiber product line 
    
    left:    breadcrumb with home icon.
    
    heading .
    sub heading.
    amount of product in the section with an icon .
    
    right:  foreground image
    
    all the content can be  fully adjusted in the admin
    
    
    add animations for foregound and background. 
    
    background color or gradient , the background has a white all over covering the whole section. 
    
    
    inspire in this for the breadcrumb:   <div class="ai-collection-header__container-{{ ai_gen_id }}">
        <div class="ai-collection-header__content-{{ ai_gen_id }}">
          {% if block.settings.show_breadcrumbs %}
            <div class="ai-collection-header__breadcrumbs-{{ ai_gen_id }}">
              <a href="/" class="ai-collection-header__breadcrumb-link-{{ ai_gen_id }}">Home</a>
              <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}">/</span>
              {% if collection %}
                <span>{{ collection.title }}</span>
              {% else %}
                <span>{{ block.settings.title }}</span>
              {% endif %}
            </div>
    
    , display the collection title in the breadcrumb
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-category-section-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    {% if block.settings.use_gradient %}
      background: {{ block.settings.background_gradient }};
    {% else %}
      background-color: {{ block.settings.background_color }};
    {% endif %}
  }

  .ai-category-section__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 60px;
    align-items: center;
    position: relative;
    z-index: 2;
  }

  .ai-category-section__content-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateX(-40px);
  }

  .ai-category-section__content-{{ ai_gen_id }}.animate {
    animation: ai-slide-in-left-{{ ai_gen_id }} 0.8s ease-out forwards;
  }

  @keyframes ai-slide-in-left-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .ai-category-section__breadcrumbs-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-bottom: {{ block.settings.breadcrumb_spacing }}px;
    font-size: {{ block.settings.breadcrumb_font_size }}px;
    color: {{ block.settings.breadcrumb_color }};
  }

  .ai-category-section__breadcrumb-link-{{ ai_gen_id }} {
    color: {{ block.settings.breadcrumb_color }};
    text-decoration: none;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    gap: 6px;
  }

  .ai-category-section__breadcrumb-link-{{ ai_gen_id }}:hover {
    opacity: 0.7;
  }

  .ai-category-section__breadcrumb-icon-{{ ai_gen_id }} {
    width: {{ block.settings.breadcrumb_icon_size }}px;
    height: {{ block.settings.breadcrumb_icon_size }}px;
    flex-shrink: 0;
  }

  .ai-category-section__breadcrumb-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.breadcrumb_color }};
  }

  .ai-category-section__breadcrumb-separator-{{ ai_gen_id }} {
    margin: 0 4px;
    color: {{ block.settings.breadcrumb_color }};
  }

  .ai-category-section__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_font_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    line-height: 1.2;
    font-weight: 700;
  }

  .ai-category-section__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_font_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    line-height: 1.5;
  }

  .ai-category-section__product-count-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 10px;
    font-size: {{ block.settings.product_count_font_size }}px;
    color: {{ block.settings.product_count_color }};
    font-weight: 600;
  }

  .ai-category-section__product-count-icon-{{ ai_gen_id }} {
    width: {{ block.settings.product_count_icon_size }}px;
    height: {{ block.settings.product_count_icon_size }}px;
    flex-shrink: 0;
  }

  .ai-category-section__product-count-icon-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    fill: {{ block.settings.product_count_icon_color }};
  }

  .ai-category-section__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    opacity: 0;
    transform: translateX(40px);
  }

  .ai-category-section__image-wrapper-{{ ai_gen_id }}.animate {
    animation: ai-slide-in-right-{{ ai_gen_id }} 0.8s ease-out 0.2s forwards;
  }

  @keyframes ai-slide-in-right-{{ ai_gen_id }} {
    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .ai-category-section__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    border-radius: {{ block.settings.image_border_radius }}px;
  }

  .ai-category-section__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-category-section__image-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-category-section__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 12px 20px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 989px) {
    .ai-category-section__container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .ai-category-section__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_font_size }}px * 0.8);
    }

    .ai-category-section__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_font_size }}px * 0.9);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-category-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 }}px {{ block.settings.section_padding_horizontal | times: 0.7 }}px {{ block.settings.section_padding_bottom | times: 0.7 }}px;
    }

    .ai-category-section__heading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_font_size }}px * 0.6);
    }

    .ai-category-section__subheading-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subheading_font_size }}px * 0.8);
    }
  }
{% endstyle %}

<category-section-{{ ai_gen_id }} class="ai-category-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-section__container-{{ ai_gen_id }}">
    <div class="ai-category-section__content-{{ ai_gen_id }}">
      {% if block.settings.show_breadcrumb %}
        <div class="ai-category-section__breadcrumbs-{{ ai_gen_id }}">
          <a href="{{ block.settings.breadcrumb_home_link }}" class="ai-category-section__breadcrumb-link-{{ ai_gen_id }}">
            <span class="ai-category-section__breadcrumb-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
              </svg>
            </span>
            {{ block.settings.breadcrumb_home_text }}
          </a>
          <span class="ai-category-section__breadcrumb-separator-{{ ai_gen_id }}">/</span>
          {% if collection %}
            <span>{{ collection.title }}</span>
          {% else %}
            <span>{{ block.settings.breadcrumb_current_text }}</span>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h1 class="ai-category-section__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-category-section__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.show_product_count %}
        <div class="ai-category-section__product-count-{{ ai_gen_id }}">
          <span class="ai-category-section__product-count-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
              <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
            </svg>
          </span>
          <span>{{ block.settings.product_count_text }}</span>
        </div>
      {% endif %}
    </div>

    <div class="ai-category-section__image-wrapper-{{ ai_gen_id }}">
      {% if block.settings.foreground_image %}
        <img
          src="{{ block.settings.foreground_image | image_url: width: 1200 }}"
          alt="{{ block.settings.foreground_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.foreground_image.width }}"
          height="{{ block.settings.foreground_image.height }}"
          class="ai-category-section__image-{{ ai_gen_id }}"
        >
      {% else %}
        <div class="ai-category-section__image-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
          <div class="ai-category-section__empty-state-{{ ai_gen_id }}">
            Add a product image
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</category-section-{{ ai_gen_id }}>

<script>
  (function() {
    class CategorySection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.content = this.querySelector('.ai-category-section__content-{{ ai_gen_id }}');
        this.imageWrapper = this.querySelector('.ai-category-section__image-wrapper-{{ ai_gen_id }}');
      }

      connectedCallback() {
        this.setupIntersectionObserver();
      }

      setupIntersectionObserver() {
        const options = {
          threshold: 0.2,
          rootMargin: '0px 0px -100px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
          entries.forEach(entry => {
            if (entry.isIntersecting) {
              this.content.classList.add('animate');
              this.imageWrapper.classList.add('animate');
              observer.unobserve(entry.target);
            }
          });
        }, options);

        observer.observe(this);
      }
    }

    customElements.define('category-section-{{ ai_gen_id }}', CategorySection{{ ai_gen_id }});
  })();
</script>

