</bestseller-slider-{{ ai_gen_id }}><script>
  (function() {
    class BestsellerSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.slider = null;
        this.isDragging = false;
        this.startPos = 0;
        this.currentTranslate = 0;
        this.prevTranslate = 0;
        this.currentIndex = 0;
        this.autoplayInterval = null;
        this.animationId = null;
      }

      connectedCallback() {
        this.slider = this.querySelector('.ai-bestseller-slider-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-bestseller-product-card-{{ ai_gen_id }}');
        this.totalCards = this.cards.length;
        if (this.totalCards === 0) return;

        this.setupEventListeners();
        this.setupAutoplay();
        this.updateSliderPosition();
      }

      disconnectedCallback() {
        this.stopAutoplay();
      }

      setupEventListeners() {
        this.slider.addEventListener('mousedown', this.handleStart.bind(this));
        this.slider.addEventListener('touchstart', this.handleStart.bind(this));
        this.slider.addEventListener('mouseup', this.handleEnd.bind(this));
        this.slider.addEventListener('touchend', this.handleEnd.bind(this));
        this.slider.addEventListener('mousemove', this.handleMove.bind(this));
        this.slider.addEventListener('touchmove', this.handleMove.bind(this));
        this.slider.addEventListener('mouseleave', this.handleEnd.bind(this));

        this.addEventListener('mouseenter', () => this.stopAutoplay());
        this.addEventListener('mouseleave', () => this.setupAutoplay());

        window.addEventListener('resize', () => {
          this.updateSliderPosition();
        });
      }

      handleStart(e) {
        this.isDragging = true;
        this.startPos = this.getPositionX(e);
        this.slider.style.cursor = 'grabbing';
        this.stopAutoplay();
      }

      handleMove(e) {
        if (!this.isDragging) return;
        e.preventDefault();
        
        const currentPosition = this.getPositionX(e);
        const diff = currentPosition - this.startPos;
        this.currentTranslate = this.prevTranslate + diff;
        this.setSliderPosition();}

      handleEnd() {
        if (!this.isDragging) return;
        this.isDragging = false;
        this.slider.style.cursor = 'grab';
        
        const movedBy = this.currentTranslate - this.prevTranslate;
        const threshold = 50;
        
        if (Math.abs(movedBy) > threshold) {
          if (movedBy < 0 && this.currentIndex < this.getMaxIndex()) {
            this.currentIndex++;
          } else if (movedBy > 0 && this.currentIndex > 0) {
            this.currentIndex--;
          }}
        
        this.updateSliderPosition();
        this.setupAutoplay();
      }

      getPositionX(e) {
        return e.type.includes('mouse') ? e.clientX : e.touches[0].clientX;
      }

      getMaxIndex() {
        const visibleCards = this.getVisibleCards();
        return Math.max(0, this.totalCards - visibleCards);
      }

      getVisibleCards() {
        const containerWidth = this.offsetWidth;
        const cardWidth = this.cards[0]?.offsetWidth || 0;
        return Math.floor(containerWidth / cardWidth);
      }

      updateSliderPosition() {
        const cardWidth = this.cards[0]?.offsetWidth || 0;
        this.currentTranslate = -this.currentIndex * cardWidth;
        this.prevTranslate = this.currentTranslate;
        this.setSliderPosition();
      }

      setSliderPosition() {
        this.slider.style.transform = `translateX(${this.currentTranslate}px)`;
      }

      setupAutoplay() {
        if (this.dataset.autoplay === 'true') {
          this.stopAutoplay();
          const speed = parseInt(this.dataset.autoplaySpeed) * 1000;
          this.autoplayInterval = setInterval(() => {
            this.nextSlide();
          }, speed);
        }
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      nextSlide() {
        if (this.currentIndex >= this.getMaxIndex()) {
          this.currentIndex = 0;
        } else {
          this.currentIndex++;
        }
        this.updateSliderPosition();
      }
    }

    customElements.define('bestseller-slider-{{ ai_gen_id }}', BestsellerSlider{{ ai_gen_id }});
  })();
</script>

