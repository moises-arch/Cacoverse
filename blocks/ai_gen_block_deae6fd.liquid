{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    color: {{ block.settings.text_color }};
    padding: {{ block.settings.padding_top }}px 0 0;
    font-family: {{ block.settings.text_color | font_family }};
  }

  .ai-footer-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 {{ block.settings.container_padding }}px;
  }

  .ai-footer-main-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: 2fr repeat(4, 1fr);
    gap: {{ block.settings.column_gap }}px;
    padding-bottom: {{ block.settings.main_padding_bottom }}px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-footer-brand-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.brand_gap }}px;
    padding-right: 20px;
  }

  .ai-footer-logo-{{ ai_gen_id }} {
    max-width: {{ block.settings.logo_width }}px;
  }

  .ai-footer-logo-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-footer-logo-placeholder-{{ ai_gen_id }} {
    background-color: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    overflow: hidden;
    padding: 20px;
  }

  .ai-footer-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    display: block;
    opacity: 0.2;
  }

  .ai-footer-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_font_size }}px;
    line-height: {{ block.settings.description_line_height }};
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-footer-description-{{ ai_gen_id }} p {
    margin: 0;
  }

  .ai-footer-social-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.social_gap }}px;
    flex-wrap: wrap;
    margin-top: 8px;
  }

  .ai-footer-social-link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.social_icon_size }}px;
    height: {{ block.settings.social_icon_size }}px;
    background-color: {{ block.settings.social_bg }};
    color: {{ block.settings.social_color }};
    border-radius: {{ block.settings.social_radius }}px;
    text-decoration: none;
    transition: all 0.2s ease;
  }

  .ai-footer-social-link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.social_hover_bg }};
    color: {{ block.settings.social_hover_color }};
    transform: translateY(-3px);
  }

  .ai-footer-social-link-{{ ai_gen_id }} svg {
    width: 18px;
    height: 18px;
  }

  .ai-footer-column-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
  }

  .ai-footer-column-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.column_title_size }}px;
    font-weight: {{ block.settings.column_title_weight }};
    margin: 0 0 {{ block.settings.title_margin_bottom }}px 0;
    color: {{ block.settings.text_color }};
    letter-spacing: {{ block.settings.title_letter_spacing }}px;
    text-transform: {{ block.settings.title_transform }};
  }

  .ai-footer-menu-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.menu_item_gap }}px;
  }

  .ai-footer-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-size: {{ block.settings.link_size }}px;
    line-height: {{ block.settings.link_line_height }};
    transition: color 0.2s ease;
    display: inline-block;
  }

  .ai-footer-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-footer-bottom-{{ ai_gen_id }} {
    padding: {{ block.settings.bottom_padding }}px 0;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 30px;
  }

  .ai-footer-copyright-{{ ai_gen_id }} {
    font-size: {{ block.settings.copyright_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0;
  }

  .ai-footer-custom-svg-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    max-width: {{ block.settings.svg_max_width }}px;
    flex-shrink: 0;
  }

  .ai-footer-custom-svg-{{ ai_gen_id }} svg {
    width: 100%;
    height: auto;
    max-height: {{ block.settings.svg_max_height }}px;
    display: block;
    color: {{ block.settings.svg_color }};
    opacity: {{ block.settings.svg_opacity | divided_by: 100.0 }};
  }

  @media screen and (max-width: 1200px) {
    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: 1.5fr repeat(4, 1fr);
      gap: {{ block.settings.column_gap | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 990px) {
    .ai-footer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.8 }}px 0 0;
    }

    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: repeat(3, 1fr);
      gap: {{ block.settings.column_gap | times: 0.7 }}px;
      padding-bottom: {{ block.settings.main_padding_bottom | times: 0.8 }}px;
    }

    .ai-footer-brand-{{ ai_gen_id }} {
      grid-column: 1 / -1;
      padding-right: 0;
      max-width: 500px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-footer-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.6 }}px 0 0;
    }

    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
      gap: {{ block.settings.column_gap | times: 0.6 }}px {{ block.settings.column_gap | times: 0.5 }}px;
      padding-bottom: {{ block.settings.main_padding_bottom | times: 0.7 }}px;
    }

    .ai-footer-brand-{{ ai_gen_id }} {
      gap: {{ block.settings.brand_gap | times: 0.8 }}px;
    }

    .ai-footer-column-title-{{ ai_gen_id }} {
      margin-bottom: {{ block.settings.title_margin_bottom | times: 0.8 }}px;
    }

    .ai-footer-menu-{{ ai_gen_id }} {
      gap: {{ block.settings.menu_item_gap | times: 0.8 }}px;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: flex-start;
      gap: 20px;
      padding: {{ block.settings.bottom_padding | times: 0.8 }}px 0;
    }

    .ai-footer-custom-svg-{{ ai_gen_id }} {
      width: 100%;
      justify-content: flex-start;
      max-width: 100%;
    }
  }

  @media screen and (max-width: 550px) {
    .ai-footer-main-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.column_gap | times: 0.6 }}px;
    }

    .ai-footer-bottom-{{ ai_gen_id }} {
      text-align: center;
      align-items: center;
    }

    .ai-footer-custom-svg-{{ ai_gen_id }} {
      justify-content: center;
    }
  }
  /* ——— Mobile: 2 columnas de menús ——— */
@media (max-width: 749px){
  .ai-footer-main-{{ ai_gen_id }}{
    grid-template-columns: repeat(2, minmax(0,1fr)) !important;
  }
  /* La columna de marca ocupa todo el ancho y debajo van los menús en 2 cols */
  .ai-footer-brand-{{ ai_gen_id }}{
    grid-column: 1 / -1;
  }
}

/* Evita que a <550px vuelva a 1 columna */
@media (max-width: 550px){
  .ai-footer-main-{{ ai_gen_id }}{
    grid-template-columns: repeat(2, minmax(0,1fr)) !important;
  }
}

