{% doc %}
  @prompt
    create a join our news letter  form  like the one in this website:  https://www.helloprint.es/, error, for mobile make the content full width and centered 
    
    add the option to add a discount code  to display it after subscribe , display the Input field full width in mobile
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    width: 100%;
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
    width: 100%;
  }

  .ai-newsletter-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    margin: 0 0 0px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-newsletter-subtext-{{ ai_gen_id }} {
    margin: 0;
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.5;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-newsletter-form-content-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;
    align-items: flex-start;
  }

  .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    width: 100%;
    padding: 14px 16px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: 16px;
    transition: border-color 0.2s ease;
    box-sizing: border-box; /* ðŸ‘ˆ asegura 100% real no fake full width */
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.input_focus_border_color }};
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: 14px 32px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: 16px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s ease, transform 0.1s ease;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-newsletter-button-{{ ai_gen_id }}:active {
    transform: scale(0.98);
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: 8px;
    font-size: 14px;
    line-height: 1.4;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_color }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_color }};
  }

  .ai-newsletter-discount-{{ ai_gen_id }} {
    margin-top: 12px;
    padding: 16px;
    background-color: {{ block.settings.discount_background }};
    border: 2px dashed {{ block.settings.discount_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    text-align: center;
  }

  .ai-newsletter-discount-label-{{ ai_gen_id }} {
    display: block;
    font-size: 14px;
    color: {{ block.settings.text_color }};
    margin-bottom: 8px;
  }

  .ai-newsletter-discount-code-{{ ai_gen_id }} {
    display: inline-block;
    padding: 8px 16px;
    background-color: {{ block.settings.input_background }};
    border: 1px solid {{ block.settings.input_border_color }};
    border-radius: 4px;
    font-size: 18px;
    font-weight: 700;
    color: {{ block.settings.heading_color }};
    letter-spacing: 1px;
  }

  @media screen and (max-width: 768px) {
    .ai-newsletter-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px 0 {{ block.settings.padding_bottom | times: 0.7 }}px;
      width: 100%;
    }

    .ai-newsletter-container-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: 24px;
      max-width: 100%;
      width: 100%;
      padding: 0 16px; /* full width con un pequeÃ±o safe padding */
    }

    .ai-newsletter-content-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-newsletter-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-newsletter-form-content-{{ ai_gen_id }} {
      flex-direction: column;
      width: 100%;
      align-items: stretch; /* ðŸ‘ˆ input y botÃ³n full width stackeados */
    }

    .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
      width: 100%;
    }

    .ai-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
      padding: 14px 24px;
    }

    .ai-newsletter-discount-{{ ai_gen_id }} {
      width: 100%;
      box-sizing: border-box;
    }
  }
{% endstyle %}

<div class="ai-newsletter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {%- form 'contact' -%}
    <input type="hidden" name="contact[tags]" value="newsletter">
    
    <div class="ai-newsletter-container-{{ ai_gen_id }}">
      <div class="ai-newsletter-content-{{ ai_gen_id }}">
        {%- if block.settings.heading != blank -%}
          <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {%- endif -%}
        {%- if block.settings.subtext != blank -%}
          <p class="ai-newsletter-subtext-{{ ai_gen_id }}">{{ block.settings.subtext }}</p>
        {%- endif -%}
      </div>

      <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
        <div class="ai-newsletter-form-content-{{ ai_gen_id }}">
          <div class="ai-newsletter-input-wrapper-{{ ai_gen_id }}">
            <input
              type="email"
              name="contact[email]"
              class="ai-newsletter-input-{{ ai_gen_id }}"
              value="{{ form.email }}"
              placeholder="{{ block.settings.input_placeholder }}"
              aria-required="true"
              autocorrect="off"
              autocapitalize="off"
              autocomplete="email"
              {% if form.errors %}
                aria-invalid="true"
                aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
              {% endif %}
              {% if form.posted_successfully? %}
                aria-describedby="ai-newsletter-success-{{ ai_gen_id }}"
              {% endif %}
              required
            >
            {%- if form.errors -%}
              <div
                id="ai-newsletter-error-{{ ai_gen_id }}"
                class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}"
              >
                {{ form.errors.messages.email }}
              </div>
            {%- endif -%}
            {%- if form.posted_successfully? -%}
              <div
                id="ai-newsletter-success-{{ ai_gen_id }}"
                class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}"
              >
                {{ block.settings.success_message }}
              </div>
              {%- if block.settings.discount_code != blank -%}
                <div class="ai-newsletter-discount-{{ ai_gen_id }}">
                  <span class="ai-newsletter-discount-label-{{ ai_gen_id }}">{{ block.settings.discount_label }}</span>
                  <span class="ai-newsletter-discount-code-{{ ai_gen_id }}">{{ block.settings.discount_code }}</span>
                </div>
              {%- endif -%}
            {%- endif -%}
          </div>
          <button
            type="submit"
            class="ai-newsletter-button-{{ ai_gen_id }}"
          >
            {{ block.settings.button_text }}
          </button>
        </div>
      </div>
    </div>
  {%- endform -%}
</div>

