    background-color: {{ block.settings.dots_active_color }};
    border-color: {{ block.settings.dots_active_border_color }};
  }

  .ai-slider-dot-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.dots_hover_color }};
  }

