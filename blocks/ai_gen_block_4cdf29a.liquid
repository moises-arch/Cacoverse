{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.slider_background_color }};
  }

  .ai-slider-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: {{ block.settings.slider_height }}px;
  }

  .ai-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform {{ block.settings.transition_speed }}ms ease-in-out;
    height: 100%;
  }

  .ai-slide-{{ ai_gen_id }} {
    min-width: 100%;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .ai-slide-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: {{ block.settings.bg_object_fit }};
    background-position: {{ block.settings.bg_position_x }}% {{ block.settings.bg_position_y }}%;
    background-repeat: {{ block.settings.bg_repeat }};
    z-index: 1;
  }

  .ai-slide-content-wrapper-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 40px;
  }

  .ai-slide-content-{{ ai_gen_id }} {
    flex: 1;
    text-align: {{ block.settings.text_alignment }};
    color: {{ block.settings.text_color }};
  }

  .ai-slide-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: {{ block.settings.headline_weight }};
    color: {{ block.settings.headline_color }};
    margin: 0 0 16px 0;
    line-height: 1.2;
  }

  .ai-slide-subheadline-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheadline_size }}px;
    font-weight: {{ block.settings.subheadline_weight }};
    color: {{ block.settings.subheadline_color }};
    margin: 0 0 24px 0;
    line-height: 1.4;
  }

  .ai-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding }}px {{ block.settings.button_padding | times: 1.5 }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    font-weight: 500;
    transition: all 0.3s ease;
  }

  .ai-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
  }

  .ai-slide-foreground-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    width: {{ block.settings.fg_width }}px;
    height: auto;
    transform: 
      translateX({{ block.settings.fg_position_x }}px) 
      translateY({{ block.settings.fg_position_y }}px) 
      rotate({{ block.settings.fg_rotation }}deg)
      {% if block.settings.fg_flip_h %}scaleX(-1){% endif %}
      {% if block.settings.fg_flip_v %}scaleY(-1){% endif %};
    opacity: {{ block.settings.fg_opacity | divided_by: 100.0 }};
    mix-blend-mode: {{ block.settings.fg_blend_mode }};
  }

  .ai-slider-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: {{ block.settings.arrow_bg_color }};
    color: {{ block.settings.arrow_color }};
    border: none;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 4;
    transition: all 0.3s ease;
  }

  .ai-slider-nav-{{ ai_gen_id }}:hover {
    background: {{ block.settings.arrow_hover_bg_color }};
    color: {{ block.settings.arrow_hover_color }};
  }

  .ai-slider-nav-prev-{{ ai_gen_id }} {
    left: 20px;
  }

  .ai-slider-nav-next-{{ ai_gen_id }} {
    right: 20px;
  }

  .ai-slider-dots-{{ ai_gen_id }} {
    position: absolute;
    bottom: {{ block.settings.dots_offset_y }}px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: {{ block.settings.dots_spacing }}px;
    z-index: 4;
  }

  .ai-slider-dot-{{ ai_gen_id }} {
    width: {{ block.settings.dots_size }}px;
    height: {{ block.settings.dots_size }}px;
    border-radius: {% if block.settings.dots_shape == 'circle' %}50%{% elsif block.settings.dots_shape == 'square' %}0{% else %}{{ block.settings.dots_size | divided_by: 2 }}px{% endif %};
    background-color: {{ block.settings.dots_color }};
    border: {{ block.settings.dots_border_width }}px solid {{ block.settings.dots_border_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

