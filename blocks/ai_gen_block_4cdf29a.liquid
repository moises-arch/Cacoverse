<slider-component-{{ ai_gen_id }} 
  class="ai-slider-{{ ai_gen_id }}"
  data-autoplay="{{ block.settings.autoplay }}"
  data-autoplay-speed="{{ block.settings.autoplay_speed }}"
  data-pause-on-hover="{{ block.settings.pause_on_hover }}"
  data-loop="{{ block.settings.loop }}"
  data-transition="{{ block.settings.transition_type }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-slider-container-{{ ai_gen_id }}">
    <div class="ai-slider-track-{{ ai_gen_id }}">
      {% for i in (1..5) %}
        {% liquid
          assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
          assign slide_enabled = block.settings[slide_enabled_key]
        %}
        
        {% if slide_enabled %}
          {% liquid
            assign headline_key = 'slide_' | append: i | append: '_headline'
            assign subheadline_key = 'slide_' | append: i | append: '_subheadline'
            assign button_text_key = 'slide_' | append: i | append: '_button_text'
            assign button_link_key = 'slide_' | append: i | append: '_button_link'
            assign bg_image_key = 'slide_' | append: i | append: '_bg_image'
            assign fg_image_key = 'slide_' | append: i | append: '_fg_image'
            
            assign headline = block.settings[headline_key]
            assign subheadline = block.settings[subheadline_key]
            assign button_text = block.settings[button_text_key]
            assign button_link = block.settings[button_link_key]
            assign bg_image = block.settings[bg_image_key]
            assign fg_image = block.settings[fg_image_key]
          %}
          
          <div class="ai-slide-{{ ai_gen_id }}" data-slide="{{ i }}">
            {% if bg_image %}
              <div 
                class="ai-slide-background-{{ ai_gen_id }}"
                style="background-image: url('{{ bg_image | image_url: width: 1920 }}');"
              ></div>
            {% else %}
              <div class="ai-slide-background-{{ ai_gen_id }}" style="background-color: {{ block.settings.slider_background_color }};"></div>
            {% endif %}
            
            <div class="ai-slide-content-wrapper-{{ ai_gen_id }}">
              <div class="ai-slide-content-{{ ai_gen_id }}">
                {% if headline != blank %}
                  <h2 class="ai-slide-headline-{{ ai_gen_id }}">{{ headline }}</h2>
                {% endif %}
                
                {% if subheadline != blank %}
                  <p class="ai-slide-subheadline-{{ ai_gen_id }}">{{ subheadline }}</p>
                {% endif %}
                
                {% if button_text != blank and button_link != blank %}
                  <a href="{{ button_link }}" class="ai-slide-button-{{ ai_gen_id }}">
                    {{ button_text }}
                  </a>
                {% endif %}
              </div>
              
              {% if fg_image %}
                <img 
                  src="{{ fg_image | image_url: width: 600 }}"
                  alt="{{ fg_image.alt | escape }}"
                  class="ai-slide-foreground-{{ ai_gen_id }}"
                  loading="lazy"
                >
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
    
    {% if block.settings.show_arrows %}
      <button class="ai-slider-nav-{{ ai_gen_id }} ai-slider-nav-prev-{{ ai_gen_id }}" aria-label="Previous slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="15,18 9,12 15,6"></polyline>
        </svg>
      </button>
      
      <button class="ai-slider-nav-{{ ai_gen_id }} ai-slider-nav-next-{{ ai_gen_id }}" aria-label="Next slide">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <polyline points="9,18 15,12 9,6"></polyline>
        </svg>
      </button>
    {% endif %}
    
    {% if block.settings.show_dots %}
      <div class="ai-slider-dots-{{ ai_gen_id }}">
        {% for i in (1..5) %}
          {% liquid
            assign slide_enabled_key = 'slide_' | append: i | append: '_enabled'
            assign slide_enabled = block.settings[slide_enabled_key]
          %}
          {% if slide_enabled %}
            <button 
              class="ai-slider-dot-{{ ai_gen_id }}{% if forloop.first %} active{% endif %}" 
              data-slide="{{ i }}"
              aria-label="Go to slide {{ i }}"
            ></button>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</slider-component-{{ ai_gen_id }}>

<script>
(function() {
  class SliderComponent{{ ai_gen_id }} extends HTMLElement {
    constructor() {
      super();
      this.currentSlide = 0;
      this.autoplayTimer = null;
      this.isTransitioning = false;
    }

    connectedCallback() {
      this.track = this.querySelector('.ai-slider-track-{{ ai_gen_id }}');
      this.slides = this.querySelectorAll('.ai-slide-{{ ai_gen_id }}');
      this.dots = this.querySelectorAll('.ai-slider-dot-{{ ai_gen_id }}');
      this.prevBtn = this.querySelector('.ai-slider-nav-prev-{{ ai_gen_id }}');
      this.nextBtn = this.querySelector('.ai-slider-nav-next-{{ ai_gen_id }}');
      this.totalSlides = this.slides.length;
      
      if (this.totalSlides <= 1) return;
      
      this.setupEventListeners();
      this.setupAutoplay();
      this.setupKeyboardNav();
      this.setupTouchNav();
    }

    setupEventListeners() {
      if (this.prevBtn) {
        this.prevBtn.addEventListener('click', () => this.prevSlide());
      }
      
      if (this.nextBtn) {
        this.nextBtn.addEventListener('click', () => this.nextSlide());
      }
      
      this.dots.forEach((dot, index) => {
        dot.addEventListener('click', () => this.goToSlide(index));
      });
      
      if (this.dataset.pauseOnHover === 'true') {
        this.addEventListener('mouseenter', () => this.pauseAutoplay());
        this.addEventListener('mouseleave', () => this.resumeAutoplay());
      }
    }

    setupAutoplay() {
      if (this.dataset.autoplay === 'true') {
        this.startAutoplay();
      }
    }

    setupKeyboardNav() {
      this.addEventListener('keydown', (e) => {
        if (e.key === 'ArrowLeft') {
          e.preventDefault();
          this.prevSlide();
        } else if (e.key === 'ArrowRight') {
          e.preventDefault();
          this.nextSlide();
        }
      });
      this.setAttribute('tabindex', '0');
    }

    setupTouchNav() {
      let startX = 0;
      let endX = 0;
      
      this.addEventListener('touchstart', (e) => {
        startX = e.touches[0].clientX;
      });
      
      this.addEventListener('touchend', (e) => {
        endX = e.changedTouches[0].clientX;
        this.handleSwipe(startX, endX);
      });
    }

    handleSwipe(startX, endX) {
      const threshold = 50;
      const diff = startX - endX;
      
      if (Math.abs(diff) > threshold) {
        if (diff > 0) {
          this.nextSlide();
        } else {
          this.prevSlide();
        }
      }
    }

    goToSlide(index) {
      if (this.isTransitioning || index === this.currentSlide) return;
      
      this.isTransitioning = true;
      this.currentSlide = index;
      
      const translateX = -index * 100;
      this.track.style.transform = `translateX(${translateX}%)`;
      
      this.updateDots();
      
      setTimeout(() => {
        this.isTransitioning = false;
      }, parseInt(this.dataset.transitionSpeed) || 500);
    }

    nextSlide() {
      let nextIndex = this.currentSlide + 1;
      
      if (nextIndex >= this.totalSlides) {
        nextIndex = this.dataset.loop === 'true' ? 0 : this.totalSlides - 1;
      }
      
      this.goToSlide(nextIndex);
    }

    prevSlide() {
      let prevIndex = this.currentSlide - 1;
      
      if (prevIndex < 0) {
        prevIndex = this.dataset.loop === 'true' ? this.totalSlides - 1 : 0;
      }
      
      this.goToSlide(prevIndex);
    }

    updateDots() {
      this.dots.forEach((dot, index) => {
        dot.classList.toggle('active', index === this.currentSlide);
      });
    }

    startAutoplay() {
      const speed = parseInt(this.dataset.autoplaySpeed) || 3000;
      this.autoplayTimer = setInterval(() => {
        this.nextSlide();
      }, speed);
    }

    pauseAutoplay() {
      if (this.autoplayTimer) {
        clearInterval(this.autoplayTimer);
        this.autoplayTimer = null;
      }
    }

    resumeAutoplay() {
      if (this.dataset.autoplay === 'true' && !this.autoplayTimer) {
        this.startAutoplay();
      }
    }

    disconnectedCallback() {
      this.pauseAutoplay();
    }
  }

  customElements.define('slider-component-{{ ai_gen_id }}', SliderComponent{{ ai_gen_id }});
})();
</script>

