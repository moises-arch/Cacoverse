<div class="ai-collection-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.background_image != blank or block.settings.use_collection_image %}
    <div class="ai-collection-header__background-{{ ai_gen_id }}">
      {% if block.settings.background_image != blank %}
        <img
          src="{{ block.settings.background_image | image_url: width: 2000 }}"
          alt="{{ block.settings.background_image.alt | escape }}"
          loading="lazy"
          class="ai-collection-header__background-image-{{ ai_gen_id }}"
        >
      {% elsif block.settings.use_collection_image and collection and collection.image %}
        <img
          src="{{ collection.image | image_url: width: 2000 }}"
          alt="{{ collection.image.alt | escape }}"
          loading="lazy"
          class="ai-collection-header__background-image-{{ ai_gen_id }}"
        >
      {% endif %}
      
      <div class="ai-collection-header__background-overlay-{{ ai_gen_id }}"></div>
    </div>
  {% endif %}

  <div class="ai-collection-header__container-{{ ai_gen_id }}">
    <div class="ai-collection-header__content-{{ ai_gen_id }}">
      {% if block.settings.show_breadcrumbs %}
        <div class="ai-collection-header__breadcrumbs-{{ ai_gen_id }}">
          <a href="/" class="ai-collection-header__breadcrumb-link-{{ ai_gen_id }}">Home</a>
          <span class="ai-collection-header__breadcrumb-separator-{{ ai_gen_id }}">/</span>
          {% if collection %}
            <span>{{ collection.title }}</span>
          {% else %}
            <span>{{ block.settings.title }}</span>
          {% endif %}
        </div>
      {% endif %}

      <h1 class="ai-collection-header__title-{{ ai_gen_id }}">
        {% if collection %}
          {{ collection.title }}
        {% else %}
          {{ block.settings.title }}
        {% endif %}
      </h1>

      {% if block.settings.show_description %}
        <div class="ai-collection-header__description-{{ ai_gen_id }}">
          {% if collection and collection.description != blank %}
            {{ collection.description }}
          {% elsif block.settings.description != blank %}
            {{ block.settings.description }}
          {% endif %}
        </div>
      {% endif %}

      <div class="ai-collection-header__meta-{{ ai_gen_id }}">
        {% if block.settings.show_product_count and collection %}
          <div class="ai-collection-header__product-count-{{ ai_gen_id }}">
            <span class="ai-collection-header__product-count-icon-{{ ai_gen_id }}">
              <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="7" height="7"></rect>
                <rect x="14" y="3" width="7" height="7"></rect>
                <rect x="14" y="14" width="7" height="7"></rect>
                <rect x="3" y="14" width="7" height="7"></rect>
              </svg>
            </span>
            <span>
              {{ collection.products_count }}
              {% if collection.products_count == 1 %}
                product
              {% else %}
                products
              {% endif %}
            </span>
          </div>
        {% endif %}

        {% if block.settings.button_text != blank and block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-collection-header__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% endif %}
      </div>
    </div>

    {% if block.settings.show_products and collection %}
      <collection-header-carousel-{{ ai_gen_id }} class="ai-collection-header__products-{{ ai_gen_id }}">
        {% assign random_products = collection.products | sample: 6 %}
        {% if random_products.size > 0 %}
          {% for product in random_products %}
            <a 
              href="{{ product.url }}" 
              class="ai-collection-header__product-card-{{ ai_gen_id }}"
              data-product-index="{{ forloop.index0 }}"
            >
              <div class="ai-collection-header__product-image-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 200 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    loading="lazy"
                    width="200"
                    height="200"
                  >
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag }}
                {% endif %}
              </div>
              <div class="ai-collection-header__product-info-{{ ai_gen_id }}">
                <h3 class="ai-collection-header__product-title-{{ ai_gen_id }}">{{ product.title }}</h3>
                {% if product.selected_or_first_available_variant.sku != blank %}
                  <div class="ai-collection-header__product-sku-{{ ai_gen_id }}">
                    SKU: {{ product.selected_or_first_available_variant.sku }}
                  </div>
                {% endif %}
                <div class="ai-collection-header__product-price-{{ ai_gen_id }}">
                  {{ product.price | money }}
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-collection-header__product-compare-price-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                  {% endif %}
                </div>
              </div>
            </a>
          {% endfor %}
        {% endif %}
      </collection-header-carousel-{{ ai_gen_id }}>
    {% elsif block.settings.show_products %}
      <div class="ai-collection-header__products-{{ ai_gen_id }}">
        <div class="ai-collection-header__empty-state-{{ ai_gen_id }}">
          Add this block to a collection page to display random products
        </div>
      </div>
    {% endif %}
  </div>
</div>

<script>
  (function() {
    class CollectionHeaderCarousel{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.cards = [];
        this.intervalId = null;
      }

      connectedCallback() {
        this.cards = Array.from(this.querySelectorAll('.ai-collection-header__product-card-{{ ai_gen_id }}'));
        
        if (this.cards.length > 0) {
          this.cards[0].classList.add('active');
          this.startCarousel();
        }
      }

      startCarousel() {
        this.intervalId = setInterval(() => {
          this.cards[this.currentIndex].classList.remove('active');
          
          this.currentIndex = (this.currentIndex + 1) % this.cards.length;
          
          this.cards[this.currentIndex].classList.add('active');
        }, 5000);
      }

      disconnectedCallback() {
        if (this.intervalId) {
          clearInterval(this.intervalId);
        }
      }
    }

    customElements.define('collection-header-carousel-{{ ai_gen_id }}', CollectionHeaderCarousel{{ ai_gen_id }});
  })();
</script>

