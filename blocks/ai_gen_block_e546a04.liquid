      "content": "Content"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Search"
    },
    {
      "type": "text",
      "id": "results_for_text",
      "label": "Results for text",
      "default": "Search results for"
    },
    {
      "type": "text",
      "id": "result_text",
      "label": "Single result text",
      "default": "product found"
    },
    {
      "type": "text",
      "id": "results_text",
      "label": "Multiple results text",
      "default": "products found"
    },
    {
      "type": "text",
      "id": "no_results_heading",
      "label": "No results heading",
      "default": "No products found"
    },
    {
      "type": "text",
      "id": "no_results_text",
      "label": "No results text",
