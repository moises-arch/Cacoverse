    {
      "type": "text",
      "id": "empty_state_text",
      "label": "Empty state text",
      "default": "Start searching to discover our products."
    },
    {
      "type": "header",
      "content": "Breadcrumb"
    },
    {
      "type": "checkbox",
      "id": "show_breadcrumb",
      "label": "Show breadcrumb",
      "default": true
    },
    {
      "type": "text",
      "id": "home_text",
      "label": "Home text",
      "default": "Home"
    },
    {
      "type": "text",
      "id": "search_text",
      "label": "Search text",
      "default": "Search"
    },
    {
      "type": "header",
      "content": "Product card"
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_price",
      "label": "Show price",
