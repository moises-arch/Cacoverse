{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ppe-categories-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-ppe-categories__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-ppe-categories__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-ppe-categories__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-ppe-categories__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-ppe-categories__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: {{ block.settings.grid_gap }}px;
    margin-top: {{ block.settings.grid_spacing }}px;
  }

  .ai-ppe-category-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-ppe-category-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .ai-ppe-category-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-top: {{ block.settings.image_aspect_ratio }}%;
    overflow: hidden;
    background-color: #f5f5f5;
  }

  .ai-ppe-category-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-ppe-category-card-{{ ai_gen_id }}:hover .ai-ppe-category-card__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-ppe-category-card__content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-ppe-category-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-ppe-category-card__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_description_size }}px;
    color: {{ block.settings.card_description_color }};
    margin: 0 0 20px;
    line-height: 1.6;
    flex-grow: 1;
  }

  .ai-ppe-category-card__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 500;
    transition: background-color 0.3s ease, transform 0.2s ease;
    align-self: flex-start;
  }

  .ai-ppe-category-card__link-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateX(4px);
  }

  .ai-ppe-category-card__link-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
    transition: transform 0.2s ease;
  }

  .ai-ppe-category-card__link-{{ ai_gen_id }}:hover .ai-ppe-category-card__link-icon-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-ppe-category-card__placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f5f5f5;
  }

  .ai-ppe-category-card__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 768px) {
    .ai-ppe-categories__grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-ppe-categories__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.75 }}px;
    }

    .ai-ppe-categories__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<div class="ai-ppe-categories-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ppe-categories__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-ppe-categories__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-ppe-categories__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-ppe-categories__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-ppe-categories__grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign category_enabled_key = 'category_' | append: i | append: '_enabled'
          assign category_image_key = 'category_' | append: i | append: '_image'
          assign category_title_key = 'category_' | append: i | append: '_title'
          assign category_description_key = 'category_' | append: i | append: '_description'
          assign category_link_key = 'category_' | append: i | append: '_link'
          assign category_button_text_key = 'category_' | append: i | append: '_button_text'

          assign category_enabled = block.settings[category_enabled_key]
          assign category_image = block.settings[category_image_key]
          assign category_title = block.settings[category_title_key]
          assign category_description = block.settings[category_description_key]
          assign category_link = block.settings[category_link_key]
          assign category_button_text = block.settings[category_button_text_key]
        %}

        {% if category_enabled %}
          <div class="ai-ppe-category-card-{{ ai_gen_id }}">
            <div class="ai-ppe-category-card__image-wrapper-{{ ai_gen_id }}">
              {% if category_image %}
                <img
                  src="{{ category_image | image_url: width: 800 }}"
                  alt="{{ category_title | escape }}"
                  class="ai-ppe-category-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="{{ 800 | times: block.settings.image_aspect_ratio | divided_by: 100 }}"
                >
              {% else %}
                <div class="ai-ppe-category-card__placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-ppe-category-card__content-{{ ai_gen_id }}">
              {% if category_title != blank %}
                <h3 class="ai-ppe-category-card__title-{{ ai_gen_id }}">{{ category_title }}</h3>
              {% endif %}

              {% if category_description != blank %}
                <div class="ai-ppe-category-card__description-{{ ai_gen_id }}">{{ category_description }}</div>
              {% endif %}

              {% if category_link != blank %}
                <a href="{{ category_link }}" class="ai-ppe-category-card__link-{{ ai_gen_id }}">
                  {{ category_button_text }}
                  <svg class="ai-ppe-category-card__link-icon-{{ ai_gen_id }}" viewBox="0 0 16 16" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M6 3L11 8L6 13" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                </a>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

