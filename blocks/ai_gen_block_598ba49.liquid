{% doc %}
  @prompt
    create a join our news letter  form  like the one in this website:  https://www.helloprint.es/, make it in 1 line for desktop and  centered multi line in mobile 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-newsletter-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-newsletter-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 32px;
  }

  .ai-newsletter-content-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-newsletter-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 8px;
    font-weight: 600;
    line-height: 1.2;
  }

  .ai-newsletter-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
    opacity: 0.9;
  }

  .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.form_width }}px;
  }

  .ai-newsletter-form-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.form_gap }}px;
    align-items: stretch;
  }

  .ai-newsletter-input-wrapper-{{ ai_gen_id }} {
    flex: 1;
    min-width: 0;
  }

  .ai-newsletter-input-{{ ai_gen_id }} {
    width: 100%;
    padding: {{ block.settings.input_padding }}px;
    border: {{ block.settings.input_border_width }}px solid {{ block.settings.input_border_color }};
    border-radius: {{ block.settings.input_border_radius }}px;
    background-color: {{ block.settings.input_background }};
    color: {{ block.settings.input_text_color }};
    font-size: {{ block.settings.input_font_size }}px;
    transition: border-color 0.3s ease;
  }

  .ai-newsletter-input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_text_color }};
    opacity: 0.6;
  }

  .ai-newsletter-input-{{ ai_gen_id }}:focus {
    outline: none;
    border-color: {{ block.settings.button_background }};
  }

  .ai-newsletter-button-{{ ai_gen_id }} {
    padding: {{ block.settings.input_padding }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.3s ease, transform 0.2s ease;
    white-space: nowrap;
  }

  .ai-newsletter-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    transform: translateY(-1px);
  }

  .ai-newsletter-button-{{ ai_gen_id }}:active {
    transform: translateY(0);
  }

  .ai-newsletter-message-{{ ai_gen_id }} {
    margin-top: {{ block.settings.form_gap }}px;
    font-size: 14px;
    padding: 12px;
    border-radius: {{ block.settings.input_border_radius }}px;
  }

  .ai-newsletter-success-{{ ai_gen_id }} {
    color: {{ block.settings.success_text_color }};
    background-color: {{ block.settings.success_background }};
  }

  .ai-newsletter-error-{{ ai_gen_id }} {
    color: {{ block.settings.error_text_color }};
    background-color: {{ block.settings.error_background }};
  }

  .ai-newsletter-privacy-{{ ai_gen_id }} {
    margin-top: {{ block.settings.form_gap }}px;
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    line-height: 1.4;
  }

  @media screen and (max-width: 989px) {
    .ai-newsletter-container-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 24px;
    }

    .ai-newsletter-form-wrapper-{{ ai_gen_id }} {
      width: 100%;
      max-width: 600px;
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-newsletter-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-newsletter-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_top | times: 0.7 }}px {{ block.settings.padding_horizontal | times: 0.7 }}px {{ block.settings.padding_bottom | times: 0.7 }}px;
    }

    .ai-newsletter-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.75 }}px;
    }

    .ai-newsletter-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.85 }}px;
    }

    .ai-newsletter-form-{{ ai_gen_id }} {
      flex-direction: column;
      gap: {{ block.settings.form_gap | times: 0.8 }}px;
    }

    .ai-newsletter-button-{{ ai_gen_id }} {
      width: 100%;
    }
  }
{% endstyle %}

<div class="ai-newsletter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-newsletter-container-{{ ai_gen_id }}">
    <div class="ai-newsletter-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-newsletter-heading-{{ ai_gen_id }}">
          {{ block.settings.heading }}
        </h2>
      {% endif %}

      {% if block.settings.subtext != blank %}
        <div class="ai-newsletter-subtext-{{ ai_gen_id }}">
          {{ block.settings.subtext }}
        </div>
      {% endif %}
    </div>

    <div class="ai-newsletter-form-wrapper-{{ ai_gen_id }}">
      {% form 'customer', class: 'ai-newsletter-form-content' %}
        {% if form.posted_successfully? %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-success-{{ ai_gen_id }}" id="ai-newsletter-success-{{ ai_gen_id }}">
            {{ block.settings.success_message }}
          </div>
        {% else %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div class="ai-newsletter-form-{{ ai_gen_id }}">
            <div class="ai-newsletter-input-wrapper-{{ ai_gen_id }}">
              <input
                type="email"
                name="contact[email]"
                class="ai-newsletter-input-{{ ai_gen_id }}"
                value="{% if customer %}{{ customer.email }}{% endif %}"
                placeholder="{{ block.settings.email_placeholder }}"
                aria-label="{{ block.settings.email_placeholder }}"
                aria-required="true"
                autocorrect="off"
                autocapitalize="off"
                autocomplete="email"
                {% if form.errors %}
                  aria-invalid="true"
                  aria-describedby="ai-newsletter-error-{{ ai_gen_id }}"
                {% endif %}
                required
              >
            </div>
            <button
              type="submit"
              class="ai-newsletter-button-{{ ai_gen_id }}"
              aria-label="{{ block.settings.button_text }}"
            >
              {{ block.settings.button_text }}
            </button>
          </div>

          {% if form.errors %}
            <div
              class="ai-newsletter-message-{{ ai_gen_id }} ai-newsletter-error-{{ ai_gen_id }}"
              id="ai-newsletter-error-{{ ai_gen_id }}"
            >
              {{ form.errors.messages.email }}
            </div>
          {% endif %}

          {% if block.settings.show_privacy_text and block.settings.privacy_text != blank %}
            <div class="ai-newsletter-privacy-{{ ai_gen_id }}">
              {{ block.settings.privacy_text }}
            </div>
          {% endif %}
        {% endif %}
      {% endform %}
    </div>
  </div>
</div>

