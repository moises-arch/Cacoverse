    font-weight: {{ block.settings.custom_text_font_weight }};
    color: {{ block.settings.custom_text_color }};
    margin: {{ block.settings.custom_title_text_top_spacing }}px 0 {{ block.settings.custom_title_text_bottom_spacing }}px 0;
