      font-size: {{ block.settings.main_title_font_size | times: 0.7 }}px;
    }

    .ai-bestseller-image-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.7 }}px;
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }
  }
{% endstyle %}<div class="ai-bestseller-wrapper-{{ ai_gen_id }}">
