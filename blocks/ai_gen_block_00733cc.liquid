  .ai-bestseller-custom-desc-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.custom_text_font_size }}px;
    font-weight: {{ block.settings.custom_text_font_weight }};
    color: {{ block.settings.custom_text_color }};
    margin: {{ block.settings.custom_desc_text_top_spacing }}px 0 {{ block.settings.custom_desc_text_bottom_spacing }}px 0;
    line-height: 1.4;
    text-align: left;
    word-wrap: break-word;
  }

  .ai-bestseller-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_font_size }}px;
    font-weight: {{ block.settings.price_font_weight }};
    color: {{ block.settings.price_color }};
    margin: {{ block.settings.price_top_spacing }}px 0 {{ block.settings.price_bottom_spacing }}px 0;
    text-align: left;
  }

  .ai-bestseller-variants-{{ ai_gen_id }} {
    margin: {{ block.settings.variants_top_spacing }}px 0 {{ block.settings.variants_bottom_spacing }}px 0;
  }

  .ai-bestseller-variant-colors-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.color_swatch_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-bestseller-color-swatch-{{ ai_gen_id }} {
