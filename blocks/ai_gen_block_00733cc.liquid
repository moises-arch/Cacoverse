{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bestseller-wrapper-{{ ai_gen_id }} {
    width: 100%;
    display: flex;
    justify-content: center;
    padding: 0 20px;
    box-sizing: border-box;
  }

  .ai-bestseller-module-{{ ai_gen_id }} {
    max-width: 1500px;
    width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    padding: {{ block.settings.content_spacing }}px;
    background-color: {{ block.settings.background_color }};
    box-sizing: border-box;
    overflow: hidden;
  }

  .ai-bestseller-header-{{ ai_gen_id }} {
    text-align: left;
    margin-bottom: {{ block.settings.header_spacing }}px;
    max-width: 100%;
  }

  .ai-bestseller-main-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.main_title_font_size }}px;
    font-weight: {{ block.settings.main_title_font_weight }};
    color: {{ block.settings.main_title_color }};
    margin: 0;
    line-height: 1.2;
    max-width: 100%;
    word-wrap: break-word;
  }

  .ai-bestseller-slider-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.card_border_radius }}px;
    max-width: 100%;
    width: 100%;
  }

  .ai-bestseller-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    will-change: transform;
    cursor: grab;
    width: 100%;
    gap: {{ block.settings.card_spacing }}px;
  }

  .ai-bestseller-track-{{ ai_gen_id }}:active {
    cursor: grabbing;
  }

  .ai-bestseller-slide-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: {{ block.settings.card_width }}px;
    max-width: calc(100% - 40px);
    background-color: {{ block.settings.card_background_color }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    box-sizing: border-box;
  }

  .ai-bestseller-image-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    margin: 0 auto {{ block.settings.image_bottom_spacing }}px auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.image_border_width }}px solid {{ block.settings.image_border_color }};
    display: block;
  }

  .ai-bestseller-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};
    transition: transform 0.3s ease;
  }

  .ai-bestseller-image-{{ ai_gen_id }}:hover img {
    {% if block.settings.image_hover_effect %}
      transform: scale(1.05);
    {% endif %}
  }

  .ai-bestseller-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: {{ block.settings.image_placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-bestseller-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: {{ block.settings.image_placeholder_opacity | divided_by: 100.0 }};
  }

  .ai-bestseller-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_font_size }}px;
    font-weight: {{ block.settings.title_font_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_bottom_spacing }}px 0;
    line-height: 1.3;
    text-align: left;
    word-wrap: break-word;
  }

  .ai-bestseller-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-bestseller-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-bestseller-reviews-{{ ai_gen_id }} {
    margin: {{ block.settings.reviews_top_spacing }}px 0 {{ block.settings.reviews_bottom_spacing }}px 0;
  }

  .ai-bestseller-custom-title-text-{{ ai_gen_id }} {
