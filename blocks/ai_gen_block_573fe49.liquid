{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-blog-grid-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 20px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-blog-grid__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-blog-grid__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 40px;
  }

  .ai-blog-grid__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-weight: 700;
  }

  .ai-blog-grid__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;
    line-height: 1.6;
  }

  .ai-blog-grid__articles-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
    margin-bottom: 40px;
  }

  .ai-blog-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .ai-blog-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical | plus: 8 }}px {{ block.settings.card_shadow_blur | plus: 10 }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 | plus: 0.1 }});
  }

  .ai-blog-card__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 60%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-blog-card__image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-blog-card-{{ ai_gen_id }}:hover .ai-blog-card__image-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-blog-card__image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-blog-card__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-blog-card__content-{{ ai_gen_id }} {
    padding: 24px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .ai-blog-card__meta-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 12px;
    font-size: 13px;
    color: {{ block.settings.meta_color }};
  }

  .ai-blog-card__category-{{ ai_gen_id }} {
    background-color: {{ block.settings.category_bg_color }};
    color: {{ block.settings.category_text_color }};
    padding: 4px 12px;
    border-radius: 20px;
    font-weight: 600;
    font-size: 12px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-blog-card__date-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .ai-blog-card__title-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_title_size }}px;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 12px;
    font-weight: 700;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-blog-card__excerpt-{{ ai_gen_id }} {
    font-size: {{ block.settings.card_excerpt_size }}px;
    color: {{ block.settings.card_excerpt_color }};
    line-height: 1.6;
    margin: 0 0 20px;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
    flex-grow: 1;
  }

  .ai-blog-card__link-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    color: {{ block.settings.link_color }};
    font-weight: 600;
    font-size: 14px;
    text-decoration: none;
    transition: gap 0.3s ease;
    margin-top: auto;
  }

  .ai-blog-card__link-{{ ai_gen_id }}:hover {
    gap: 12px;
  }

  .ai-blog-card__link-arrow-{{ ai_gen_id }} {
    transition: transform 0.3s ease;
  }

  .ai-blog-card__link-{{ ai_gen_id }}:hover .ai-blog-card__link-arrow-{{ ai_gen_id }} {
    transform: translateX(4px);
  }

  .ai-blog-grid__cta-{{ ai_gen_id }} {
    text-align: center;
    margin-top: 20px;
  }

  .ai-blog-grid__button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 14px 32px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 16px;
    transition: background-color 0.3s ease, transform 0.2s ease;
  }

  .ai-blog-grid__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 989px) {
    .ai-blog-grid__articles-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_tablet }}, 1fr);
    }

    .ai-blog-grid__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.8);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-blog-grid__articles-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: 20px;
    }

    .ai-blog-grid__title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.heading_size }}px * 0.7);
    }

    .ai-blog-card__content-{{ ai_gen_id }} {
      padding: 20px;
    }

    .ai-blog-grid-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.6 }}px 16px {{ block.settings.section_padding_bottom | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="ai-blog-grid-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-blog-grid__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-blog-grid__header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-blog-grid__title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-blog-grid__subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.blog != blank %}
      <div class="ai-blog-grid__articles-{{ ai_gen_id }}">
        {% for article in block.settings.blog.articles limit: block.settings.articles_to_show %}
          <article class="ai-blog-card-{{ ai_gen_id }}">
            <a href="{{ article.url }}" class="ai-blog-card__image-wrapper-{{ ai_gen_id }}">
              {% if article.image %}
                <img
                  src="{{ article.image | image_url: width: 800 }}"
                  alt="{{ article.image.alt | escape }}"
                  class="ai-blog-card__image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="800"
                  height="480"
                >
              {% else %}
                <div class="ai-blog-card__image-placeholder-{{ ai_gen_id }}">
                  {{ 'image' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </a>

            <div class="ai-blog-card__content-{{ ai_gen_id }}">
              <div class="ai-blog-card__meta-{{ ai_gen_id }}">
                {% if block.settings.show_category and article.tags.size > 0 %}
                  <span class="ai-blog-card__category-{{ ai_gen_id }}">{{ article.tags.first }}</span>
                {% endif %}
                {% if block.settings.show_date %}
                  <span class="ai-blog-card__date-{{ ai_gen_id }}">
                    <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                      <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
                      <line x1="16" y1="2" x2="16" y2="6"></line>
                      <line x1="8" y1="2" x2="8" y2="6"></line>
                      <line x1="3" y1="10" x2="21" y2="10"></line>
                    </svg>
                    {{ article.published_at | date: '%b %d, %Y' }}
                  </span>
                {% endif %}
              </div>

              <h3 class="ai-blog-card__title-{{ ai_gen_id }}">
                <a href="{{ article.url }}" style="color: inherit; text-decoration: none;">
                  {{ article.title }}
                </a>
              </h3>

              {% if block.settings.show_excerpt and article.excerpt != blank %}
                <div class="ai-blog-card__excerpt-{{ ai_gen_id }}">
                  {{ article.excerpt | strip_html | truncate: 120 }}
                </div>
              {% endif %}

              <a href="{{ article.url }}" class="ai-blog-card__link-{{ ai_gen_id }}">
                {{ block.settings.read_more_text }}
                <span class="ai-blog-card__link-arrow-{{ ai_gen_id }}">â†’</span>
              </a>
            </div>
          </article>
        {% endfor %}
      </div>

      {% if block.settings.show_view_all %}
        <div class="ai-blog-grid__cta-{{ ai_gen_id }}">
          <a href="{{ block.settings.blog.url }}" class="ai-blog-grid__button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        </div>
      {% endif %}
    {% else %}
      <div style="text-align: center; padding: 60px 20px; background-color: #f9f9f9; border-radius: 8px;">
        <p style="font-size: 16px; color: #666; margin: 0;">Select a blog to display articles</p>
      </div>
    {% endif %}
  </div>
</div>

