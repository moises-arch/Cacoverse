{% doc %}
  @prompt
    white space adjustable

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-whitespace-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.desktop_height }}px;
    background-color: {{ block.settings.background_color }};
    {% if block.settings.background_gradient != blank %}
      background: {{ block.settings.background_gradient }};
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-whitespace-{{ ai_gen_id }} {
      height: {{ block.settings.mobile_height }}px;
    }
  }

  @media screen and (min-width: 750px) and (max-width: 989px) {
    .ai-whitespace-{{ ai_gen_id }} {
      height: {{ block.settings.tablet_height }}px;
    }
  }
{% endstyle %}

<div 
  class="ai-whitespace-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
></div>

{% schema %}
{
  "name": "Adjustable whitespace",
  "settings": [
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "desktop_height",
      "min": 10,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Desktop height",
      "default": 50
    },
    {
      "type": "range",
      "id": "tablet_height",
      "min": 10,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Tablet height",
      "default": 40
    },
    {
      "type": "range",
      "id": "mobile_height",
      "min": 10,
      "max": 200,
      "step": 5,
      "unit": "px",
      "label": "Mobile height",
      "default": 30
    },
    {
      "type": "header",
      "content": "Background"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "color_background",
      "id": "background_gradient",
      "label": "Background gradient"
    }
  ],
  "presets": [
    {
      "name": "Adjustable whitespace"
    }
  ],
  "tag": null,
  "class": "whitespace-block"
}
{% endschema %}