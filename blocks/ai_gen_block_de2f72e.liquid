    margin: 0;
    opacity: 0.8;
  }

  .ai-market-position-content-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: {{ block.settings.content_spacing }}px;
    margin-top: {{ block.settings.content_spacing }}px;
  }

  .ai-market-position-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    padding: {{ block.settings.card_padding }}px;
    border-radius: {{ block.settings.card_border_radius }}px;
    border: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-market-position-section-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: 600;
    margin: 0 0 20px;
    color: {{ block.settings.section_title_color }};
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .ai-market-position-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    color: {{ block.settings.icon_color }};
  }

  .ai-market-position-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.body_text_size }}px;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .ai-market-position-highlights-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .ai-market-position-highlight-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 12px;
    margin-bottom: 16px;
    font-size: {{ block.settings.body_text_size }}px;
  }

  .ai-market-position-highlight-{{ ai_gen_id }}:last-child {
    margin-bottom: 0;
  }

  .ai-market-position-bullet-{{ ai_gen_id }} {
    width: 6px;
    height: 6px;
    background-color: {{ block.settings.bullet_color }};
    border-radius: 50%;
    margin-top: 8px;
    flex-shrink: 0;
  }

  .ai-market-position-stats-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 20px;
    margin-top: 24px;
    padding-top: 24px;
    border-top: 1px solid {{ block.settings.card_border_color }};
  }

  .ai-market-position-stat-{{ ai_gen_id }} {
    text-align: center;
  }

  .ai-market-position-stat-number-{{ ai_gen_id }} {
    font-size: {{ block.settings.stat_number_size }}px;
    font-weight: 700;
    color: {{ block.settings.stat_number_color }};
    margin: 0 0 8px;
  }

  .ai-market-position-stat-label-{{ ai_gen_id }} {
    font-size: {{ block.settings.stat_label_size }}px;
    opacity: 0.8;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-market-position-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
    
    .ai-market-position-stats-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }
{% endstyle %}

