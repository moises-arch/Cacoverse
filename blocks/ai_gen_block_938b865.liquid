{% doc %}
  @prompt
    create a footer socket: place the copyright information aligned to left   and credit cards icons to the right.    text and icons color force to  #acb8c3, I can adjust the icons size. adjust the content to fit into 1500px and responsive.
    make it easy to edit with padding functions, etc , use fonts for he icons 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');

  .ai-footer-socket-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    border-top: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
  }

  .ai-footer-socket-container-{{ ai_gen_id }} {
    max-width: 1500px;
    margin: 0 auto;
    padding: 0 {{ block.settings.padding_horizontal }}px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: {{ block.settings.gap }}px;
  }

  .ai-footer-socket-copyright-{{ ai_gen_id }} {
    color: #acb8c3;
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.4;
    margin: 0;
  }

  .ai-footer-socket-payment-icons-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_gap }}px;
    flex-wrap: wrap;
  }

  .ai-footer-socket-payment-icon-{{ ai_gen_id }} {
    color: #acb8c3;
    font-size: {{ block.settings.icon_size }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ block.settings.icon_size | times: 1.5 }}px;
    height: {{ block.settings.icon_size }}px;
    border: 1px solid #acb8c3;
    border-radius: {{ block.settings.icon_border_radius }}px;
    background-color: {{ block.settings.icon_background_color }};
    transition: all 0.3s ease;
  }

  .ai-footer-socket-payment-icon-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
    border-color: {{ block.settings.icon_hover_color }};
    background-color: {{ block.settings.icon_hover_background }};
  }

  @media screen and (max-width: 749px) {
    .ai-footer-socket-container-{{ ai_gen_id }} {
      flex-direction: {{ block.settings.mobile_layout }};
      text-align: {{ block.settings.mobile_alignment }};
      gap: {{ block.settings.mobile_gap }}px;
    }

    .ai-footer-socket-copyright-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_text_size }}px;
    }

    .ai-footer-socket-payment-icons-{{ ai_gen_id }} {
      {% if block.settings.mobile_alignment == 'center' %}
        justify-content: center;
      {% elsif block.settings.mobile_alignment == 'right' %}
        justify-content: flex-end;
      {% else %}
        justify-content: flex-start;
      {% endif %}
    }

    .ai-footer-socket-payment-icon-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_icon_size }}px;
      width: {{ block.settings.mobile_icon_size | times: 1.5 }}px;
      height: {{ block.settings.mobile_icon_size }}px;
    }
  }
{% endstyle %}

<div class="ai-footer-socket-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-socket-container-{{ ai_gen_id }}">
    <div class="ai-footer-socket-copyright-{{ ai_gen_id }}">
      {% if block.settings.copyright_text != blank %}
        {{ block.settings.copyright_text }}
      {% else %}
        Â© {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.
      {% endif %}
    </div>

    <div class="ai-footer-socket-payment-icons-{{ ai_gen_id }}">
      {% if block.settings.show_visa %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-visa"></i>
        </div>
      {% endif %}

      {% if block.settings.show_mastercard %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-mastercard"></i>
        </div>
      {% endif %}

      {% if block.settings.show_amex %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-amex"></i>
        </div>
      {% endif %}

      {% if block.settings.show_discover %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-discover"></i>
        </div>
      {% endif %}

      {% if block.settings.show_paypal %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-paypal"></i>
        </div>
      {% endif %}

      {% if block.settings.show_apple_pay %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-apple-pay"></i>
        </div>
      {% endif %}

      {% if block.settings.show_google_pay %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-google-pay"></i>
        </div>
      {% endif %}

      {% if block.settings.show_shopify_pay %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-shopify"></i>
        </div>
      {% endif %}

      {% if block.settings.show_stripe %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-cc-stripe"></i>
        </div>
      {% endif %}

      {% if block.settings.show_bitcoin %}
        <div class="ai-footer-socket-payment-icon-{{ ai_gen_id }}">
          <i class="fab fa-bitcoin"></i>
        </div>
      {% endif %}
    </div>
  </div>
</div>

