                      <a href="{{ prod.url }}" class="ai-related-products-title-link-{{ ai_gen_id }}">
                        {{ prod.title }}
                      </a>
                    </h3>

                    {% if prod.metafields.custom.sub_title != blank %}
                      <div class="ai-related-products-subtitle-{{ ai_gen_id }}">
