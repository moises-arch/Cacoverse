      line-height: 1.2;
    }

    .ai-related-products-container-{{ ai_gen_id }} {
      position: relative;
    }

    .ai-related-products-grid-{{ ai_gen_id }} {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
      gap: {{ settings.spacing_grid_horizontal }}px {{ settings.spacing_grid_vertical }}px;
      {% if block.settings.layout == 'carousel' %}
        display: none;
      {% endif %}
