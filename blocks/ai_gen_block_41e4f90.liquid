  <script>
    (function() {
      class RelatedProducts{{ ai_gen_id }} extends HTMLElement {
        constructor() {
          super();
          this.currentSlide = 0;
          this.autoplayInterval = null;
        }

        connectedCallback() {
          this.carousel = this.querySelector('.ai-related-products-carousel-{{ ai_gen_id }}');
          this.track = this.querySelector('.ai-related-products-carousel-track-{{ ai_gen_id }}');
          this.slides = this.querySelectorAll('.ai-related-products-carousel-slide-{{ ai_gen_id }}');
          this.prevBtn = this.querySelector('.ai-related-products-nav-prev-{{ ai_gen_id }}');
          this.nextBtn = this.querySelector('.ai-related-products-nav-next-{{ ai_gen_id }}');
          this.addToCartBtns = this.querySelectorAll('.ai-related-products-add-to-cart-{{ ai_gen_id }}');

          if (this.carousel && this.slides.length > 0) {
            this.setupCarousel();
            this.setupAddToCart();
            
            {% if block.settings.autoplay and block.settings.layout == 'carousel' %}
              this.startAutoplay();
            {% endif %}
          }
        }

        setupCarousel() {
          this.slidesToShow = this.getSlidesToShow();
          this.maxSlide = Math.max(0, this.slides.length - this.slidesToShow);

          this.prevBtn.addEventListener('click', () => this.prevSlide());
          this.nextBtn.addEventListener('click', () => this.nextSlide());

          window.addEventListener('resize', () => {
            this.slidesToShow = this.getSlidesToShow();
            this.maxSlide = Math.max(0, this.slides.length - this.slidesToShow);
            this.currentSlide = Math.min(this.currentSlide, this.maxSlide);
            this.updateCarousel();
          });

          this.updateCarousel();
        }

        getSlidesToShow() {
          const width = window.innerWidth;
          if (width < 480) return 1;
          if (width < 750) return 2;
          if (width < 1200) return 3;
          return 4;
        }

        updateCarousel() {
          if (!this.track) return;

          const slideWidth = this.slides[0].offsetWidth;
          const gap = 16;
          const translateX = -(this.currentSlide * (slideWidth + gap));
          
          this.track.style.transform = `translateX(${translateX}px)`;
          
          this.prevBtn.disabled = this.currentSlide === 0;
          this.nextBtn.disabled = this.currentSlide >= this.maxSlide;
        }

        prevSlide() {
          if (this.currentSlide > 0) {
            this.currentSlide--;
            this.updateCarousel();
            this.resetAutoplay();
          }
        }

        nextSlide() {
          if (this.currentSlide < this.maxSlide) {
            this.currentSlide++;
            this.updateCarousel();
            this.resetAutoplay();
          }
        }

        startAutoplay() {
          {% if block.settings.autoplay_speed %}
            this.autoplayInterval = setInterval(() => {
              if (this.currentSlide >= this.maxSlide) {
                this.currentSlide = 0;
              } else {
                this.currentSlide++;
              }
              this.updateCarousel();
            }, {{ block.settings.autoplay_speed | times: 1000 }});
          {% endif %}
        }

        resetAutoplay() {
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            {% if block.settings.autoplay %}
              this.startAutoplay();
            {% endif %}
          }
        }

        setupAddToCart() {
          this.addToCartBtns.forEach(btn => {
            btn.addEventListener('click', async (e) => {
              const button = e.target;
              const variantId = button.dataset.variantId;
              
              if (!variantId || button.disabled) return;

              const originalText = button.textContent;
              button.textContent = 'Adding...';
              button.disabled = true;

              try {
                const response = await fetch('/cart/add.js', {
                  method: 'POST',
                  headers: {
                    'Content-Type': 'application/json',
                  },
                  body: JSON.stringify({
                    id: variantId,
                    quantity: 1
                  })
                });

                if (response.ok) {
                  button.textContent = 'Added!';
                  
                  document.dispatchEvent(new CustomEvent('cart:refresh'));
                  
                  setTimeout(() => {
                    button.textContent = originalText;
                    button.disabled = false;
                  }, 2000);
                } else {
                  throw new Error('Failed to add to cart');
                }
              } catch (error) {
                button.textContent = 'Error';
                setTimeout(() => {
                  button.textContent = originalText;
                  button.disabled = false;
                }, 2000);
              }
            });
          });
        }

        disconnectedCallback() {
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
          }
        }
      }

      customElements.define('related-products-{{ ai_gen_id }}', RelatedProducts{{ ai_gen_id }});
    })();
  </script>
{% endif %}

