    .ai-related-products-carousel-{{ ai_gen_id }} {
      {% if block.settings.layout == 'grid' %}
        display: none;
      {% endif %}
      overflow: hidden;
      position: relative;
    }

    .ai-related-products-carousel-track-{{ ai_gen_id }} {
      display: flex;
      transition: transform 0.3s ease;
      gap: {{ settings.spacing_grid_horizontal }}px;
    }

