<dual-box-section-{{ ai_gen_id }} class="ai-dual-box-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-dual-box-container-{{ ai_gen_id }}">
    {% for i in (1..2) %}
      {% liquid
        assign default_image_key = 'box_' | append: i | append: '_image_default'
        assign hover_image_key = 'box_' | append: i | append: '_image_hover'
        assign heading_key = 'box_' | append: i | append: '_heading'
        assign subheading_key = 'box_' | append: i | append: '_subheading'
        assign button_text_key = 'box_' | append: i | append: '_button_text'
        assign button_link_key = 'box_' | append: i | append: '_button_link'
        assign show_button_key = 'box_' | append: i | append: '_show_button'
        assign alignment_key = 'box_' | append: i | append: '_alignment'

        assign default_image = block.settings[default_image_key]
        assign hover_image = block.settings[hover_image_key]
        assign heading = block.settings[heading_key]
        assign subheading = block.settings[subheading_key]
        assign button_text = block.settings[button_text_key]
        assign button_link = block.settings[button_link_key]
        assign show_button = block.settings[show_button_key]
        assign alignment = block.settings[alignment_key]
      %}

      <div class="ai-dual-box-item-{{ ai_gen_id }}" data-box-id="{{ i }}">
        <div class="ai-dual-box-image-wrapper-{{ ai_gen_id }}">
          {% if default_image %}
            <img
              src="{{ default_image | image_url: width: 1000 }}"
              alt="{{ default_image.alt | escape }}"
              loading="lazy"
              width="{{ default_image.width }}"
              height="{{ default_image.height }}"
              class="ai-dual-box-image-{{ ai_gen_id }} ai-dual-box-image-default-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-dual-box-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}
            </div>
          {% endif %}

          {% if hover_image %}
            <img
              src="{{ hover_image | image_url: width: 1000 }}"
              alt="{{ hover_image.alt | escape }}"
              loading="lazy"
              width="{{ hover_image.width }}"
              height="{{ hover_image.height }}"
              class="ai-dual-box-image-{{ ai_gen_id }} ai-dual-box-image-hover-{{ ai_gen_id }}"
            >
          {% endif %}
        </div>

        <div class="ai-dual-box-overlay-{{ ai_gen_id }}"></div>

        <div class="ai-dual-box-content-{{ ai_gen_id }}" style="text-align: {{ alignment }};">
          {% if heading != blank %}
            <h3 class="ai-dual-box-heading-{{ ai_gen_id }}">{{ heading }}</h3>
          {% endif %}
          {% if subheading != blank %}
            <p class="ai-dual-box-subheading-{{ ai_gen_id }}">{{ subheading }}</p>
          {% endif %}
          {% if show_button and button_text != blank %}
            <a
              href="{% if button_link != blank %}{{ button_link }}{% else %}#{% endif %}"
              class="ai-dual-box-button-{{ ai_gen_id }}"
            >
              {{ button_text }}
            </a>
          {% endif %}
        </div>
      </div>
    {% endfor %}
  </div>
</dual-box-section-{{ ai_gen_id }}>

<script>
  (function() {
    class DualBoxSection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.boxes = this.querySelectorAll('.ai-dual-box-item-{{ ai_gen_id }}');
        this.setupEventListeners();
      }

      setupEventListeners() {
        this.boxes.forEach((box) => {
          box.addEventListener('mouseenter', () => {
            this.handleMouseEnter(box);
          });

          box.addEventListener('mouseleave', () => {
            this.handleMouseLeave(box);
          });
        });
      }

      handleMouseEnter(box) {
        const hoverImage = box.querySelector('.ai-dual-box-image-hover-{{ ai_gen_id }}');
        if (hoverImage) {
          hoverImage.style.opacity = '1';
          hoverImage.style.transform = 'scale(1)';
        }
      }

      handleMouseLeave(box) {
        const hoverImage = box.querySelector('.ai-dual-box-image-hover-{{ ai_gen_id }}');
        if (hoverImage) {
          hoverImage.style.opacity = '0';
          hoverImage.style.transform = 'scale(1.05)';
        }
      }
    }

    customElements.define('dual-box-section-{{ ai_gen_id }}', DualBoxSection{{ ai_gen_id }});
  })();
</script>

