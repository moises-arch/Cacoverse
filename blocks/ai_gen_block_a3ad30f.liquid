  .ai-dual-box-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: {{ block.settings.gap_between_boxes }}px;
    padding: 0 20px;
  }

  .ai-dual-box-item-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.box_border_radius }}px;
    cursor: pointer;
    height: {{ block.settings.box_height }}px;
    box-shadow: {{ block.settings.box_shadow_horizontal }}px {{ block.settings.box_shadow_vertical }}px {{ block.settings.box_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.box_shadow_opacity | divided_by: 100.0 }});
    text-decoration: none;
    display: block;
    
  }

  .ai-dual-box-image-wrapper-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .ai-dual-box-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: opacity 0.6s ease, transform 0.6s ease;
  }

  .ai-dual-box-image-default-{{ ai_gen_id }} {
    opacity: 1;
    z-index: 1;
  }

  .ai-dual-box-image-hover-{{ ai_gen_id }} {
    opacity: 0;
    z-index: 2;
    transform: scale(1.05);
  }

  .ai-dual-box-item-{{ ai_gen_id }}:hover .ai-dual-box-image-default-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-dual-box-item-{{ ai_gen_id }}:hover .ai-dual-box-image-hover-{{ ai_gen_id }} {
    opacity: 1;
    transform: scale(1);
  }

  .ai-dual-box-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }}) 100%
    );
    z-index: 3;
    transition: background 0.6s ease;
  }

  .ai-dual-box-item-{{ ai_gen_id }}:hover .ai-dual-box-overlay-{{ ai_gen_id }} {
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0) 0%,
      rgba(0, 0, 0, {{ block.settings.overlay_hover_opacity | divided_by: 100.0 }}) 100%
    );
  }

  .ai-dual-box-content-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: {{ block.settings.content_padding }}px;
    z-index: 4;
    transform: translateY(0);
    transition: transform 0.6s ease;
  }

  .ai-dual-box-item-{{ ai_gen_id }}:hover .ai-dual-box-content-{{ ai_gen_id }} {
    transform: translateY(-10px);
  }

  .ai-dual-box-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px 0;
    line-height: 1.2;
