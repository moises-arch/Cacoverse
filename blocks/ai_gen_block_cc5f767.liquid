  @prompt
    create a footer socket place the copyright information aligned to left   and credit cards icons to the right.    background: #1d1d1d.   text and icons color: acb8c3, the icons doesn't look good and should be 1 color only , can adjust the icons size and make it with boxes to past svg codes or upload svg, remove the built in payment icons 
    make 8 custom icons , adjust it to 1500px and responsive , only one space for svg code and upload (svg,png,gif,jpg), only 1 icon, make the image size adjustable , create control for icon height  up to 200px 
    icon widht up to 1000Px
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-socket-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_vertical }}px 20px;
    width: 100%;
  }

  .ai-footer-socket-container-{{ ai_gen_id }} {
    max-width: 1450px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 20px;
  }

  .ai-footer-socket-copyright-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    margin: 0;
    flex: 1;
    min-width: 200px;
  }

  .ai-footer-socket-icons-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.icon_spacing }}px;
    flex-wrap: wrap;
  }

  .ai-footer-socket-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_width }}px;
    height: {{ block.settings.icon_height }}px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-footer-socket-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_width }}px;
    height: {{ block.settings.icon_height }}px;
    fill: {{ block.settings.icon_color }};
    color: {{ block.settings.icon_color }};
  }

  .ai-footer-socket-icon-{{ ai_gen_id }} img {
    width: {{ block.settings.icon_width }}px;
    height: {{ block.settings.icon_height }}px;
    object-fit: contain;
  }

  @media screen and (max-width: 768px) {
    .ai-footer-socket-container-{{ ai_gen_id }} {
      flex-direction: column;
      text-align: center;
      gap: 15px;
    }

    .ai-footer-socket-copyright-{{ ai_gen_id }} {
      order: 2;
      min-width: auto;
    }

    .ai-footer-socket-icons-{{ ai_gen_id }} {
      order: 1;
      justify-content: center;
    }

    .ai-footer-socket-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_width | times: 0.8 }}px;
      height: {{ block.settings.icon_height | times: 0.8 }}px;
    }

    .ai-footer-socket-icon-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_width | times: 0.8 }}px;
      height: {{ block.settings.icon_height | times: 0.8 }}px;
    }

    .ai-footer-socket-icon-{{ ai_gen_id }} img {
      width: {{ block.settings.icon_width | times: 0.8 }}px;
      height: {{ block.settings.icon_height | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-footer-socket-{{ ai_gen_id }} {
      padding: {{ block.settings.padding_vertical | times: 0.7 }}px 15px;
    }

    .ai-footer-socket-copyright-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-footer-socket-icons-{{ ai_gen_id }} {
      gap: {{ block.settings.icon_spacing | times: 0.7 }}px;
    }

    .ai-footer-socket-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_width | times: 0.7 }}px;
      height: {{ block.settings.icon_height | times: 0.7 }}px;
    }

    .ai-footer-socket-icon-{{ ai_gen_id }} svg {
      width: {{ block.settings.icon_width | times: 0.7 }}px;
      height: {{ block.settings.icon_height | times: 0.7 }}px;
    }

    .ai-footer-socket-icon-{{ ai_gen_id }} img {
      width: {{ block.settings.icon_width | times: 0.7 }}px;
      height: {{ block.settings.icon_height | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-footer-socket-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-footer-socket-container-{{ ai_gen_id }}">
    <div class="ai-footer-socket-copyright-{{ ai_gen_id }}">
      {{ block.settings.copyright_text }}
    </div>
    
    <div class="ai-footer-socket-icons-{{ ai_gen_id }}">
      {% if block.settings.icon_svg != blank or block.settings.icon_image != blank %}
        <div class="ai-footer-socket-icon-{{ ai_gen_id }}">
          {% if block.settings.icon_svg != blank %}
            {{ block.settings.icon_svg }}
          {% elsif block.settings.icon_image != blank %}
            <img
              src="{{ block.settings.icon_image | image_url: width: 2000 }}"
              alt="Payment icon"
              loading="lazy"
              width="{{ block.settings.icon_width }}"
              height="{{ block.settings.icon_height }}"
            >
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

