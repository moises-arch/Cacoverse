{% doc %}
  @prompt
    generate a header exactly like the one in this website keep all the menu items and everything the same:   https://www.cacoamerica.com/
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-header-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
    position: sticky;
    top: 0;
    z-index: 1000;
    width: 100%;
  }

  .ai-header-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    display: flex;
    align-items: center;
    justify-content: space-between;
    height: {{ block.settings.header_height }}px;
  }

  .ai-header-logo-{{ ai_gen_id }} {
    flex-shrink: 0;
  }

  .ai-header-logo-{{ ai_gen_id }} img {
    height: {{ block.settings.logo_height }}px;
    width: auto;
    display: block;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} {
    height: {{ block.settings.logo_height }}px;
    width: 150px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-header-logo-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 150px;
    max-height: {{ block.settings.logo_height }}px;
  }

  .ai-header-nav-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.menu_spacing }}px;
    flex-grow: 1;
    justify-content: center;
  }

  .ai-header-nav-{{ ai_gen_id }} a {
    color: {{ block.settings.menu_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_font_size }}px;
    font-weight: {{ block.settings.menu_font_weight }};
    text-transform: {{ block.settings.menu_text_transform }};
    letter-spacing: 0.5px;
    transition: color 0.3s ease;
    white-space: nowrap;
  }

  .ai-header-nav-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.menu_hover_color }};
  }

  .ai-header-icons-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 20px;
    flex-shrink: 0;
  }

  .ai-header-icon-{{ ai_gen_id }} {
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
    transition: color 0.3s ease;
  }

  .ai-header-icon-{{ ai_gen_id }}:hover {
    color: {{ block.settings.icon_hover_color }};
  }

  .ai-header-icon-{{ ai_gen_id }} svg {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} {
    display: none;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-header-mobile-toggle-{{ ai_gen_id }} svg {
    width: 24px;
    height: 24px;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }} {
    display: none;
    position: fixed;
    top: {{ block.settings.header_height }}px;
    left: 0;
    width: 100%;
    background-color: {{ block.settings.background_color }};
    border-bottom: 1px solid {{ block.settings.border_color }};
    padding: 20px;
    flex-direction: column;
    gap: 20px;
    z-index: 999;
    max-height: calc(100vh - {{ block.settings.header_height }}px);
    overflow-y: auto;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-header-mobile-menu-{{ ai_gen_id }} a {
    color: {{ block.settings.menu_color }};
    text-decoration: none;
    font-size: {{ block.settings.menu_font_size }}px;
    font-weight: {{ block.settings.menu_font_weight }};
    text-transform: {{ block.settings.menu_text_transform }};
    padding: 10px 0;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  @media screen and (max-width: 990px) {
    .ai-header-nav-{{ ai_gen_id }} {
      display: none;
    }

    .ai-header-mobile-toggle-{{ ai_gen_id }} {
      display: block;
    }

    .ai-header-icons-{{ ai_gen_id }} {
      gap: 15px;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-header-container-{{ ai_gen_id }} {
      padding: 0 15px;
      height: {{ block.settings.header_height | times: 0.85 }}px;
    }

    .ai-header-logo-{{ ai_gen_id }} img {
      height: {{ block.settings.logo_height | times: 0.8 }}px;
    }

    .ai-header-mobile-menu-{{ ai_gen_id }} {
      top: {{ block.settings.header_height | times: 0.85 }}px;
      max-height: calc(100vh - {{ block.settings.header_height | times: 0.85 }}px);
    }
  }
{% endstyle %}

<header-component-{{ ai_gen_id }} class="ai-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-header-container-{{ ai_gen_id }}">
    <div class="ai-header-logo-{{ ai_gen_id }}">
      {% if block.settings.logo %}
        <a href="/">
          <img
            src="{{ block.settings.logo | image_url: width: 500 }}"
            alt="{{ shop.name }}"
            width="500"
            height="{{ block.settings.logo_height }}"
            loading="eager"
          >
        </a>
      {% else %}
        <div class="ai-header-logo-placeholder-{{ ai_gen_id }}">
          {{ 'image' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    <nav class="ai-header-nav-{{ ai_gen_id }}">
      {% if block.settings.menu_item_1_text != blank %}
        <a href="{{ block.settings.menu_item_1_link }}">{{ block.settings.menu_item_1_text }}</a>
      {% endif %}
      {% if block.settings.menu_item_2_text != blank %}
        <a href="{{ block.settings.menu_item_2_link }}">{{ block.settings.menu_item_2_text }}</a>
      {% endif %}
      {% if block.settings.menu_item_3_text != blank %}
        <a href="{{ block.settings.menu_item_3_link }}">{{ block.settings.menu_item_3_text }}</a>
      {% endif %}
      {% if block.settings.menu_item_4_text != blank %}
        <a href="{{ block.settings.menu_item_4_link }}">{{ block.settings.menu_item_4_text }}</a>
      {% endif %}
      {% if block.settings.menu_item_5_text != blank %}
        <a href="{{ block.settings.menu_item_5_link }}">{{ block.settings.menu_item_5_text }}</a>
      {% endif %}
      {% if block.settings.menu_item_6_text != blank %}
        <a href="{{ block.settings.menu_item_6_link }}">{{ block.settings.menu_item_6_text }}</a>
      {% endif %}
    </nav>

    <div class="ai-header-icons-{{ ai_gen_id }}">
      {% if block.settings.show_search %}
        <button
          class="ai-header-icon-{{ ai_gen_id }}"
          aria-label="Search"
          data-search-toggle
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      {% endif %}

      {% if block.settings.show_account %}
        <a
          href="/account"
          class="ai-header-icon-{{ ai_gen_id }}"
          aria-label="Account"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
        </a>
      {% endif %}

      {% if block.settings.show_cart %}
        <a
          href="/cart"
          class="ai-header-icon-{{ ai_gen_id }}"
          aria-label="Cart"
        >
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
        </a>
      {% endif %}

      <button
        class="ai-header-mobile-toggle-{{ ai_gen_id }}"
        aria-label="Toggle menu"
        aria-expanded="false"
      >
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <div class="ai-header-mobile-menu-{{ ai_gen_id }}">
    {% if block.settings.menu_item_1_text != blank %}
      <a href="{{ block.settings.menu_item_1_link }}">{{ block.settings.menu_item_1_text }}</a>
    {% endif %}
    {% if block.settings.menu_item_2_text != blank %}
      <a href="{{ block.settings.menu_item_2_link }}">{{ block.settings.menu_item_2_text }}</a>
    {% endif %}
    {% if block.settings.menu_item_3_text != blank %}
      <a href="{{ block.settings.menu_item_3_link }}">{{ block.settings.menu_item_3_text }}</a>
    {% endif %}
    {% if block.settings.menu_item_4_text != blank %}
      <a href="{{ block.settings.menu_item_4_link }}">{{ block.settings.menu_item_4_text }}</a>
    {% endif %}
    {% if block.settings.menu_item_5_text != blank %}
      <a href="{{ block.settings.menu_item_5_link }}">{{ block.settings.menu_item_5_text }}</a>
    {% endif %}
    {% if block.settings.menu_item_6_text != blank %}
      <a href="{{ block.settings.menu_item_6_link }}">{{ block.settings.menu_item_6_text }}</a>
    {% endif %}
  </div>
</header-component-{{ ai_gen_id }}>

<script>
  (function() {
    class HeaderComponent{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.mobileToggle = this.querySelector('.ai-header-mobile-toggle-{{ ai_gen_id }}');
        this.mobileMenu = this.querySelector('.ai-header-mobile-menu-{{ ai_gen_id }}');
        this.searchToggle = this.querySelector('[data-search-toggle]');
        
        if (this.mobileToggle && this.mobileMenu) {
          this.mobileToggle.addEventListener('click', this.toggleMobileMenu.bind(this));
        }

        if (this.searchToggle) {
          this.searchToggle.addEventListener('click', this.handleSearch.bind(this));
        }

        document.addEventListener('click', this.handleOutsideClick.bind(this));
      }

      toggleMobileMenu() {
        const isActive = this.mobileMenu.classList.contains('active');
        this.mobileMenu.classList.toggle('active');
        this.mobileToggle.setAttribute('aria-expanded', !isActive);
      }

      handleSearch() {
        const searchModal = document.querySelector('details[open] summary[aria-label="Search"]');
        if (searchModal) {
          searchModal.click();
        } else {
          const searchSummary = document.querySelector('summary[aria-label="Search"]');
          if (searchSummary) {
            searchSummary.click();
          } else {
            window.location.href = '/search';
          }
        }
      }

      handleOutsideClick(event) {
        if (!this.contains(event.target) && this.mobileMenu.classList.contains('active')) {
          this.mobileMenu.classList.remove('active');
          this.mobileToggle.setAttribute('aria-expanded', 'false');
        }
      }

      disconnectedCallback() {
        document.removeEventListener('click', this.handleOutsideClick.bind(this));
      }
    }

    customElements.define('header-component-{{ ai_gen_id }}', HeaderComponent{{ ai_gen_id }});
  })();
</script>

