}
.ai-comparison-bar-fill-{{ ai_gen_id }}{display:block !important;height:100%;width:0%;background-color:var(--bar-color, {{ block.settings.bar_color_low }}) !important;transition:width .3s ease;}
.ai-comparison-points-{{ ai_gen_id }}{min-width:3ch;text-align:left;font-size:13px;font-weight:700;color:{{ block.settings.points_color }};}

.ai-comparison-caption-{{ ai_gen_id }}{max-width:1500px;margin:14px auto 0;color:{{ block.settings.caption_color }};font-size:{{ block.settings.caption_font_size }}px;line-height:1.4;}

