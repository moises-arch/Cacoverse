{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}













{% style %}
.ai-comparison-chart-{{ ai_gen_id }}{
  width:100%;
  padding:{{ block.settings.padding }}px;
  background-color:{{ block.settings.background_color }};
  border-radius:{{ block.settings.border_radius }}px;
  overflow:visible !important;
}
.ai-comparison-inner-{{ ai_gen_id }}{max-width:1500px;margin:0 auto;}

product-comparison-{{ ai_gen_id }} .ai-comparison-toggle-{{ ai_gen_id }}{
  display:flex !important;align-items:center !important;justify-content:space-between !important;
  width:400px !important;max-width:100% !important;height:52px !important;
  padding:0 20px !important;margin:0 auto 16px auto !important;
  background:{{ block.settings.toggle_bg_color }} !important;color:{{ block.settings.toggle_text_color }} !important;
  border:0 !important;box-shadow:none !important;outline:none !important;cursor:pointer !important;
  border-radius:0 0 28px 28px !important;position:relative !important;z-index:5 !important;
  font-size:20px !important;font-weight:700 !important;line-height:1.1 !important;
}
product-comparison-{{ ai_gen_id }} .ai-comparison-toggle-{{ ai_gen_id }}:hover{
  background:{{ block.settings.toggle_hover_color }} !important;color:{{ block.settings.toggle_text_color }} !important;
}
product-comparison-{{ ai_gen_id }} .ai-comparison-toggle-{{ ai_gen_id }} svg{
  stroke:currentColor !important;fill:none !important;width:24px;height:24px;transition:transform .3s ease;
}
.ai-comparison-toggle-icon-{{ ai_gen_id }}.active{transform:rotate(180deg);}

.ai-comparison-content-{{ ai_gen_id }}{max-height:0;overflow:hidden;transition:max-height .4s ease;}
.ai-comparison-content-{{ ai_gen_id }}.active{max-height:5000px;overflow-x:auto;}

.ai-comparison-table-wrapper-{{ ai_gen_id }}{margin-top:0px;overflow-x:auto;-webkit-overflow-scrolling:touch;}
.ai-comparison-table-{{ ai_gen_id }}{width:100%;border-collapse:separate;border-spacing:0;min-width:600px;}

.ai-comparison-header-{{ ai_gen_id }} th{
  background-color:{{ block.settings.header_bg_color }};
  color:{{ block.settings.header_text_color }};
  padding:20px 15px;text-align:center;font-weight:600;
  font-size:{{ block.settings.header_font_size }}px;
  border-bottom:2px solid {{ block.settings.border_color }};
}
.ai-comparison-header-{{ ai_gen_id }} th:first-child{ text-align:left;min-width:200px;border-top-left-radius:12px;}
.ai-comparison-header-{{ ai_gen_id }} th:last-child{border-top-right-radius:12px;}

.ai-comparison-product-cell-{{ ai_gen_id }}{display:flex;flex-direction:column;align-items:center;gap:0;min-width:120px;}
.ai-comparison-product-image-wrapper-{{ ai_gen_id }}{
  width:{{ block.settings.product_image_size }}px;height:{{ block.settings.product_image_size }}px;
  border-radius:{{ block.settings.product_image_radius }}px;overflow:hidden;
  border:{{ block.settings.product_image_border }}px solid {{ block.settings.product_image_border_color }};
  display:block;
}
.ai-comparison-product-image-{{ ai_gen_id }}{width:100%;height:100%;object-fit:cover;display:block;}
.ai-comparison-product-title-{{ ai_gen_id }} a{font-size:14px;font-weight:600;text-align:center;line-height:1.25;color:inherit;text-decoration:none;}
.ai-comparison-product-title-{{ ai_gen_id }} a:hover{text-decoration:underline;}
.ai-comparison-price-{{ ai_gen_id }}{font-size:13px;font-weight:700;color:{{ block.settings.price_color }};}

.ai-comparison-row-{{ ai_gen_id }}{border-bottom:1px solid {{ block.settings.border_color }};}
.ai-comparison-row-{{ ai_gen_id }} td{padding:15px;text-align:center;vertical-align:middle;}
.ai-comparison-row-{{ ai_gen_id }} td:first-child{ text-align:left;font-weight:600;color:{{ block.settings.label_color }};font-size:{{ block.settings.label_font_size }}px;}

.ai-comparison-feature-label-{{ ai_gen_id }}{display:flex;align-items:center;gap:10px;}
.ai-comparison-icon-{{ ai_gen_id }}{width:{{ block.settings.icon_size }}px;height:{{ block.settings.icon_size }}px;flex-shrink:0;}
.ai-comparison-icon-{{ ai_gen_id }} svg{width:100%;height:100%;fill:{{ block.settings.icon_color }};}

.ai-comparison-bar-wrap-{{ ai_gen_id }}{display:flex;align-items:center;gap:8px;justify-content:center;}
.ai-comparison-bar-container-{{ ai_gen_id }}{
  position:relative;width:100%;max-width:150px;height:{{ block.settings.bar_height }}px;
