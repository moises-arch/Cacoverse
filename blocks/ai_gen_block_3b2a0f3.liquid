<product-comparison-{{ ai_gen_id }} class="ai-comparison-chart-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <button
    class="ai-comparison-toggle-{{ ai_gen_id }}"
    aria-expanded="false"
    aria-controls="ai-comparison-content-{{ ai_gen_id }}"
  >
    <span>{{ block.settings.toggle_label }}</span>
    <svg class="ai-comparison-toggle-icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><polyline points="6 9 12 15 18 9" fill="none" stroke="currentColor" stroke-width="2"/></svg>
  </button>

  <div class="ai-comparison-content-{{ ai_gen_id }}" id="ai-comparison-content-{{ ai_gen_id }}">
    <div class="ai-comparison-inner-{{ ai_gen_id }}">
      <div class="ai-comparison-table-wrapper-{{ ai_gen_id }}">
        <table class="ai-comparison-table-{{ ai_gen_id }}">
          <thead class="ai-comparison-header-{{ ai_gen_id }}">
            <tr>
              <th>{{ block.settings.feature_column_label }}</th>
              {% for i in (1..8) %}
                {% liquid
                  assign product_key = 'product_' | append: i
                  assign product = block.settings[product_key]
                %}
                {% if product != blank %}
                  {% liquid
                    assign price  = product.selected_or_first_available_variant.price | default: product.price
                    assign pricec = price | money
                  %}
                  <th>
                    <div class="ai-comparison-product-cell-{{ ai_gen_id }}">
                      <a href="{{ product.url }}" class="ai-comparison-product-image-wrapper-{{ ai_gen_id }}" aria-label="{{ product.title }}">
                        {% if product.featured_image %}
                          <img src="{{ product.featured_image | image_url: width: 240 }}"
                               alt="{{ product.featured_image.alt | escape }}"
                               class="ai-comparison-product-image-{{ ai_gen_id }}"
                               loading="lazy"
                               width="{{ block.settings.product_image_size }}"
                               height="{{ block.settings.product_image_size }}">
                        {% else %}
                          <div class="ai-comparison-product-image-wrapper-{{ ai_gen_id }}">{{ 'product-1' | placeholder_svg_tag }}</div>
                        {% endif %}
                      </a>
                      <div class="ai-comparison-product-title-{{ ai_gen_id }}">
                        <a href="{{ product.url }}">{{ product.title }}</a>
                      </div>
                      <div class="ai-comparison-price-{{ ai_gen_id }}">{{ pricec }}</div>
                    </div>
                  </th>
                {% endif %}
              {% endfor %}
            </tr>
          </thead>

          {% assign low = block.settings.bar_color_low %}
          {% assign mid = block.settings.bar_color_mid %}
          {% assign high = block.settings.bar_color_high %}

          <tbody>
            {% if block.settings.show_ventilation %}
              <tr class="ai-comparison-row-{{ ai_gen_id }}">
                <td>
                  <div class="ai-comparison-feature-label-{{ ai_gen_id }}">
                    <div class="ai-comparison-icon-{{ ai_gen_id }}">{{ block.settings.ventilation_icon }}</div>
                    <span>{{ block.settings.ventilation_label }}</span>
                  </div>
                </td>
                {% for i in (1..8) %}
                  {% liquid
                    assign product_key = 'product_' | append: i
                    assign value_key   = 'ventilation_' | append: i
                    assign product     = block.settings[product_key]
                    assign value       = block.settings[value_key] | default: 0
                    assign color       = low
                    if value >= 67
                      assign color = high
                    elsif value >= 34
                      assign color = mid
                    endif
                    assign points = value | times: 0.1 | round: 1
                  %}
                  {% if product != blank %}
                    <td>
                      <div class="ai-comparison-bar-wrap-{{ ai_gen_id }}">
                        <div class="ai-comparison-bar-container-{{ ai_gen_id }}">
                          <div class="ai-comparison-bar-fill-{{ ai_gen_id }}" style="width: {{ value }}%; --bar-color: {{ color }};"></div>
                        </div>
                        <span class="ai-comparison-points-{{ ai_gen_id }}">{{ points }}</span>
                      </div>
                    </td>
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}

            {% if block.settings.show_sun_protection %}
              <tr class="ai-comparison-row-{{ ai_gen_id }}">
                <td>
                  <div class="ai-comparison-feature-label-{{ ai_gen_id }}">
                    <div class="ai-comparison-icon-{{ ai_gen_id }}">{{ block.settings.sun_protection_icon }}</div>
                    <span>{{ block.settings.sun_protection_label }}</span>
                  </div>
                </td>
                {% for i in (1..8) %}
                  {% liquid
                    assign product_key = 'product_' | append: i
                    assign value_key   = 'sun_protection_' | append: i
                    assign product     = block.settings[product_key]
                    assign value       = block.settings[value_key] | default: 0
                    assign color       = low
                    if value >= 67
                      assign color = high
                    elsif value >= 34
                      assign color = mid
                    endif
                    assign points = value | times: 0.1 | round: 1
                  %}
                  {% if product != blank %}
                    <td>
                      <div class="ai-comparison-bar-wrap-{{ ai_gen_id }}">
                        <div class="ai-comparison-bar-container-{{ ai_gen_id }}">
                          <div class="ai-comparison-bar-fill-{{ ai_gen_id }}" style="width: {{ value }}%; --bar-color: {{ color }};"></div>
                        </div>
                        <span class="ai-comparison-points-{{ ai_gen_id }}">{{ points }}</span>
                      </div>
                    </td>
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}

            {% if block.settings.show_impact_resistant %}
              <tr class="ai-comparison-row-{{ ai_gen_id }}">
                <td>
                  <div class="ai-comparison-feature-label-{{ ai_gen_id }}">
                    <div class="ai-comparison-icon-{{ ai_gen_id }}">{{ block.settings.impact_resistant_icon }}</div>
                    <span>{{ block.settings.impact_resistant_label }}</span>
                  </div>
                </td>
                {% for i in (1..8) %}
                  {% liquid
                    assign product_key = 'product_' | append: i
                    assign value_key   = 'impact_resistant_' | append: i
                    assign product     = block.settings[product_key]
                    assign value       = block.settings[value_key] | default: 0
                    assign color       = low
                    if value >= 67
                      assign color = high
                    elsif value >= 34
                      assign color = mid
                    endif
                    assign points = value | times: 0.1 | round: 1
                  %}
                  {% if product != blank %}
                    <td>
                      <div class="ai-comparison-bar-wrap-{{ ai_gen_id }}">
                        <div class="ai-comparison-bar-container-{{ ai_gen_id }}">
                          <div class="ai-comparison-bar-fill-{{ ai_gen_id }}" style="width: {{ value }}%; --bar-color: {{ color }};"></div>
                        </div>
                        <span class="ai-comparison-points-{{ ai_gen_id }}">{{ points }}</span>
                      </div>
                    </td>
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}

            {% if block.settings.show_warranty %}
              <tr class="ai-comparison-row-{{ ai_gen_id }}">
                <td>
                  <div class="ai-comparison-feature-label-{{ ai_gen_id }}">
                    <!-- Icono de garantía actualizado: escudo + check -->
                    <div class="ai-comparison-icon-{{ ai_gen_id }}">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M12 2l7 4v6a9 9 0 0 1-7 8 9 9 0 0 1-7-8V6l7-4z" fill="none" stroke="currentColor" stroke-width="2"/><path d="M9 12l2 2 4-4" fill="none" stroke="currentColor" stroke-width="2"/></svg>
                    </div>
                    <span>{{ block.settings.warranty_label }}</span>
                  </div>
                </td>
                {% for i in (1..8) %}
                  {% liquid
                    assign product_key = 'product_' | append: i
                    assign value_key   = 'warranty_' | append: i
                    assign product     = block.settings[product_key]
                    assign value       = block.settings[value_key] | default: 0
                    assign color       = low
                    if value >= 67
                      assign color = high
                    elsif value >= 34
                      assign color = mid
                    endif
                    assign points = value | times: 0.1 | round: 1
                  %}
                  {% if product != blank %}
                    <td>
                      <div class="ai-comparison-bar-wrap-{{ ai_gen_id }}">
                        <div class="ai-comparison-bar-container-{{ ai_gen_id }}">
                          <div class="ai-comparison-bar-fill-{{ ai_gen_id }}" style="width: {{ value }}%; --bar-color: {{ color }};"></div>
                        </div>
                        <span class="ai-comparison-points-{{ ai_gen_id }}">{{ points }}</span>
                      </div>
                    </td>
                  {% endif %}
                {% endfor %}
              </tr>
            {% endif %}
          </tbody>
        </table>
      </div>

      {% if block.settings.caption_text != blank %}
        <div class="ai-comparison-caption-{{ ai_gen_id }}">
          {% if block.settings.caption_title != blank %}<strong>{{ block.settings.caption_title }}</strong> — {% endif %}{{ block.settings.caption_text }}
        </div>
      {% endif %}
    </div>
  </div>
</product-comparison-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductComparison{{ ai_gen_id }} extends HTMLElement {
      connectedCallback() {
        this.toggle  = this.querySelector('.ai-comparison-toggle-{{ ai_gen_id }}');
        this.content = this.querySelector('.ai-comparison-content-{{ ai_gen_id }}');
        this.icon    = this.querySelector('.ai-comparison-toggle-icon-{{ ai_gen_id }}');
        if (this.toggle && this.content) this.toggle.addEventListener('click', () => this.toggleContent());
      }
      toggleContent() {
        const isExpanded = this.toggle.getAttribute('aria-expanded') === 'true';
        this.toggle.setAttribute('aria-expanded', String(!isExpanded));
        this.content.classList.toggle('active');
        if (this.icon) this.icon.classList.toggle('active');
      }
    }
    customElements.define('product-comparison-{{ ai_gen_id }}', ProductComparison{{ ai_gen_id }});
  })();
</script>


