{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-bestseller-slider-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 0;
  }

  .ai-bestseller-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    position: relative;
  }

  .ai-bestseller-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-bestseller-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 16px;
    font-weight: 600;
  }

  .ai-bestseller-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0;}

  .ai-bestseller-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
    width: 100%;
  }

  .ai-bestseller-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease;
    gap: {{ block.settings.column_gap }}px;
  }

  .ai-bestseller-slide-{{ ai_gen_id }} {
    flex: 0 0 calc((100% - {{ block.settings.column_gap | times: 5 }}px) / 6);
    min-width: 0;
  }

  .ai-bestseller-product-card-{{ ai_gen_id }} {
    background: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.card_text_alignment }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: {{ block.settings.card_border_width }}px {{ block.settings.card_border_style }} {{ block.settings.card_border_color }};
    height: 100%;
    display: flex;
    flex-direction: column;
    min-height: {{ block.settings.card_min_height }}px;
    {% if block.settings.card_shadow_enabled %}
      box-shadow: {{ block.settings.card_shadow_horizontal }}px {{ block.settings.card_shadow_vertical }}px {{ block.settings.card_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-bestseller-product-card-{{ ai_gen_id }}:hover {
    {% if block.settings.card_hover_effect == 'lift' %}
      transform: translateY(-{{ block.settings.card_hover_lift }}px);
    {% elsif block.settings.card_hover_effect == 'scale' %}
      transform: scale({{ block.settings.card_hover_scale | divided_by: 100.0 }});
    {% endif %}
    {% if block.settings.card_hover_shadow_enabled %}
      box-shadow: {{ block.settings.card_hover_shadow_horizontal }}px {{ block.settings.card_hover_shadow_vertical }}px {{ block.settings.card_hover_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.card_hover_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-bestseller-product-image-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    margin-bottom: {{ block.settings.image_margin_bottom }}px;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    position: relative;
    {% if block.settings.image_fit == 'contain' %}
      background-color: {{ block.settings.image_background_color }};
    {% endif %}
  }

  .ai-bestseller-product-image-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: {{ block.settings.image_fit }};{% if block.settings.image_fit == 'contain' %}
      object-position: center;
    {% endif %}
  }

  .ai-bestseller-product-image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-bestseller-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-bestseller-badge-{{ ai_gen_id }} {
    position: absolute;
    top: {{ block.settings.badge_position_top }}px;
    {% if block.settings.badge_position == 'left' %}
      left: {{ block.settings.badge_position_left }}px;
    {% else %}
      right: {{ block.settings.badge_position_left }}px;
    {% endif %}
    background: {{ block.settings.badge_color }};
    color: {{ block.settings.badge_text_color }};
    padding: {{ block.settings.badge_padding_vertical }}px {{ block.settings.badge_padding_horizontal }}px;
    border-radius: {{ block.settings.badge_border_radius }}px;
    font-size: {{ block.settings.badge_font_size }}px;
    font-weight: {{ block.settings.badge_font_weight }};
    text-transform: {{ block.settings.badge_text_transform }};
    letter-spacing: {{ block.settings.badge_letter_spacing }}px;}

  .ai-bestseller-product-info-{{ ai_gen_id }} {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
  }

  .ai-bestseller-product-brand-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_brand_size }}px;
    color: {{ block.settings.product_brand_color }};
    margin: 0;
    font-weight: {{ block.settings.product_brand_weight }};
    text-transform: {{ block.settings.product_brand_transform }};
    letter-spacing: {{ block.settings.product_brand_spacing }}px;
  }

  .ai-bestseller-product-series-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_series_size }}px;
    color: {{ block.settings.product_series_color }};
    margin: 0;
    font-weight: {{ block.settings.product_series_weight }};
    text-transform: {{ block.settings.product_series_transform }};
    letter-spacing: {{ block.settings.product_series_spacing }}px;
  }

  .ai-bestseller-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.product_title_color }};
    margin: 0;
    font-weight: {{ block.settings.product_title_weight }};
    line-height: {{ block.settings.product_title_line_height | divided_by: 100.0 }};
    text-transform: {{ block.settings.product_title_transform }};
  }

  .ai-bestseller-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_description_size }}px;
    color: {{ block.settings.product_description_color }};
    margin: 0;
    line-height: {{ block.settings.product_description_line_height | divided_by: 100.0 }};
    flex-grow: 1;
    font-weight: {{ block.settings.product_description_weight }};
  }

  .ai-bestseller-product-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size }}px;
    color: {{ block.settings.product_price_color }};
    font-weight: {{ block.settings.product_price_weight }};
    margin-top: auto;
    text-transform: {{ block.settings.product_price_transform }};
  }

  .ai-bestseller-price-from-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_price_size | times: 0.8 }}px;
    color: {{ block.settings.product_description_color }};
    font-weight: 400;
    margin-right: 4px;
  }

  .ai-bestseller-navigation-wrapper-{{ ai_gen_id }} {
    position: relative;
    margin-top: 40px;
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 20px;
  }

  .ai-bestseller-nav-{{ ai_gen_id }} {
    background: {{ block.settings.nav_button_color }};
    border: {{ block.settings.nav_button_border_width }}px solid {{ block.settings.nav_button_border_color }};
    width: {{ block.settings.nav_button_size }}px;
    height: {{ block.settings.nav_button_size }}px;
    border-radius: {% if block.settings.nav_button_style == 'circle' %}50%{% else %}{{ block.settings.nav_button_border_radius }}px{% endif %};
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.nav_button_text_color }};
    transition: all 0.3s ease;
    {% if block.settings.nav_button_shadow_enabled %}
      box-shadow: {{ block.settings.nav_button_shadow_horizontal }}px {{ block.settings.nav_button_shadow_vertical }}px {{ block.settings.nav_button_shadow_blur }}px rgba(0, 0, 0, {{ block.settings.nav_button_shadow_opacity | divided_by: 100.0 }});
    {% endif %}
  }

  .ai-bestseller-nav-{{ ai_gen_id }}:hover {
    background: {{ block.settings.nav_button_hover_color }};
    color: {{ block.settings.nav_button_hover_text_color }};
    transform: scale({{ block.settings.nav_button_hover_scale | divided_by: 100.0 }});
  }

  .ai-bestseller-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
    transform: scale(1);
  }

  .ai-bestseller-nav-{{ ai_gen_id }} svg {
    width: {{ block.settings.nav_icon_size }}px;
    height: {{ block.settings.nav_icon_size }}px;
  }

  .ai-bestseller-nav-info-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 8px;
    font-size: {{ block.settings.nav_info_size }}px;color: {{ block.settings.nav_info_color }};
    font-weight: {{ block.settings.nav_info_weight }};
  }

  .ai-bestseller-nav-dots-{{ ai_gen_id }} {
    display: flex;
    gap: 8px;align-items: center;
  }

  .ai-bestseller-nav-dot-{{ ai_gen_id }} {
    width: {{ block.settings.nav_dot_size }}px;
    height: {{ block.settings.nav_dot_size }}px;
    border-radius: 50%;
    background: {{ block.settings.nav_dot_inactive_color }};
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .ai-bestseller-nav-dot-{{ ai_gen_id }}.active {
    background: {{ block.settings.nav_dot_active_color }};
    transform: scale({{ block.settings.nav_dot_active_scale | divided_by: 100.0 }});
  }

  .ai-bestseller-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
  }

  .ai-bestseller-empty-title-{{ ai_gen_id }} {
    font-size: 24px;
    margin-bottom: 12px;
    color: #333;
  }

  .ai-bestseller-empty-text-{{ ai_gen_id }} {
    font-size: 16px;
  }

  @media screen and (max-width: {{ block.settings.max_width | times: 0.93 }}px) {
    .ai-bestseller-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.column_gap | times: 4 }}px) / 5);
    }
  }

  @media screen and (max-width: {{ block.settings.max_width | times: 0.8 }}px) {
    .ai-bestseller-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.column_gap | times: 3 }}px) / 4);
    }
  }

  @media screen and (max-width: 991px) {
    .ai-bestseller-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.column_gap | times: 2 }}px) / 3);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-bestseller-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - {{ block.settings.column_gap | times: 1 }}px) / 2);
    }
    
    .ai-bestseller-nav-{{ ai_gen_id }} {
      width: {{ block.settings.nav_button_size | times: 0.8 }}px;
      height: {{ block.settings.nav_button_size | times: 0.8 }}px;
    }

    .ai-bestseller-product-image-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }

    .ai-bestseller-product-card-{{ ai_gen_id }} {
      min-height: {{ block.settings.card_min_height | times: 0.8 }}px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-bestseller-slide-{{ ai_gen_id }} {
      flex: 0 0 100%;
    }
  }
{% endstyle %}

<bestseller-slider-{{ ai_gen_id }}
  class="ai-bestseller-slider-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-bestseller-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-bestseller-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-bestseller-title-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-bestseller-subtitle-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% if block.settings.collection != blank and block.settings.collection.products.size > 0 %}
      <div class="ai-bestseller-slider-wrapper-{{ ai_gen_id }}">
        <div class="ai-bestseller-track-{{ ai_gen_id }}">
          {% for product in block.settings.collection.products limit: block.settings.products_to_show %}
            <div class="ai-bestseller-slide-{{ ai_gen_id }}">
              <div class="ai-bestseller-product-card-{{ ai_gen_id }}">
                <div class="ai-bestseller-product-image-{{ ai_gen_id }}">
                  {% if product.featured_image %}
                    <img
                      src="{{ product.featured_image | image_url: width: 400}}"
                      alt="{{ product.featured_image.alt | escape }}"
                      loading="lazy"
                      width="400"
                      height="{{ block.settings.image_height }}"
                    >
                  {% else %}
                    <div class="ai-bestseller-product-image-placeholder-{{ ai_gen_id }}">
                      {{'product-1' | placeholder_svg_tag }}
                    </div>
                  {% endif %}
                  
                  {% if block.settings.show_badge %}
                    <div class="ai-bestseller-badge-{{ ai_gen_id }}">
                      {{ block.settings.badge_text }}
                    </div>
                  {% endif %}
                </div>

                <div class="ai-bestseller-product-info-{{ ai_gen_id }}">
                  {% if block.settings.show_brand and product.vendor != blank %}
                    <div class="ai-bestseller-product-brand-{{ ai_gen_id }}">
                      {{ product.vendor }}
                    </div>
                  {% endif %}

                  {% if block.settings.show_series and product.type != blank %}
                    <div class="ai-bestseller-product-series-{{ ai_gen_id }}">
                      {{ product.type }}
                    </div>
                  {% endif %}<h3 class="ai-bestseller-product-title-{{ ai_gen_id }}">
                    {{ product.title }}
                  </h3>

                  {% if block.settings.show_description and product.description != blank %}
                    <div class="ai-bestseller-product-description-{{ ai_gen_id }}">
                      {{ product.description | strip_html | truncate: block.settings.description_length }}
                    </div>
                  {% endif %}<div class="ai-bestseller-product-price-{{ ai_gen_id }}">
                    {% if product.price_varies %}
                      <span class="ai-bestseller-price-from-{{ ai_gen_id }}">From</span>
                    {% endif %}
                    {{ product.price_min | money }}</div>
                </div>
              </div>
            </div>
          {% endfor %}
        </div>
      </div>

      {% if block.settings.show_navigation %}
        <div class="ai-bestseller-navigation-wrapper-{{ ai_gen_id }}">
          <button
            class="ai-bestseller-nav-{{ ai_gen_id }} ai-bestseller-nav-prev-{{ ai_gen_id }}"
            aria-label="Previous products"
            disabled
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="15,18 9,12 15,6"></polyline>
            </svg>
          </button>

          {% if block.settings.show_nav_info %}
            <div class="ai-bestseller-nav-info-{{ ai_gen_id }}">
              <span class="ai-bestseller-current-slide-{{ ai_gen_id }}">1</span>
              <span>/</span>
              <span class="ai-bestseller-total-slides-{{ ai_gen_id }}">1</span>
            </div>
          {% endif %}

          {% if block.settings.show_nav_dots %}
            <div class="ai-bestseller-nav-dots-{{ ai_gen_id }}">
            </div>
          {% endif %}

          <button
            class="ai-bestseller-nav-{{ ai_gen_id }} ai-bestseller-nav-next-{{ ai_gen_id }}"
            aria-label="Next products"
          >
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="9,18 15,12 9,6"></polyline>
            </svg>
          </button>
        </div>
      {% endif %}
    {% else %}
      <div class="ai-bestseller-empty-state-{{ ai_gen_id }}">
        <h3 class="ai-bestseller-empty-title-{{ ai_gen_id }}">No products to display</h3>
        <p class="ai-bestseller-empty-text-{{ ai_gen_id }}">Select a collection with products to show your bestsellers</p>
      </div>
    {% endif %}
  </div>
</bestseller-slider-{{ ai_gen_id }}><script>
  (function() {
    class BestsellerSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.slidesToShow = 6;
        this.totalSlides = 0;
      }

      connectedCallback() {
        this.track = this.querySelector('.ai-bestseller-track-{{ ai_gen_id }}');
        this.slides = this.querySelectorAll('.ai-bestseller-slide-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-bestseller-nav-prev-{{ ai_gen_id }}');
        this.nextBtn = this.querySelector('.ai-bestseller-nav-next-{{ ai_gen_id }}');
        this.currentSlideEl = this.querySelector('.ai-bestseller-current-slide-{{ ai_gen_id }}');
        this.totalSlidesEl = this.querySelector('.ai-bestseller-total-slides-{{ ai_gen_id }}');
        this.dotsContainer = this.querySelector('.ai-bestseller-nav-dots-{{ ai_gen_id }}');

        if (!this.track || this.slides.length === 0) return;

        this.updateSlidesToShow();
        this.calculateTotalSlides();
        this.setupEventListeners();
        this.updateNavigation();
        this.updateNavInfo();
        this.createDots();

        window.addEventListener('resize', () => {
          this.updateSlidesToShow();
          this.calculateTotalSlides();
          this.updateSlidePosition();
          this.updateNavigation();
          this.updateNavInfo();
          this.createDots();
        });
      }

      updateSlidesToShow() {
        const width = window.innerWidth;
        const maxWidth = {{ block.settings.max_width }};
        
        if (width <= 480) {
          this.slidesToShow = 1;
        } else if (width <= 749) {
          this.slidesToShow = 2;
        } else if (width <= 991) {
          this.slidesToShow = 3;
        } else if (width <= maxWidth * 0.8) {
          this.slidesToShow = 4;
        } else if (width <= maxWidth * 0.93) {
          this.slidesToShow = 5;
        } else {
          this.slidesToShow = 6;
        }
      }

      calculateTotalSlides() {
        this.totalSlides = Math.max(1, Math.ceil((this.slides.length - this.slidesToShow + 1)));if (this.currentSlide >= this.totalSlides) {
          this.currentSlide = Math.max(0, this.totalSlides - 1);
        }
      }

      setupEventListeners() {
        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => this.previousSlide());
        }
        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => this.nextSlide());
        }
      }

      previousSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateSlidePosition();
          this.updateNavigation();
          this.updateNavInfo();
          this.updateDots();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.totalSlides - 1) {
          this.currentSlide++;
          this.updateSlidePosition();
          this.updateNavigation();
          this.updateNavInfo();
          this.updateDots();
        }
      }

      goToSlide(slideIndex) {
        if (slideIndex >= 0 && slideIndex < this.totalSlides) {
          this.currentSlide = slideIndex;
          this.updateSlidePosition();
          this.updateNavigation();
          this.updateNavInfo();
          this.updateDots();
        }
      }

      updateSlidePosition() {
        const slideWidth = 100 / this.slidesToShow;
        const translateX = -(this.currentSlide * slideWidth);
        this.track.style.transform = `translateX(${translateX}%)`;
      }

      updateNavigation() {
        if (this.prevBtn) {
          this.prevBtn.disabled = this.currentSlide === 0;
        }
        if (this.nextBtn) {
          this.nextBtn.disabled = this.currentSlide >= this.totalSlides - 1;
        }

        const showNav = this.slides.length > this.slidesToShow;
        if (this.prevBtn) {
          this.prevBtn.style.display = showNav ? 'flex' : 'none';
        }
        if (this.nextBtn) {
          this.nextBtn.style.display = showNav ? 'flex' : 'none';
        }
      }

      updateNavInfo() {
        if (this.currentSlideEl) {
          this.currentSlideEl.textContent = this.currentSlide + 1;
        }
        if (this.totalSlidesEl) {
          this.totalSlidesEl.textContent = this.totalSlides;
        }
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        
        if (this.slides.length <= this.slidesToShow) return;

        for (let i = 0; i < this.totalSlides; i++) {
          const dot = document.createElement('button');
          dot.className = `ai-bestseller-nav-dot-{{ ai_gen_id }}${i === this.currentSlide ? ' active' : ''}`;
          dot.setAttribute('aria-label', `Go to slide ${i + 1}`);
          dot.addEventListener('click', () => this.goToSlide(i));
          this.dotsContainer.appendChild(dot);
        }
      }

      updateDots() {
        if (!this.dotsContainer) return;
        
        const dots = this.dotsContainer.querySelectorAll('.ai-bestseller-nav-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          dot.classList.toggle('active', index === this.currentSlide);
        });
      }
    }

    customElements.define('bestseller-slider-{{ ai_gen_id }}', BestsellerSlider{{ ai_gen_id }});
  })();
</script>

