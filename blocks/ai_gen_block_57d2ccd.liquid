{% comment %} Banner slider component — improved mobile swipe handling. Schema untouched. {% endcomment %}

{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}

  .ai-banner-slider-{{ ai_gen_id }} {
    width: 100%;
    overflow: hidden;
    position: relative;
    margin-top: {{ block.settings.section_margin_top }}px;
    padding-top: {{ block.settings.section_padding_top }}px;
    padding-bottom: {{ block.settings.section_padding_bottom }}px;
  }

  .ai-banner-slider-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.section_width }}px;
    margin: 0 auto;
    padding: 0 20px;
    margin-top: 38px;
  }
  @media (max-width: 749px) {
  .ai-banner-slider-container-{{ ai_gen_id }} {
    margin-bottom: 30px !important;
  }
}


  .ai-banner-slider-wrapper-{{ ai_gen_id }} {
    position: relative;
    overflow: hidden;
  }

  .ai-banner-slider-track-{{ ai_gen_id }} {
    display: flex;
    transition: transform 0.3s ease-out;
    touch-action: pan-y;
  }

  .ai-banner-slide-{{ ai_gen_id }} {
    flex: 0 0 100%;
    position: relative;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    height: {{ block.settings.slide_height }}px;
  }

  .ai-banner-slide-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    transition: transform 0.3s ease;
  }

  .ai-banner-slide-{{ ai_gen_id }}:hover .ai-banner-slide-background-{{ ai_gen_id }} {
    transform: scale({{ block.settings.bg_hover_scale }});
  }

  .ai-banner-slide-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-banner-slide-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-banner-slide-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 500px;
    max-height: 500px;
  }

  .ai-banner-slide-content-{{ ai_gen_id }} {
    position: relative;
    z-index: 2;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: {{ block.settings.content_vertical_alignment }};
    align-items: {{ block.settings.content_horizontal_alignment }};
    padding: {{ block.settings.content_padding_top }}px {{ block.settings.content_padding_right }}px {{ block.settings.content_padding_bottom }}px {{ block.settings.content_padding_left }}px;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-banner-slide-foreground-{{ ai_gen_id }} {
    position: absolute;
    z-index: 1;
    transition: transform 0.3s ease, opacity 0.3s ease;
    top: {{ block.settings.foreground_position_y }}%;
    left: {{ block.settings.foreground_position_x }}%;
    transform: translate(-50%, -50%);
    width: {{ block.settings.foreground_width }}px;
    max-width: 100%;
  }

  .ai-banner-slide-{{ ai_gen_id }}:hover .ai-banner-slide-foreground-{{ ai_gen_id }} {
    {% if block.settings.foreground_hover_effect == 'scale' %}
      transform: translate(-50%, -50%) scale(1.1);
    {% elsif block.settings.foreground_hover_effect == 'fade' %}
      opacity: 0.8;
    {% elsif block.settings.foreground_hover_effect == 'lift' %}
      transform: translate(-50%, -50%) translateY(-10px);
    {% endif %}
  }

  .ai-banner-slide-foreground-{{ ai_gen_id }} img {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-banner-slide-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    font-weight: {{ block.settings.heading_weight }};
    line-height: 1.2;
  }

  .ai-banner-slide-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.subheading_color }};
    margin: 0 0 {{ block.settings.subheading_spacing }}px;
    font-weight: {{ block.settings.subheading_weight }};
    line-height: 1.4;
  }

  .ai-banner-slide-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    transition: all 0.3s ease;
    border: none;
    cursor: pointer;
  }

  .ai-banner-slide-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
    transform: translateY(-2px);
  }

  /* --- Improved mobile / swipe CSS additions --- */
  .ai-banner-slider-wrapper-{{ ai_gen_id }} {
    -webkit-overflow-scrolling: touch;
  }

  .ai-banner-slider-track-{{ ai_gen_id }} {
    will-change: transform;
    touch-action: pan-y;
    cursor: grab;
  }

  .ai-swipe-hint-{{ ai_gen_id }} {
    position: absolute;
    right: 20px;
    bottom: 14px;
    z-index: 4;
    font-size: 12px;
    color: rgba(255,255,255,0.95);
    background: rgba(0,0,0,0.25);
    padding: 6px 10px;
    border-radius: 999px;
    display: none;
    align-items: center;
    gap: 8px;
    user-select: none;
    pointer-events: none;
  }
  @media (max-width: 749px) {
    .ai-swipe-hint-{{ ai_gen_id }} { display: flex; }
  }

  @media screen and (min-width: 750px) {
    .ai-banner-slider-track-{{ ai_gen_id }} {
      gap: 16px;
    }

    .ai-banner-slide-{{ ai_gen_id }} {
      flex: 0 0 calc((100% - 80px) / 6);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-banner-slider-container-{{ ai_gen_id }} {
      padding: 0 20px;
    }

    .ai-banner-slider-track-{{ ai_gen_id }} {
      gap: 12px;
    }

    .ai-banner-slide-{{ ai_gen_id }} {
      flex: 0 0 calc({{ block.settings.mobile_slide_width }}% - 6px);
      height: {{ block.settings.slide_height_mobile }}px;
    }

    .ai-banner-slide-content-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_content_padding_top }}px {{ block.settings.mobile_content_padding_right }}px {{ block.settings.mobile_content_padding_bottom }}px {{ block.settings.mobile_content_padding_left }}px;
    }

    .ai-banner-slide-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_heading_size }}px;
      margin-bottom: {{ block.settings.mobile_heading_spacing }}px;
    }

    .ai-banner-slide-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_subheading_size }}px;
      margin-bottom: {{ block.settings.mobile_subheading_spacing }}px;
    }

    .ai-banner-slide-foreground-{{ ai_gen_id }} {
      width: {{ block.settings.foreground_width | times: 0.7 }}px;
    }

    .ai-banner-slide-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_button_font_size }}px;
      padding: {{ block.settings.mobile_button_padding_vertical }}px {{ block.settings.mobile_button_padding_horizontal }}px;
    }
  }
{% endstyle %}

<banner-slider-{{ ai_gen_id }} class="ai-banner-slider-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-banner-slider-container-{{ ai_gen_id }}">
    <div class="ai-banner-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-banner-slider-track-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign heading_key = 'slide_' | append: i | append: '_heading'
            assign subheading_key = 'slide_' | append: i | append: '_subheading'
            assign button_text_key = 'slide_' | append: i | append: '_button_text'
            assign button_link_key = 'slide_' | append: i | append: '_button_link'
            assign bg_image_key = 'slide_' | append: i | append: '_bg_image'
            assign fg_image_key = 'slide_' | append: i | append: '_fg_image'

            assign heading = block.settings[heading_key]
            assign subheading = block.settings[subheading_key]
            assign button_text = block.settings[button_text_key]
            assign button_link = block.settings[button_link_key]
            assign bg_image = block.settings[bg_image_key]
            assign fg_image = block.settings[fg_image_key]
          %}

          <div class="ai-banner-slide-{{ ai_gen_id }}" data-slide="{{ i }}">
            <div class="ai-banner-slide-background-{{ ai_gen_id }}">
              {% if bg_image %}
                <img
                  src="{{ bg_image | image_url: width: 2000 }}"
                  alt="{{ bg_image.alt | escape }}"
                  loading="lazy"
                  width="{{ bg_image.width }}"
                  height="{{ bg_image.height }}"
                >
              {% else %}
                <div class="ai-banner-slide-background-placeholder-{{ ai_gen_id }}">
                  {{ 'hero-apparel-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            {% if fg_image %}
              <div class="ai-banner-slide-foreground-{{ ai_gen_id }}">
                <img
                  src="{{ fg_image | image_url: width: 1000 }}"
                  alt="{{ fg_image.alt | escape }}"
                  loading="lazy"
                  width="{{ fg_image.width }}"
                  height="{{ fg_image.height }}"
                >
              </div>
            {% endif %}

            <div class="ai-banner-slide-content-{{ ai_gen_id }}">
              {% if heading != blank %}
                <h2 class="ai-banner-slide-heading-{{ ai_gen_id }}">{{ heading }}</h2>
              {% endif %}
              {% if subheading != blank %}
                <p class="ai-banner-slide-subheading-{{ ai_gen_id }}">{{ subheading }}</p>
              {% endif %}
              {% if button_text != blank %}
                <a
                  href="{{ button_link }}"
                  class="ai-banner-slide-button-{{ ai_gen_id }}"
                >
                  {{ button_text }}
                </a>
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>



    </div>
  </div>
</banner-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class BannerSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.track = this.querySelector('.ai-banner-slider-track-{{ ai_gen_id }}');
        this.slides = Array.from(this.querySelectorAll('.ai-banner-slide-{{ ai_gen_id }}'));
        this.currentSlide = 0;
        this.isDragging = false;
        this.startX = 0;
        this.startY = 0;
        this.lastTranslate = 0;
        this._isSwiping = false;
        this.pointerId = null;
        this.gap = 12;
        this.updateIsMobile();
      }

      connectedCallback() {
        this.bindHandlers();
        this.updateSlider(); // pos inicial
        window.addEventListener('resize', () => { this.updateIsMobile(); this.updateSlider(); });
      }

      updateIsMobile() {
        this.isMobile = window.innerWidth < 750;
      }

      bindHandlers() {
        // Pointer events (better control across touch/mouse/stylus)
        this.track.addEventListener('pointerdown', this.onPointerDown.bind(this));
        window.addEventListener('pointermove', this.onPointerMove.bind(this));
        window.addEventListener('pointerup', this.onPointerUp.bind(this));
        window.addEventListener('pointercancel', this.onPointerUp.bind(this));

        // mouse fallback visual tweaks
        this.track.addEventListener('mousedown', () => { this.track.style.cursor = 'grabbing'; });
        this.track.addEventListener('mouseup', () => { this.track.style.cursor = 'grab'; });
        this.track.addEventListener('mouseleave', () => { this.track.style.cursor = 'grab'; });
      }

      getSlideMetrics() {
        const slideEl = this.slides[0];
        const slideRect = slideEl.getBoundingClientRect();
        const slideWidth = Math.round(slideRect.width);
        const containerRect = this.track.parentElement.getBoundingClientRect();
        return { slideWidth, containerWidth: Math.round(containerRect.width) };
      }

      onPointerDown(e) {
        // Only left button or touch/stylus
        if (e.pointerType === 'mouse' && e.button !== 0) return;
        this.pointerId = e.pointerId;
        this.startX = e.clientX;
        this.startY = e.clientY;
        this.isDragging = true;
        this._isSwiping = false;
        this.initialTranslate = this.lastTranslate || 0;
        try { this.track.setPointerCapture && this.track.setPointerCapture(e.pointerId); } catch(err){}
      }

      onPointerMove(e) {
        if (!this.isDragging || this.pointerId !== e.pointerId) return;
        const dx = e.clientX - this.startX;
        const dy = e.clientY - this.startY;

        // Determine gesture direction (angle) — prefer vertical scroll unless horizontal dominates
        if (!this._isSwiping) {
          const absX = Math.abs(dx), absY = Math.abs(dy);
          if (absX < 6 && absY < 6) return; // ignore micro-movements
          if (absY > absX) {
            // vertical movement: hand control back to page scroll
            this.cancelDragging(e);
            return;
          } else {
            // horizontal: slider takes control
            this._isSwiping = true;
            try { e.preventDefault(); } catch (err) {}
            this.track.style.transition = 'none';
          }
        }

        if (this._isSwiping) {
          // live drag
          const translate = this.initialTranslate + dx;
          this.track.style.transform = `translateX(${translate}px)`;
        }
      }

      onPointerUp(e) {
        if (!this.isDragging || this.pointerId !== e.pointerId) return;
        const dx = e.clientX - this.startX;
        if (!this._isSwiping) {
          this.cancelDragging(e);
          return;
        }

        // threshold: 20% of slide width
        const threshold = 0.20 * this.getSlideMetrics().slideWidth;
        if (dx < -threshold) {
          this.nextSlide();
        } else if (dx > threshold) {
          this.prevSlide();
        } else {
          this.snapToCurrent();
        }

        this.isDragging = false;
        this._isSwiping = false;
        this.pointerId = null;
        try { this.track.releasePointerCapture && this.track.releasePointerCapture(e.pointerId); } catch(err){}
      }

      cancelDragging(e) {
        this.isDragging = false;
        this._isSwiping = false;
        this.pointerId = null;
        try { this.track.releasePointerCapture && this.track.releasePointerCapture(e.pointerId); } catch(err){}
        this.snapToCurrent();
      }

      nextSlide() {
        const visible = this.visibleCount();
        const maxIndex = Math.max(0, this.slides.length - visible);
        this.currentSlide = Math.min(maxIndex, this.currentSlide + 1);
        this.snapToCurrent();
      }

      prevSlide() {
        this.currentSlide = Math.max(0, this.currentSlide - 1);
        this.snapToCurrent();
      }

      visibleCount() {
        if (!this.isMobile) return 6;
        return 1; // on mobile we show 1 primary + partial next
      }

      snapToCurrent() {
        const { slideWidth } = this.getSlideMetrics();
        const gap = this.isMobile ? 12 : 16;
        const translate = -(this.currentSlide * (slideWidth + gap));
        this.track.style.transition = 'transform 300ms ease-out';
        this.track.style.transform = `translateX(${translate}px)`;
        this.lastTranslate = translate;
      }

      updateSlider() {
        if (!this.isMobile) {
          this.track.style.transition = 'none';
          this.track.style.transform = 'translateX(0px)';
          this.lastTranslate = 0;
          this.currentSlide = 0;
          return;
        }
        const { slideWidth } = this.getSlideMetrics();
        const gap = 12;
        const translate = -(this.currentSlide * (slideWidth + gap));
        this.track.style.transition = 'none';
        this.track.style.transform = `translateX(${translate}px)`;
        this.lastTranslate = translate;
      }
    }

    customElements.define('banner-slider-{{ ai_gen_id }}', BannerSlider{{ ai_gen_id }});
  })();
</script>

