{% doc %}
  @prompt
    title aligned to the left in desktop and centered in mobile in mobile maximum width of the container is 1450px, use default theme font and give me controls for modif things like weight size, color and  up and down space, add adjustment for padding left  for the desktop version. 
    
    the container maximum of 1500px 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-title-block-{{ ai_gen_id }} {
    max-width: 1500px;
    margin: 0 auto;
    padding-top: {{ block.settings.spacing_top }}px;
    padding-bottom: {{ block.settings.spacing_bottom }}px;
    padding-left: 20px;
    padding-right: 20px;
  }

  .ai-title-{{ ai_gen_id }} {
    font-family: {{ block.settings.title_font.family }}, {{ block.settings.title_font.fallback_families }};
    font-weight: {{ block.settings.title_font.weight }};
    font-style: {{ block.settings.title_font.style }};
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0;
    text-align: left;
    padding-left: {{ block.settings.padding_left_desktop }}px;
  }

  @media screen and (max-width: 749px) {
    .ai-title-{{ ai_gen_id }} {
      text-align: center;
      padding-left: 0;
    }
  }



.ai-categories-slider-wrapper-{{ ai_gen_id }}{ 
  position: relative; 
  margin-top: 0; 
}

}




{% endstyle %}

<div class="ai-title-block-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.title != blank %}
    <h2 class="ai-title-{{ ai_gen_id }}">{{ block.settings.title }}</h2>
  {% endif %}
</div>

{% schema %}
{
  "name": "Title",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "Your title here"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "font_picker",
      "id": "title_font",
      "label": "Font",
      "default": "barlow_n4"
    },
    {
      "type": "range",
      "id": "title_size",
      "min": 16,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "Size",
      "default": 32
    },
    {
      "type": "color",
      "id": "title_color",
      "label": "Color",
      "default": "#121212"
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "spacing_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top",
      "default": 40
    },
    {
      "type": "range",
      "id": "spacing_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_left_desktop",
      "min": 0,
      "max": 200,
      "step": 4,
      "unit": "px",
      "label": "Left padding (desktop)",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Title"
    }
  ]
}
{% endschema %}
