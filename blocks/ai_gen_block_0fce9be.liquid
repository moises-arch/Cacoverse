</testimonials-module-{{ ai_gen_id }}><script>
  (function() {
    class TestimonialsModule{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.testimonialCards = [];
        this.dots = [];
        this.scrollContainer = null;
      }

      connectedCallback() {
        this.setupAccessibility();
        this.initMobileScroll();
      }

      setupAccessibility() {
        const cards = this.querySelectorAll('.ai-testimonial-card-{{ ai_gen_id }}');
        cards.forEach((card, index) => {
          card.setAttribute('role', 'article');
          card.setAttribute('aria-label', `Customer testimonial ${index + 1}`);
        });

        const stars = this.querySelectorAll('.ai-testimonial-stars-{{ ai_gen_id }}');
        stars.forEach((starGroup) => {
          const filledStars = starGroup.querySelectorAll('.ai-testimonial-star-{{ ai_gen_id }}:not(.ai-testimonial-star-empty-{{ ai_gen_id }})').length;
          starGroup.setAttribute('role', 'img');
          starGroup.setAttribute('aria-label', `${filledStars} out of 5 stars`);
        });
      }

      initMobileScroll() {
        this.scrollContainer = this.querySelector('.ai-testimonials-scroll-container-{{ ai_gen_id }}');
        this.testimonialCards = this.querySelectorAll('.ai-testimonials-scroll-container-{{ ai_gen_id }} .ai-testimonial-card-{{ ai_gen_id }}');
        this.dots = this.querySelectorAll('.ai-testimonials-dot-{{ ai_gen_id }}');

        if (!this.scrollContainer || this.testimonialCards.length === 0) return;

        this.setupScrollListeners();
        this.setupDotNavigation();
      }

      setupScrollListeners() {
        let scrollTimeout;
        
        this.scrollContainer.addEventListener('scroll', () => {
          clearTimeout(scrollTimeout);
          scrollTimeout = setTimeout(() => {
            this.updateActiveIndicator();
          }, 100);
        });

        this.scrollContainer.addEventListener('touchstart', () => {
          this.scrollContainer.style.scrollSnapType = 'none';
        });

        this.scrollContainer.addEventListener('touchend', () => {
          this.scrollContainer.style.scrollSnapType = 'x mandatory';
          setTimeout(() => {
            this.snapToNearestCard();
          }, 100);
        });
      }

      setupDotNavigation() {
        this.dots.forEach((dot, index) => {
          dot.addEventListener('click', () => {
            this.scrollToCard(index);
          });
        });
      }

      updateActiveIndicator() {
        const containerRect = this.scrollContainer.getBoundingClientRect();
        const containerCenter = containerRect.left + containerRect.width / 2;

        let closestIndex = 0;
        let closestDistance = Infinity;

        this.testimonialCards.forEach((card, index) => {
          const cardRect = card.getBoundingClientRect();
          const cardCenter = cardRect.left + cardRect.width / 2;
          const distance = Math.abs(containerCenter - cardCenter);

          if (distance < closestDistance) {
            closestDistance = distance;
            closestIndex = index;
          }
        });

        if (closestIndex !== this.currentIndex) {
          this.currentIndex = closestIndex;
          this.updateDots();
        }
      }

      updateDots() {
        this.dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      scrollToCard(index) {
        if (index >= 0 && index < this.testimonialCards.length) {
          const targetCard = this.testimonialCards[index];
          const containerRect = this.scrollContainer.getBoundingClientRect();
          const cardRect = targetCard.getBoundingClientRect();
          
          const scrollLeft = this.scrollContainer.scrollLeft + cardRect.left - containerRect.left;
          
          this.scrollContainer.scrollTo({
            left: scrollLeft,
            behavior: 'smooth'
          });

          this.currentIndex = index;
          this.updateDots();
        }
      }

      snapToNearestCard() {
        const containerRect = this.scrollContainer.getBoundingClientRect();
        const containerCenter = containerRect.left + containerRect.width / 2;

        let closestIndex = 0;
        let closestDistance = Infinity;

        this.testimonialCards.forEach((card, index) => {
          const cardRect = card.getBoundingClientRect();
          const cardCenter = cardRect.left + cardRect.width / 2;
          const distance = Math.abs(containerCenter - cardCenter);

          if (distance < closestDistance) {
            closestDistance = distance;
            closestIndex = index;
          }
        });

        this.scrollToCard(closestIndex);
      }
    }

    customElements.define('testimonials-module-{{ ai_gen_id }}', TestimonialsModule{{ ai_gen_id }});
  })();
</script>

