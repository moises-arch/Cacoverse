{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonials-container-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonials-wrapper-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-testimonials-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: {{ block.settings.heading_margin }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;font-weight: 600;
  }

  .ai-testimonials-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.card_spacing }}px;
    text-align: left;
  }

  .ai-testimonial-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    box-shadow: 0 {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};display: flex;
    flex-direction: column;
    height: 100%;
    text-align: {{ block.settings.card_alignment }};
  }

  .ai-testimonial-stars-{{ ai_gen_id }} {
    display: flex;
    gap: 2px;
    margin-bottom: {{ block.settings.stars_margin }}px;
    {% if block.settings.card_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.card_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-star-{{ ai_gen_id }} {
    width: {{ block.settings.star_size }}px;
    height: {{ block.settings.star_size }}px;
    color: {{ block.settings.star_color }};
  }

  .ai-testimonial-star-empty-{{ ai_gen_id }} {
    color: {{ block.settings.star_empty_color }};
  }

  .ai-testimonial-review-{{ ai_gen_id }} {
    color: {{ block.settings.review_color }};
    font-size: {{ block.settings.review_size }}px;
    line-height: 1.5;
    margin-bottom: {{ block.settings.review_margin }}px;flex-grow: 1;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.author_gap }}px;
    margin-top: auto;
    {% if block.settings.card_alignment == 'center' %}
      justify-content: center;
    {% elsif block.settings.card_alignment == 'right' %}
      justify-content: flex-end;
    {% endif %}
  }

  .ai-testimonial-photo-{{ ai_gen_id }} {
    width: {{ block.settings.photo_size }}px;
    height: {{ block.settings.photo_size }}px;
    border-radius: 50%;
    overflow: hidden;
    flex-shrink: 0;background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-testimonial-photo-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-testimonial-photo-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;color: #999;
  }

  .ai-testimonial-name-{{ ai_gen_id }} {
    color: {{ block.settings.name_color }};
    font-size: {{ block.settings.name_size }}px;
    font-weight: 600;
    margin: 0;
  }

  .ai-testimonial-title-{{ ai_gen_id }} {
    color: {{ block.settings.title_color }};
    font-size: {{ block.settings.title_size }}px;
    margin: 2px 0 0 0;
  }

  .ai-testimonial-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 40px 20px;
    color: #666;
    font-style: italic;
  }

  .ai-testimonials-scroll-container-{{ ai_gen_id }} {
    display: none;
  }

  .ai-testimonials-scroll-indicators-{{ ai_gen_id }} {
    display: none;
    justify-content: center;
    gap: 8px;
    margin-top: {{ block.settings.card_spacing }}px;
  }

  .ai-testimonials-dot-{{ ai_gen_id }} {
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: {{ block.settings.star_empty_color }};
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-testimonials-dot-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.star_color }};
  }

  @media screen and (max-width: 768px) {
    .ai-testimonials-container-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.8 }}px {{ block.settings.mobile_margin }}px;
    }

    .ai-testimonials-grid-{{ ai_gen_id }} {
      display: none;
    }

    .ai-testimonials-scroll-container-{{ ai_gen_id }} {
      display: block;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      -webkit-overflow-scrolling: touch;
      scrollbar-width: none;
      -ms-overflow-style: none;margin: 0 -{{ block.settings.mobile_margin }}px;
      padding: 0 {{ block.settings.mobile_margin }}px;
    }

    .ai-testimonials-scroll-container-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-testimonials-scroll-wrapper-{{ ai_gen_id }} {
      display: flex;
      gap: {{ block.settings.card_spacing }}px;
      padding-bottom: 10px;
    }

    .ai-testimonials-scroll-container-{{ ai_gen_id }} .ai-testimonial-card-{{ ai_gen_id }} {
      min-width: calc(100vw - {{ block.settings.mobile_margin | times: 2 | plus: block.settings.card_spacing }}px);
      width: calc(100vw - {{ block.settings.mobile_margin | times: 2 | plus: block.settings.card_spacing }}px);scroll-snap-align: start;padding: {{ block.settings.card_padding | times: 0.8 }}px;
      flex-shrink: 0;
    }

    .ai-testimonials-scroll-indicators-{{ ai_gen_id }} {
      display: flex;}

    .ai-testimonials-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }
  }
