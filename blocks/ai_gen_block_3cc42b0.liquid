{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-contact-info-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 20px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-contact-info-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
  }

  .ai-contact-info-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 48px;
  }

  .ai-contact-info-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 700;
    color: {{ block.settings.title_color }};
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-contact-info-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.5;
  }

  .ai-contact-info-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 24px;
    align-items: stretch;
  }

  .ai-contact-info-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_radius }}px;
    padding: 20px 16px;
    text-align: center;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid {{ block.settings.card_border_color }};
    min-height: {{ block.settings.card_height }}px;
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .ai-contact-info-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.1);
  }

  .ai-contact-info-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: {{ block.settings.icon_background }};
    border-radius: 50%;
    color: {{ block.settings.icon_color }};
  }

  .ai-contact-info-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.5);
    height: calc({{ block.settings.icon_size }}px * 0.5);
  }

  .ai-contact-info-card-title-{{ ai_gen_id }} {
    font-size: 17px;
    font-weight: 600;
    color: {{ block.settings.card_title_color }};
    margin: 0 0 8px;
  }

  .ai-contact-info-card-text-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.card_text_color }};
    margin: 0 0 4px;
    line-height: 1.5;
  }

  .ai-contact-info-card-link-{{ ai_gen_id }} {
    color: {{ block.settings.link_color }};
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s ease;
    display: block;
    margin-bottom: 3px;
    font-size: 14px;
  }

  .ai-contact-info-card-link-{{ ai_gen_id }}:hover {
    color: {{ block.settings.link_hover_color }};
    text-decoration: underline;
  }

  @media screen and (max-width: 989px) {
    .ai-contact-info-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-contact-info-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 16px;
    }

    .ai-contact-info-header-{{ ai_gen_id }} {
      margin-bottom: 32px;
    }

    .ai-contact-info-title-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.title_size }}px * 0.75);
    }

    .ai-contact-info-subtitle-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.subtitle_size }}px * 0.9);
    }

    .ai-contact-info-card-{{ ai_gen_id }} {
      min-height: auto;
      padding: 16px 12px;
    }

    .ai-contact-info-icon-{{ ai_gen_id }} {
      width: calc({{ block.settings.icon_size }}px * 0.75);
      height: calc({{ block.settings.icon_size }}px * 0.75);
      margin: 0 auto 8px;
    }

    .ai-contact-info-icon-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size }}px * 0.4);
      height: calc({{ block.settings.icon_size }}px * 0.4);
    }

    .ai-contact-info-card-title-{{ ai_gen_id }} {
      font-size: 15px;
      margin: 0 0 6px;
    }

    .ai-contact-info-card-text-{{ ai_gen_id }} {
      font-size: 13px;
      margin: 0 0 3px;
    }

    .ai-contact-info-card-link-{{ ai_gen_id }} {
      font-size: 13px;
      margin-bottom: 2px;
    }
  }


/* ===== Desktop: título y subtítulo alineados a la izquierda ===== */
@media (min-width: 990px){
  .ai-contact-info-header-{{ ai_gen_id }}{
    text-align: left !important;
  }
  /* por si algún theme fuerza centrado en los propios elementos */
  .ai-contact-info-title-{{ ai_gen_id }},
  .ai-contact-info-subtitle-{{ ai_gen_id }}{
    margin-left: 0 !important;
    margin-right: 0 !important;
    text-align: left !important;
  }
}



/* ===== MOBILE: two-column layout with centered, larger icon ===== */
@media (max-width: 749px) {
  .ai-contact-info-card-{{ ai_gen_id }}{
    display: grid !important;
    grid-template-columns: 64px 1fr; /* left = icon, right = info */
    align-items: center;              /* vertically center the icon */
    gap: 14px;
    text-align: left !important;
    padding: 16px 12px;
  }

  .ai-contact-info-icon-{{ ai_gen_id }}{
    grid-column: 1;
    grid-row: 1 / span 4;
    margin: 0 !important;
    display: flex !important;
    justify-content: center;
    align-items: center;             /* center perfectly inside circle */
    width: 56px !important;
    height: 56px !important;
  }

  .ai-contact-info-icon-{{ ai_gen_id }} svg{
    width: 28px !important;
    height: 28px !important;
  }

  .ai-contact-info-card-title-{{ ai_gen_id }},
  .ai-contact-info-card-text-{{ ai_gen_id }},
  .ai-contact-info-card-link-{{ ai_gen_id }}{
    grid-column: 2;
    text-align: left !important;
  }
}
/* ===== MOBILE: tighten letter spacing for compact look ===== */
@media (max-width: 749px){
  .ai-contact-info-card-title-{{ ai_gen_id }},
  .ai-contact-info-card-text-{{ ai_gen_id }},
  .ai-contact-info-card-link-{{ ai_gen_id }}{
    letter-spacing: -0.3px;  /* reduce slightly for smoother density */
  }

  /* If you want the heading even tighter */
  .ai-contact-info-card-title-{{ ai_gen_id }}{
    letter-spacing: -0.5px;
  }
}




{% endstyle %}

<div class="ai-contact-info-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-contact-info-container-{{ ai_gen_id }}">
    {% if block.settings.title != blank or block.settings.subtitle != blank %}
      <div class="ai-contact-info-header-{{ ai_gen_id }}">
        {% if block.settings.title != blank %}
