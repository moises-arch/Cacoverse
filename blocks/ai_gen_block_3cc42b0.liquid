              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
            </svg>
          </div>
          <h3 class="ai-contact-info-card-title-{{ ai_gen_id }}">{{ block.settings.phone_title }}</h3>
          <p class="ai-contact-info-card-text-{{ ai_gen_id }}">{{ block.settings.phone_text }}</p>
          {% if block.settings.phone_number_1 != blank %}
            <a href="tel:{{ block.settings.phone_number_1 | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' }}" class="ai-contact-info-card-link-{{ ai_gen_id }}">
              {{ block.settings.phone_number_1 }}
            </a>
          {% endif %}
          {% if block.settings.phone_number_2 != blank %}
            <a href="tel:{{ block.settings.phone_number_2 | replace: ' ', '' | replace: '-', '' | replace: '(', '' | replace: ')', '' }}" class="ai-contact-info-card-link-{{ ai_gen_id }}">
              {{ block.settings.phone_number_2 }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.show_email %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
              <polyline points="22,6 12,13 2,6"></polyline>
            </svg>
          </div>
          <h3 class="ai-contact-info-card-title-{{ ai_gen_id }}">{{ block.settings.email_title }}</h3>
          {% if block.settings.email_address != blank %}
            <a href="mailto:{{ block.settings.email_address }}" class="ai-contact-info-card-link-{{ ai_gen_id }}">
              {{ block.settings.email_address }}
            </a>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.show_address %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
              <circle cx="12" cy="10" r="3"></circle>
            </svg>
          </div>
          <h3 class="ai-contact-info-card-title-{{ ai_gen_id }}">{{ block.settings.address_title }}</h3>
          {% if block.settings.address != blank %}
            <div class="ai-contact-info-card-text-{{ ai_gen_id }}">
              {{ block.settings.address }}
            </div>
          {% endif %}
        </div>
      {% endif %}

      {% if block.settings.show_hours %}
        <div class="ai-contact-info-card-{{ ai_gen_id }}">
          <div class="ai-contact-info-icon-{{ ai_gen_id }}">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <circle cx="12" cy="12" r="10"></circle>
              <polyline points="12 6 12 12 16 14"></polyline>
            </svg>
          </div>
          <h3 class="ai-contact-info-card-title-{{ ai_gen_id }}">{{ block.settings.hours_title }}</h3>
          <p class="ai-contact-info-card-text-{{ ai_gen_id }}">{{ block.settings.hours_text }}</p>
          {% if block.settings.hours != blank %}
            <div class="ai-contact-info-card-text-{{ ai_gen_id }}">
              {{ block.settings.hours }}
            </div>
          {% endif %}
        </div>
      {% endif %}
    </div>
  </div>
</div>

