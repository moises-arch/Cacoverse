{% doc %}
  @prompt
    Create a Shopify section in Liquid called “You may also like” that shows related products on a product page.
    
    Use Shopify’s Recommendations API (recommendations.products).
    
    If no results, show products from the same collection (excluding the current product).
    
    Display up to 8 products in a responsive grid or carousel.
    
    Each card should show: image, title, optional subtitle (from metafield product.metafields.custom.sub_title), price, and optional “Add to cart” button.
    
    Add Theme Editor settings to control: heading text, layout (grid/carousel), max products, image ratio, show/hide price, subtitle, swatches, add-to-cart, border color, corner radius, and card shadow.
    
    Include clean, scoped CSS and vanilla JavaScript for carousel autoplay.
    
    Hide the section if fewer than 2 products are available.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  assign recommended_products = recommendations.products
  assign fallback_products = blank
  
  if recommended_products.size < 2 and product.collections.first
    assign fallback_products = product.collections.first.products | where: 'id', '!=', product.id | limit: block.settings.max_products
  endif
  
  if recommended_products.size >= 2
    assign display_products = recommended_products | limit: block.settings.max_products
  elsif fallback_products.size >= 2
    assign display_products = fallback_products
  else
    assign display_products = blank
  endif
%}

{% if display_products.size >= 2 %}
  {% style %}
    .ai-related-products-{{ ai_gen_id }} {
      padding: 40px 0;
      max-width: {{ settings.page_width }}px;
      margin: 0 auto;
      padding-left: 20px;
      padding-right: 20px;
    }

    .ai-related-products-heading-{{ ai_gen_id }} {
      text-align: center;
      margin-bottom: 32px;
      font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
      font-weight: {{ settings.type_header_font.weight }};
      font-size: calc({{ settings.heading_scale }}% * 1.8rem / 100);
      color: rgb(var(--color-foreground));
    }

    .ai-related-products-container-{{ ai_gen_id }} {
      position: relative;
    }

    .ai-related-products-grid-{{ ai_gen_id }} {
      display: grid;
      gap: {{ settings.spacing_grid_horizontal }}px;
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }

    .ai-related-products-carousel-{{ ai_gen_id }} {
      display: flex;
      gap: {{ settings.spacing_grid_horizontal }}px;
      overflow-x: auto;
      scroll-behavior: smooth;
      scrollbar-width: none;
      -ms-overflow-style: none;
      padding-bottom: 10px;
    }

    .ai-related-products-carousel-{{ ai_gen_id }}::-webkit-scrollbar {
      display: none;
    }

    .ai-related-products-card-{{ ai_gen_id }} {
      flex: 0 0 280px;
      background: rgb(var(--color-background));
      border-radius: {{ block.settings.corner_radius }}px;
      overflow: hidden;
      transition: transform 0.3s ease;
      border: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
      box-shadow: 
        {{ block.settings.shadow_horizontal }}px 
        {{ block.settings.shadow_vertical }}px 
        {{ block.settings.shadow_blur }}px 
        rgba(0, 0, 0, {{ block.settings.shadow_opacity | divided_by: 100.0 }});
    }

    .ai-related-products-grid-{{ ai_gen_id }} .ai-related-products-card-{{ ai_gen_id }} {
      flex: 1;
    }

    .ai-related-products-card-{{ ai_gen_id }}:hover {
      transform: translateY(-4px);
    }

    .ai-related-products-image-container-{{ ai_gen_id }} {
      position: relative;
      width: 100%;
      aspect-ratio: {{ block.settings.image_ratio }};
      overflow: hidden;
    }

    .ai-related-products-image-{{ ai_gen_id }} {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .ai-related-products-card-{{ ai_gen_id }}:hover .ai-related-products-image-{{ ai_gen_id }} {
      transform: scale(1.05);
    }

    .ai-related-products-content-{{ ai_gen_id }} {
      padding: 16px;
    }

    .ai-related-products-title-{{ ai_gen_id }} {
      font-family: {{ settings.type_header_font.family }}, {{ settings.type_header_font.fallback_families }};
      font-weight: {{ settings.type_header_font.weight }};
      font-size: 1.1rem;
      margin: 0 0 8px;
      color: rgb(var(--color-foreground));
      text-decoration: none;
      display: block;
      line-height: 1.3;
    }

    .ai-related-products-title-{{ ai_gen_id }}:hover {
      color: rgb(var(--color-link));
    }

    .ai-related-products-subtitle-{{ ai_gen_id }} {
      font-size: 0.9rem;
      color: rgba(var(--color-foreground), 0.7);
      margin-bottom: 8px;
      line-height: 1.3;
    }

    .ai-related-products-price-{{ ai_gen_id }} {
      font-weight: 600;
      color: rgb(var(--color-foreground));
      margin-bottom: 12px;
    }

    .ai-related-products-price-compare-{{ ai_gen_id }} {
      text-decoration: line-through;
      color: rgba(var(--color-foreground), 0.6);
      margin-right: 8px;
    }

    .ai-related-products-price-sale-{{ ai_gen_id }} {
      color: rgb(var(--color-price));
    }

    .ai-related-products-swatches-{{ ai_gen_id }} {
      display: flex;
      gap: 6px;
      margin-bottom: 12px;
      flex-wrap: wrap;
    }

    .ai-related-products-swatch-{{ ai_gen_id }} {
      width: 20px;
      height: 20px;
      border-radius: 50%;
      border: 1px solid rgba(var(--color-foreground), 0.2);
      cursor: pointer;
      transition: transform 0.2s ease;
    }

    .ai-related-products-swatch-{{ ai_gen_id }}:hover {
      transform: scale(1.1);
    }

    .ai-related-products-add-to-cart-{{ ai_gen_id }} {
      width: 100%;
      padding: 12px;
      background: rgb(var(--color-button));
      color: rgb(var(--color-button-text));
      border: none;
      border-radius: {{ settings.buttons_radius }}px;
      font-weight: 600;
      cursor: pointer;
      transition: background-color 0.3s ease;
      text-decoration: none;
      display: inline-block;
      text-align: center;
      font-family: inherit;
    }

    .ai-related-products-add-to-cart-{{ ai_gen_id }}:hover {
      background: rgba(var(--color-button), 0.8);
    }

    .ai-related-products-carousel-nav-{{ ai_gen_id }} {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      background: rgba(255, 255, 255, 0.9);
      border: none;
      border-radius: 50%;
      width: 40px;
      height: 40px;
      display: flex;
      align-items: center;
      justify-content: center;
      cursor: pointer;
      transition: all 0.3s ease;
      z-index: 2;
      box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
    }

    .ai-related-products-carousel-nav-{{ ai_gen_id }}:hover {
      background: rgba(255, 255, 255, 1);
      transform: translateY(-50%) scale(1.1);
    }

    .ai-related-products-carousel-nav-prev-{{ ai_gen_id }} {
      left: -20px;
    }

    .ai-related-products-carousel-nav-next-{{ ai_gen_id }} {
      right: -20px;
    }

    .ai-related-products-carousel-nav-{{ ai_gen_id }} svg {
      width: 16px;
      height: 16px;
      color: rgb(var(--color-foreground));
    }

    @media screen and (max-width: 749px) {
      .ai-related-products-{{ ai_gen_id }} {
        padding: 20px 16px;
      }

      .ai-related-products-grid-{{ ai_gen_id }} {
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 12px;
      }

      .ai-related-products-carousel-{{ ai_gen_id }} {
        gap: 12px;
      }

      .ai-related-products-card-{{ ai_gen_id }} {
        flex: 0 0 240px;
      }

      .ai-related-products-carousel-nav-{{ ai_gen_id }} {
        display: none;
      }
    }

    @media screen and (max-width: 550px) {
      .ai-related-products-grid-{{ ai_gen_id }} {
        grid-template-columns: repeat(2, 1fr);
      }

      .ai-related-products-card-{{ ai_gen_id }} {
        flex: 0 0 200px;
      }
    }
  {% endstyle %}

  <related-products-{{ ai_gen_id }}
    class="ai-related-products-{{ ai_gen_id }}"
    data-layout="{{ block.settings.layout }}"
    data-autoplay="{{ block.settings.autoplay }}"
    data-autoplay-speed="{{ block.settings.autoplay_speed }}"
    {{ block.shopify_attributes }}
  >
    {% if block.settings.heading != blank %}
      <h2 class="ai-related-products-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-related-products-container-{{ ai_gen_id }}">
      {% if block.settings.layout == 'carousel' %}
        <button class="ai-related-products-carousel-nav-{{ ai_gen_id }} ai-related-products-carousel-nav-prev-{{ ai_gen_id }}" aria-label="Previous products">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="15,18 9,12 15,6"></polyline>
          </svg>
        </button>
        <button class="ai-related-products-carousel-nav-{{ ai_gen_id }} ai-related-products-carousel-nav-next-{{ ai_gen_id }}" aria-label="Next products">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="9,18 15,12 9,6"></polyline>
          </svg>
        </button>
      {% endif %}

      <div class="ai-related-products-{{ block.settings.layout }}-{{ ai_gen_id }}">
        {% for product in display_products %}
          <div class="ai-related-products-card-{{ ai_gen_id }}">
            <div class="ai-related-products-image-container-{{ ai_gen_id }}">
              {% if product.featured_image %}
                <img
                  src="{{ product.featured_image | image_url: width: 400 }}"
                  alt="{{ product.featured_image.alt | escape }}"
                  class="ai-related-products-image-{{ ai_gen_id }}"
                  loading="lazy"
                  width="400"
                  height="{{ 400 | divided_by: block.settings.image_ratio }}"
                >
              {% else %}
                <div class="ai-related-products-image-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>

            <div class="ai-related-products-content-{{ ai_gen_id }}">
              <a href="{{ product.url }}" class="ai-related-products-title-{{ ai_gen_id }}">
                {{ product.title }}
              </a>

              {% if block.settings.show_subtitle and product.metafields.custom.sub_title != blank %}
                <div class="ai-related-products-subtitle-{{ ai_gen_id }}">
                  {{ product.metafields.custom.sub_title }}
                </div>
              {% endif %}

              {% if block.settings.show_price %}
                <div class="ai-related-products-price-{{ ai_gen_id }}">
                  {% if product.compare_at_price > product.price %}
                    <span class="ai-related-products-price-compare-{{ ai_gen_id }}">
                      {{ product.compare_at_price | money }}
                    </span>
                    <span class="ai-related-products-price-sale-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </span>
                  {% else %}
                    {{ product.price | money }}
                  {% endif %}
                </div>
              {% endif %}

              {% if block.settings.show_swatches and product.options contains 'Color' %}
                {% assign color_option_index = product.options | map: 'downcase' | index: 'color' %}
                {% if color_option_index != blank %}
                  <div class="ai-related-products-swatches-{{ ai_gen_id }}">
                    {% assign color_values = product.options[color_option_index].values | uniq | limit: 5 %}
                    {% for color in color_values %}
                      {% assign color_handle = color | handle %}
                      <div 
                        class="ai-related-products-swatch-{{ ai_gen_id }}"
                        style="background-color: {{ color | downcase }};"
                        title="{{ color }}"
                      ></div>
                    {% endfor %}
                  </div>
                {% endif %}
              {% endif %}

              {% if block.settings.show_add_to_cart %}
                {% if product.available %}
                  <a href="{{ product.url }}" class="ai-related-products-add-to-cart-{{ ai_gen_id }}">
                    Add to cart
                  </a>
                {% else %}
                  <button class="ai-related-products-add-to-cart-{{ ai_gen_id }}" disabled>
                    Sold out
                  </button>
                {% endif %}
              {% endif %}
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </related-products-{{ ai_gen_id }}>

  <script>
    (function() {
      class RelatedProducts{{ ai_gen_id }} extends HTMLElement {
        constructor() {
          super();
          this.carousel = null;
          this.prevButton = null;
          this.nextButton = null;
          this.autoplayInterval = null;
        }

        connectedCallback() {
          this.carousel = this.querySelector('.ai-related-products-carousel-{{ ai_gen_id }}');
          this.prevButton = this.querySelector('.ai-related-products-carousel-nav-prev-{{ ai_gen_id }}');
          this.nextButton = this.querySelector('.ai-related-products-carousel-nav-next-{{ ai_gen_id }}');

          if (this.dataset.layout === 'carousel') {
            this.setupCarousel();
            if (this.dataset.autoplay === 'true') {
              this.startAutoplay();
            }
          }
        }

        disconnectedCallback() {
          this.stopAutoplay();
        }

        setupCarousel() {
          if (!this.carousel || !this.prevButton || !this.nextButton) return;

          this.prevButton.addEventListener('click', () => this.scrollCarousel('prev'));
          this.nextButton.addEventListener('click', () => this.scrollCarousel('next'));

          this.carousel.addEventListener('mouseenter', () => this.stopAutoplay());
          this.carousel.addEventListener('mouseleave', () => {
            if (this.dataset.autoplay === 'true') {
              this.startAutoplay();
            }
          });

          this.updateNavigationButtons();
          this.carousel.addEventListener('scroll', () => this.updateNavigationButtons());
        }

        scrollCarousel(direction) {
          if (!this.carousel) return;

          const cardWidth = this.carousel.querySelector('.ai-related-products-card-{{ ai_gen_id }}').offsetWidth;
          const gap = parseInt(getComputedStyle(this.carousel).gap) || 0;
          const scrollAmount = cardWidth + gap;

          if (direction === 'prev') {
            this.carousel.scrollBy({ left: -scrollAmount, behavior: 'smooth' });
          } else {
            this.carousel.scrollBy({ left: scrollAmount, behavior: 'smooth' });
          }
        }

        updateNavigationButtons() {
          if (!this.carousel || !this.prevButton || !this.nextButton) return;

          const isAtStart = this.carousel.scrollLeft <= 0;
          const isAtEnd = this.carousel.scrollLeft >= this.carousel.scrollWidth - this.carousel.clientWidth - 1;

          this.prevButton.style.opacity = isAtStart ? '0.5' : '1';
          this.nextButton.style.opacity = isAtEnd ? '0.5' : '1';
          this.prevButton.style.pointerEvents = isAtStart ? 'none' : 'auto';
          this.nextButton.style.pointerEvents = isAtEnd ? 'none' : 'auto';
        }

        startAutoplay() {
          this.stopAutoplay();
          const speed = parseInt(this.dataset.autoplaySpeed) || 3000;
          
          this.autoplayInterval = setInterval(() => {
            if (!this.carousel) return;

            const isAtEnd = this.carousel.scrollLeft >= this.carousel.scrollWidth - this.carousel.clientWidth - 1;
            
            if (isAtEnd) {
              this.carousel.scrollTo({ left: 0, behavior: 'smooth' });
            } else {
              this.scrollCarousel('next');
            }
          }, speed);
        }

        stopAutoplay() {
          if (this.autoplayInterval) {
            clearInterval(this.autoplayInterval);
            this.autoplayInterval = null;
          }
        }
      }

      customElements.define('related-products-{{ ai_gen_id }}', RelatedProducts{{ ai_gen_id }});
    })();
  </script>
{% endif %}

