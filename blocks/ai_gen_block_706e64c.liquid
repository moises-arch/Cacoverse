<category-section-{{ ai_gen_id }} class="ai-category-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-category-container-{{ ai_gen_id }}">
    <div class="ai-category-left-{{ ai_gen_id }}">
      {% if block.settings.show_breadcrumb %}
        <nav class="ai-category-breadcrumb-{{ ai_gen_id }}" aria-label="Breadcrumb">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M10 20v-6h4v6h5v-8h3L12 3 2 12h3v8z"/>
          </svg>
          <a href="{{ block.settings.home_url }}">{{ block.settings.home_text }}</a>
          <span>/</span>
          {% if block.settings.main_category_url != blank %}
            <a href="{{ block.settings.main_category_url }}">{{ block.settings.main_category_text }}</a>
          {% else %}
            <span>{{ block.settings.main_category_text }}</span>
          {% endif %}
          <span>/</span>
          <span>{{ collection.title }}</span>
        </nav>
      {% endif %}

      {% if block.settings.heading != blank %}
        <h1 class="ai-category-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-category-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.show_product_count and collection %}
        <div class="ai-category-product-count-{{ ai_gen_id }}">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
            <path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-5 14H7v-2h7v2zm3-4H7v-2h10v2zm0-4H7V7h10v2z"/>
          </svg>
          <span>{{ collection.products_count }} {% if collection.products_count == 1 %}Product{% else %}Products{% endif %}</span>
        </div>
      {% endif %}

      <div class="ai-category-icons-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign icon_key = 'icon_' | append: i
            assign icon_image = block.settings[icon_key]
            assign animation_key = 'icon_' | append: i | append: '_animation'
            assign animation = block.settings[animation_key]
            assign delay = i | minus: 1 | times: 0.1
          %}
          <div 
            class="ai-category-icon-item-{{ ai_gen_id }} ai-animation-{{ animation }}"
            style="animation-delay: {{ delay }}s;"
            data-icon-index="{{ i }}"
          >
            {% if icon_image %}
              <img 
                src="{{ icon_image | image_url: width: 300 }}" 
                alt="Icon {{ i }}"
                loading="lazy"
                width="300"
                height="300"
              >
            {% else %}
              <div class="ai-category-icon-placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="ai-category-right-{{ ai_gen_id }}">
      <div class="ai-category-image-wrapper-{{ ai_gen_id }} ai-image-{{ block.settings.image_animation }}" data-image-animation>
        {% if block.settings.foreground_image %}
          <img 
            src="{{ block.settings.foreground_image | image_url: width: 1000 }}" 
            alt="{{ block.settings.foreground_image.alt | escape }}"
            loading="lazy"
            width="{{ block.settings.foreground_image.width }}"
            height="{{ block.settings.foreground_image.height }}"
          >
        {% else %}
          <div class="ai-category-image-placeholder-wrapper-{{ ai_gen_id }}">
            {{ 'product-1' | placeholder_svg_tag }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</category-section-{{ ai_gen_id }}>

<script>
  (function() {
    class CategorySection{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.setupAnimations();
        this.setupImageAnimation();
      }

      setupAnimations() {
        const icons = this.querySelectorAll('.ai-category-icon-item-{{ ai_gen_id }}');
        
        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.animationPlayState = 'running';
            }
          });
        }, {
          threshold: 0.1
        });

        icons.forEach((icon) => {
          icon.style.animationPlayState = 'paused';
          observer.observe(icon);
        });
      }

      setupImageAnimation() {
        const imageWrapper = this.querySelector('[data-image-animation]');
        if (!imageWrapper) return;

        const observer = new IntersectionObserver((entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.style.animationPlayState = 'running';
            }
          });
        }, {
          threshold: 0.1
        });

        imageWrapper.style.animationPlayState = 'paused';
        observer.observe(imageWrapper);
      }
    }

    customElements.define('category-section-{{ ai_gen_id }}', CategorySection{{ ai_gen_id }});
  })();
</script>

