{% doc %}
  @prompt
    Create a Shopify custom banner section that includes:
    
    Background image filling the entire banner.
    
    Foreground image (smaller, overlaid on top of the background, aligned bottom-right by default).
    
    Headline (H1) placed prominently in the center or left side.
    
    Sub-heading (paragraph) under the headline.
    
    Call-to-action button below the text.
    
    The section must be fully responsive:
    
    On desktop, show the foreground image overlayed bottom-right.
    
    On mobile, stack the foreground image below the text.
    
    All text and button should stay visible and readable over the background (add an overlay if needed).
    
    Allow customization in the editor: background image, foreground image, headline, sub-head, button label, button link, and alignment (left/center)., the foreground images should be aligned bottom right with no border and padding

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-banner-{{ ai_gen_id }} {
    position: relative;
    min-height: {{ block.settings.banner_height }}px;
    display: flex;
    align-items: center;
    overflow: hidden;
    background-color: {{ block.settings.fallback_color }};
  }

  .ai-custom-banner-background-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
  }

  .ai-custom-banner-background-{{ ai_gen_id }} img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-custom-banner-background-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-custom-banner-background-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 200px;
    opacity: 0.3;
  }

  .ai-custom-banner-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, {{ block.settings.overlay_opacity | divided_by: 100.0 }});
    z-index: 2;
  }

  .ai-custom-banner-container-{{ ai_gen_id }} {
    position: relative;
    z-index: 3;
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    padding: 60px 20px;
    display: flex;
    align-items: center;
    min-height: inherit;
  }

  .ai-custom-banner-content-{{ ai_gen_id }} {
    {% if block.settings.text_alignment == 'center' %}
      text-align: center;
      width: 100%;
    {% else %}
      text-align: left;
      flex: 1;
    {% endif %}color: {{ block.settings.text_color }};
  }

  .ai-custom-banner-headline-{{ ai_gen_id }} {
    font-size: {{ block.settings.headline_size }}px;
    font-weight: 700;
    line-height: 1.2;
    margin: 0 0 16px 0;
    color: {{ block.settings.text_color }};
  }

  .ai-custom-banner-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    line-height: 1.4;
    margin: 0 0 24px 0;
    color: {{ block.settings.text_color }};
    opacity: 0.9;
  }

  .ai-custom-banner-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 16px 32px;
    background-color: {{ block.settings.button_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-weight: 600;
    font-size: 16px;
    transition: background-color 0.3s ease, transform 0.2s ease;
    border: none;
    cursor: pointer;
  }










  .ai-custom-banner-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_color }};
    transform: translateY(-2px);
  }

  .ai-custom-banner-foreground-{{ ai_gen_id }} {
    position: absolute;
    bottom: 0;
    right: 20px;
    max-width: {{ block.settings.foreground_max_width }}px;
    width: auto;
    z-index: 4;
  }

  .ai-custom-banner-foreground-{{ ai_gen_id }} img {
    width: 100%;
    position: relative;
    bottom: 0;
    height: auto;
    display: block;
  }

  .ai-custom-banner-foreground-placeholder-{{ ai_gen_id }} {
    width: 200px;
    height: 200px;
    background-color: rgba(255, 255, 255, 0.1);
    border: 2px dashed rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-custom-banner-foreground-placeholder-{{ ai_gen_id }} svg {
    width: 80px;
    height: 80px;
    opacity: 0.4;
    color: {{ block.settings.text_color }};
  }

  .ai-custom-banner-empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 10px;
    left: 50%;
    transform: translateX(-50%);
    font-size: 12px;
    color: {{ block.settings.text_color }};
    opacity: 0.7;
    text-align: center;
    pointer-events: none;
  }

  {% if block.settings.text_alignment == 'center' %}
    .ai-custom-banner-foreground-{{ ai_gen_id }} {
      position: relative;
      bottom: auto;
      right: auto;
      margin: 40px auto 0;
      display: block;
    }
  {% endif %}

  @media screen and (max-width: 768px) {
    .ai-custom-banner-{{ ai_gen_id }} {
      min-height: auto;
    }

    .ai-custom-banner-container-{{ ai_gen_id }} {
      flex-direction: column;
      padding: 40px 20px;align-items: center;
    }

    .ai-custom-banner-content-{{ ai_gen_id }} {
      order: 1;
      text-align: center;
      width: 100%;
      flex: none;
    }

    .ai-custom-banner-foreground-{{ ai_gen_id }} {
      position: relative;
      order: 2;
      bottom: auto;
      right: auto;
      margin-top: 30px;
      max-width: 250px;
    }

    .ai-custom-banner-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.8 }}px;
    }

    .ai-custom-banner-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-custom-banner-button-{{ ai_gen_id }} {
      padding: 14px 28px;
      font-size: 15px;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-custom-banner-container-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-custom-banner-headline-{{ ai_gen_id }} {
      font-size: {{ block.settings.headline_size | times: 0.7 }}px;
    }

    .ai-custom-banner-foreground-{{ ai_gen_id }} {
      max-width: 200px;}
  }
{% endstyle %}<div class="ai-custom-banner-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-custom-banner-background-{{ ai_gen_id }}">
    {% if block.settings.background_image %}
      <img
        src="{{ block.settings.background_image | image_url: width: 2000 }}"
        alt="{{ block.settings.background_image.alt | escape }}"
        loading="lazy"
        width="{{ block.settings.background_image.width }}"
        height="{{ block.settings.background_image.height }}"
      >
    {% else %}
      <div class="ai-custom-banner-background-placeholder-{{ ai_gen_id }}">
        {{ 'hero-apparel-1' | placeholder_svg_tag }}
      </div>
    {% endif %}
  </div>

  {% if block.settings.overlay_opacity > 0 %}
    <div class="ai-custom-banner-overlay-{{ ai_gen_id }}"></div>
  {% endif %}

  <div class="ai-custom-banner-container-{{ ai_gen_id }}">
    <div class="ai-custom-banner-content-{{ ai_gen_id }}">
      {% if block.settings.headline != blank %}
        <h1 class="ai-custom-banner-headline-{{ ai_gen_id }}">{{ block.settings.headline }}</h1>
      {% endif %}

      {% if block.settings.subheading != blank %}
        <div class="ai-custom-banner-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
      {% endif %}

      {% if block.settings.button_label != blank %}
        <a
          href="{{ block.settings.button_link | default: '#' }}"
          class="ai-custom-banner-button-{{ ai_gen_id }}"
        >
          {{ block.settings.button_label }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if block.settings.text_alignment != 'center' %}
    <div class="ai-custom-banner-foreground-{{ ai_gen_id }}">
      {% if block.settings.foreground_image %}
        <img
          src="{{ block.settings.foreground_image | image_url: width: 600 }}"
          alt="{{ block.settings.foreground_image.alt | escape }}"
          loading="lazy"
          width="{{ block.settings.foreground_image.width }}"
          height="{{ block.settings.foreground_image.height }}"
        >
      {% else %}
        <div class="ai-custom-banner-foreground-placeholder-{{ ai_gen_id }}">
          {{ 'product-apparel-1' | placeholder_svg_tag }}
          <div class="ai-custom-banner-empty-state-{{ ai_gen_id }}">
            Add foreground image
          </div>
        </div>
      {% endif %}
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Custom banner",
  "settings": [
    {
      "type": "header",
      "content": "Images"
    },
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "image_picker",
      "id": "foreground_image",
      "label": "Foreground image"
    },
    {
      "type": "range",
      "id": "foreground_max_width",
      "min": 200,
      "max": 500,
      "step": 20,
      "unit": "px",
      "label": "Foreground image max width",
      "default": 300
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "inline_richtext",
      "id": "headline",
      "label": "Headline",
      "default": "Welcome to our store"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Discover amazing products and exceptional quality that will exceed your expectations.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "range",
      "id": "banner_height",
      "min": 400,
      "max": 800,
      "step": 20,
      "unit": "px",
      "label": "Banner height",
      "default": 600
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Background overlay opacity",
      "default": 30
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "fallback_color",
      "label": "Fallback background color",
      "default": "#f4f4f4"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_color",
      "label": "Button color",
      "default": "#000f9f"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color",
      "default": "#000000"
    },
    {
      "type": "header",
      "content": "Typography"
    },
    {
      "type": "range",
      "id": "headline_size",
      "min": 24,
      "max": 72,
      "step": 2,
      "unit": "px",
      "label": "Headline size",
      "default": 48
    },
    {
      "type": "range",
      "id": "subheading_size",
      "min": 14,
      "max": 24,
      "step": 1,
      "unit": "px",
      "label": "Subheading size",
      "default": 18
    },
    {
      "type": "range",
      "id": "button_border_radius",
      "min": 0,
      "max": 40,
      "step": 2,
      "unit": "px",
      "label": "Button border radius",
      "default": 8
    }
  ],
  "presets": [
    {
      "name": "Custom banner"
    }
  ],
  "tag": null
}
{% endschema %}