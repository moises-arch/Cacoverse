  "name": "Responsive slider",
  "settings": [
    {
      "type": "header",
      "content": "Slider settings"
    },
    {
      "type": "range",
      "id": "slide_height",
      "min": 300,
      "max": 800,
      "step": 50,
      "unit": "px",
      "label": "Slide height (desktop)",
      "default": 500
    },
    {
      "type": "range",
      "id": "slide_height_mobile",
      "min": 250,
      "max": 600,
      "step": 25,
      "unit": "px",
      "label": "Slide height (mobile)",
      "default": 400
    },
    {
      "type": "checkbox",
      "id": "autoplay",
      "label": "Enable autoplay",
      "default": true
    },
    {
      "type": "range",
      "id": "autoplay_speed",
      "min": 2000,
      "max": 9000,
      "step": 1000,
      "unit": "ms",
      "label": "Autoplay speed",
      "default": 5000
    },
    {
      "type": "checkbox",
      "id": "show_navigation",
      "label": "Show navigation arrows",
      "default": true
    },
