{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-search-header-{{ ai_gen_id }} {
    max-width: 1500px;
    margin: 0 auto;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 20px;
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    border-bottom: {{ block.settings.border_thickness }}px solid {{ block.settings.border_color }};
  }

  .ai-search-header__left-{{ ai_gen_id }} {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .ai-search-header__title-{{ ai_gen_id }} {
    margin: 0;
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 600;
  }

  .ai-search-header__count-{{ ai_gen_id }} {
    font-size: {{ block.settings.count_size }}px;
    color: {{ block.settings.count_color }};
  }

  .ai-search-header__right-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: 100%;
    max-width: {{ block.settings.search_bar_width }}px;
  }

  .ai-search-header__form-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
  }

  .ai-search-header__input-{{ ai_gen_id }} {
    width: 100%;
    padding: 12px 48px 12px 16px;
    border: {{ block.settings.input_border_thickness }}px solid {{ block.settings.input_border_color }};
    {% if block.settings.input_pill_shape %}
      border-radius: 9999px;
    {% else %}
      border-radius: {{ block.settings.input_border_radius }}px;
    {% endif %}
    font-size: 14px;
    background-color: {{ block.settings.input_background_color }};
    color: {{ block.settings.input_text_color }};
  }

  .ai-search-header__input-{{ ai_gen_id }}:focus {
    outline: 2px solid {{ block.settings.input_focus_color }};
    outline-offset: 2px;
  }

  .ai-search-header__input-{{ ai_gen_id }}::placeholder {
    color: {{ block.settings.input_placeholder_color }};
  }

  .ai-search-header__button-{{ ai_gen_id }} {
    position: absolute;
    right: 8px;
    top: 50%;
    transform: translateY(-50%);
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    color: {{ block.settings.search_icon_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-search-header__button-{{ ai_gen_id }}:hover {
    color: {{ block.settings.search_icon_hover_color }};
  }

  .ai-search-header__icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
  }

  @media screen and (max-width: 749px) {
    .ai-search-header-{{ ai_gen_id }} {
      flex-direction: column;
      align-items: stretch;
      gap: 16px;
    }

    .ai-search-header__right-{{ ai_gen_id }} {
      max-width: 100%;
    }

    .ai-search-header__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-search-header-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-search-header__left-{{ ai_gen_id }}">
    <h1 class="ai-search-header__title-{{ ai_gen_id }}">
      {% if search.terms %}
        {{ block.settings.title_text }} "{{ search.terms }}"
      {% else %}
        {{ block.settings.default_title }}
      {% endif %}
    </h1>
    <div class="ai-search-header__count-{{ ai_gen_id }}">
      {% if search.performed %}
        {{ block.settings.count_text }} ({{ search.results_count }})
      {% else %}
        {{ block.settings.count_text }} (0)
      {% endif %}
    </div>
  </div>

  <div class="ai-search-header__right-{{ ai_gen_id }}">
    <form action="{{ routes.search_url }}" method="get" role="search" class="ai-search-header__form-{{ ai_gen_id }}">
      <input
        type="search"
        name="q"
        value="{{ search.terms | escape }}"
        placeholder="{{ block.settings.search_placeholder }}"
        class="ai-search-header__input-{{ ai_gen_id }}"
        aria-label="Search"
      >
      <button type="submit" class="ai-search-header__button-{{ ai_gen_id }}" aria-label="Search">
        <svg class="ai-search-header__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="11" cy="11" r="8"></circle>
          <path d="m21 21-4.35-4.35"></path>
        </svg>
      </button>
    </form>
  </div>
</div>

