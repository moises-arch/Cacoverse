<related-products-{{ ai_gen_id }} class="ai-related-products-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-related-products-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-related-products-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-related-products-wrapper-{{ ai_gen_id }} {% if block.settings.layout == 'carousel' %}ai-related-products-carousel-{{ ai_gen_id }}{% else %}ai-related-products-grid-{{ ai_gen_id }}{% endif %}">
      {% if block.settings.layout == 'carousel' %}
        <button class="ai-carousel-nav-{{ ai_gen_id }} ai-carousel-prev-{{ ai_gen_id }}" aria-label="Previous products">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M10 12L6 8L10 4" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="ai-carousel-nav-{{ ai_gen_id }} ai-carousel-next-{{ ai_gen_id }}" aria-label="Next products">
          <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
            <path d="M6 4L10 8L6 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <div class="ai-related-products-carousel-track-{{ ai_gen_id }}">
      {% endif %}

      {% assign product_ids = filtered_products | split: ',' %}
      {% for product_id in product_ids limit: 8 %}
        {% if product_id != blank %}
          {% assign current_product = all_products[product_id] %}
          {% if current_product != blank %}
            <div class="ai-product-card-{{ ai_gen_id }}">
              <div class="ai-product-image-wrapper-{{ ai_gen_id }}">
                {% if current_product.featured_image %}
                  <img
                    src="{{ current_product.featured_image | image_url: width: 400 }}"
                    alt="{{ current_product.featured_image.alt | escape }}"
                    class="ai-product-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="400"
                    height="400"
                  >
                {% else %}
                  <div class="ai-product-image-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}
              </div>

              <div class="ai-product-info-{{ ai_gen_id }}">
                <h3 class="ai-product-title-{{ ai_gen_id }}">
                  <a href="{{ current_product.url }}">{{ current_product.title }}</a>
                </h3>

                {% if block.settings.show_subtitle and current_product.metafields.custom.sub_title != blank %}
                  <div class="ai-product-subtitle-{{ ai_gen_id }}">
                    {{ current_product.metafields.custom.sub_title }}
                  </div>
                {% endif %}

                <div class="ai-product-price-{{ ai_gen_id }}">
                  {% if current_product.compare_at_price > current_product.price %}
                    <span class="ai-product-price-compare-{{ ai_gen_id }}">{{ current_product.compare_at_price | money }}</span>
                  {% endif %}
                  <span>{{ current_product.price | money }}</span>
                </div>

                {% if block.settings.show_add_to_cart %}
                  <button
                    class="ai-add-to-cart-{{ ai_gen_id }}"
                    data-product-id="{{ current_product.id }}"
                    data-variant-id="{{ current_product.selected_or_first_available_variant.id }}"
                    {% unless current_product.available %}disabled{% endunless %}
                  >
                    {% if current_product.available %}
                      {{ block.settings.add_to_cart_text }}
                    {% else %}
                      Sold out
                    {% endif %}
                  </button>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}

      {% if block.settings.layout == 'carousel' %}
        </div>
      {% endif %}
    </div>
  </div>
</related-products-{{ ai_gen_id }}>

<script>
  (function() {
    class RelatedProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentSlide = 0;
        this.autoplayInterval = null;
        this.isCarousel = '{{ block.settings.layout }}' === 'carousel';
        this.autoplayEnabled = {{ block.settings.enable_autoplay }};
        this.autoplayDelay = {{ block.settings.autoplay_delay | times: 1000 }};
      }

      connectedCallback() {
        if (this.isCarousel) {
          this.initCarousel();
        }
        this.initAddToCart();
      }

      disconnectedCallback() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
        }
      }

      initCarousel() {
        this.track = this.querySelector('.ai-related-products-carousel-track-{{ ai_gen_id }}');
        this.prevButton = this.querySelector('.ai-carousel-prev-{{ ai_gen_id }}');
        this.nextButton = this.querySelector('.ai-carousel-next-{{ ai_gen_id }}');
        this.cards = this.querySelectorAll('.ai-product-card-{{ ai_gen_id }}');

        if (!this.track || this.cards.length === 0) return;

        this.slidesToShow = this.getSlidesToShow();
        this.maxSlide = Math.max(0, this.cards.length - this.slidesToShow);

        this.prevButton?.addEventListener('click', () => this.prevSlide());
        this.nextButton?.addEventListener('click', () => this.nextSlide());

        this.updateButtons();

        if (this.autoplayEnabled && this.cards.length > this.slidesToShow) {
          this.startAutoplay();
          
          this.addEventListener('mouseenter', () => this.stopAutoplay());
          this.addEventListener('mouseleave', () => this.startAutoplay());
        }

        window.addEventListener('resize', () => {
          this.slidesToShow = this.getSlidesToShow();
          this.maxSlide = Math.max(0, this.cards.length - this.slidesToShow);
          this.currentSlide = Math.min(this.currentSlide, this.maxSlide);
          this.updateCarousel();
        });
      }

      getSlidesToShow() {
        const width = window.innerWidth;
        if (width < 750) return 1;
        if (width < 990) return 2;
        return Math.min(4, this.cards.length);
      }

      prevSlide() {
        if (this.currentSlide > 0) {
          this.currentSlide--;
          this.updateCarousel();
        }
      }

      nextSlide() {
        if (this.currentSlide < this.maxSlide) {
          this.currentSlide++;
          this.updateCarousel();
        }
      }

      updateCarousel() {
        const cardWidth = this.cards[0]?.offsetWidth || 0;
        const gap = {{ block.settings.grid_gap }};
        const translateX = -(this.currentSlide * (cardWidth + gap));
        
        this.track.style.transform = `translateX(${translateX}px)`;
        this.updateButtons();
      }

      updateButtons() {
        if (this.prevButton) {
          this.prevButton.disabled = this.currentSlide === 0;
        }
        if (this.nextButton) {
          this.nextButton.disabled = this.currentSlide >= this.maxSlide;
        }
      }

      startAutoplay() {
        if (!this.autoplayEnabled || this.cards.length <= this.slidesToShow) return;
        
        this.stopAutoplay();
        this.autoplayInterval = setInterval(() => {
          if (this.currentSlide >= this.maxSlide) {
            this.currentSlide = 0;
          } else {
            this.currentSlide++;
          }
          this.updateCarousel();
        }, this.autoplayDelay);
      }

      stopAutoplay() {
        if (this.autoplayInterval) {
          clearInterval(this.autoplayInterval);
          this.autoplayInterval = null;
        }
      }

      initAddToCart() {
        const buttons = this.querySelectorAll('.ai-add-to-cart-{{ ai_gen_id }}');
        
        buttons.forEach(button => {
          button.addEventListener('click', async (e) => {
            e.preventDefault();
            
            const variantId = button.dataset.variantId;
            if (!variantId || button.disabled) return;

            const originalText = button.textContent;
            button.disabled = true;
            button.textContent = 'Adding...';

            try {
              const response = await fetch('/cart/add.js', {
                method: 'POST',
                headers: {
                  'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                  id: variantId,
                  quantity: 1
                })
              });

              if (response.ok) {
                button.textContent = 'Added!';
                
                document.dispatchEvent(new CustomEvent('cart:refresh'));
                
                setTimeout(() => {
                  button.disabled = false;
                  button.textContent = originalText;
                }, 2000);
              } else {
                throw new Error('Failed to add to cart');
              }
            } catch (error) {
              console.error('Error adding to cart:', error);
              button.textContent = 'Error';
              setTimeout(() => {
                button.disabled = false;
                button.textContent = originalText;
              }, 2000);
            }
          });
        });
      }
    }

    customElements.define('related-products-{{ ai_gen_id }}', RelatedProducts{{ ai_gen_id }});
  })();
</script>
