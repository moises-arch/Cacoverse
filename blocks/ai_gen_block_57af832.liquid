{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% liquid
  if block.settings.manual_collection != blank
    assign target_collection = block.settings.manual_collection
  elsif product.collections.size > 0
    assign target_collection = product.collections.first
  else
    assign target_collection = null
  endif

  if target_collection != null
    assign related_products = target_collection.products | where: 'available', true
    assign filtered_products = ''
    assign product_count = 0

    for prod in related_products
      if prod.id != product.id and product_count < 8
        assign filtered_products = filtered_products | append: prod.id | append: ','
        assign product_count = product_count | plus: 1
      endif
    endfor
  endif
%}

