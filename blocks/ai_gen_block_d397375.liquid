{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-about-content-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-about-content__header-{{ ai_gen_id }} {
    text-align: {{ block.settings.header_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-about-content__title-{{ ai_gen_id }} {
    font-family: {{ block.settings.heading_font.family }}, {{ block.settings.heading_font.fallback_families }};
    font-size: {{ block.settings.title_size }}px;
    font-weight: {{ block.settings.title_weight }};
    color: {{ block.settings.title_color }};
    margin: 0 0 {{ block.settings.title_spacing }}px;
    line-height: 1.2;
  }

  .ai-about-content__subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
    line-height: 1.4;
    font-weight: 500;
  }

  .ai-about-content__main-content-{{ ai_gen_id }} {
    margin-top: {{ block.settings.content_spacing }}px;
    display: grid;
    grid-template-columns: {% if block.settings.layout == 'image-left' %}1fr 2fr{% elsif block.settings.layout == 'image-right' %}2fr 1fr{% else %}1fr{% endif %};
    gap: {{ block.settings.column_gap }}px;
    align-items: {{ block.settings.vertical_alignment }};
  }

  .ai-about-content__content-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image-left' %}
      order: 2;
    {% elsif block.settings.layout == 'image-right' %}
      order: 1;
    {% endif %}
  }

  .ai-about-content__image-column-{{ ai_gen_id }} {
    {% if block.settings.layout == 'image-left' %}
      order: 1;
    {% elsif block.settings.layout == 'image-right' %}
      order: 2;
    {% endif %}
  }

  .ai-about-content__text-{{ ai_gen_id }} {
    font-family: {{ block.settings.body_font.family }}, {{ block.settings.body_font.fallback_families }};
    font-size: {{ block.settings.body_size }}px;
    color: {{ block.settings.text_color }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
  }

  .ai-about-content__text-{{ ai_gen_id }} p {
    margin: 00 {{ block.settings.paragraph_spacing }}px;
  }

  .ai-about-content__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-about-content__highlight-{{ ai_gen_id }} {
    background-color: {{ block.settings.highlight_background }};
    color: {{ block.settings.highlight_text_color }};
    padding: 2px 8px;
    border-radius:4px;
    font-weight: 600;
    white-space: nowrap;
  }

  .ai-about-content__image-wrapper-{{ ai_gen_id }} {
    width: 100%;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
  }

  .ai-about-content__image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
  }

  .ai-about-content__image-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }

  .ai-about-content__image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-about-content__empty-state-{{ ai_gen_id }} {
    position: absolute;
    bottom: 20px;
    left: 50%;
    transform: translateX(-50%);
    padding: 8px 16px;
    background-color: rgba(255, 255, 255, 0.9);
    border-radius: 4px;
    font-size: 14px;
    color: #666;
    text-align: center;
    pointer-events: none;
  }

  @media screen and (max-width: 768px) {
    .ai-about-content-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 16px;
    }

    .ai-about-content__title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-about-content__subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-about-content__main-content-{{ ai_gen_id }} {
      grid-template-columns: 1fr;gap: {{ block.settings.column_gap | times: 0.8 }}px;
    }

    .ai-about-content__content-{{ ai_gen_id }},
    .ai-about-content__image-column-{{ ai_gen_id }} {
      order: unset;
    }

    {% if block.settings.mobile_image_first %}
      .ai-about-content__image-column-{{ ai_gen_id }} {
        order: -1;
      }
    {% endif %}

    .ai-about-content__image-placeholder-{{ ai_gen_id }} {
      height: {{ block.settings.image_height | times: 0.8 }}px;
    }
  }
{% endstyle %}<div class="ai-about-content-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.main_title != blank or block.settings.main_subtitle != blank %}
    <div class="ai-about-content__header-{{ ai_gen_id }}">
      {% if block.settings.main_title != blank %}
        <h1 class="ai-about-content__title-{{ ai_gen_id }}">{{ block.settings.main_title }}</h1>
      {% endif %}
      {% if block.settings.main_subtitle != blank %}
        <div class="ai-about-content__subtitle-{{ ai_gen_id }}">
          {% if block.settings.highlight_location %}
            <span class="ai-about-content__highlight-{{ ai_gen_id }}">{{ block.settings.main_subtitle }}</span>
          {% else %}
            {{ block.settings.main_subtitle }}
          {% endif %}
        </div>
      {% endif %}
    </div>
  {% endif %}

  <div class="ai-about-content__main-content-{{ ai_gen_id }}">
    {% if block.settings.layout != 'content-only' %}
      <div class="ai-about-content__image-column-{{ ai_gen_id }}">
        <div class="ai-about-content__image-wrapper-{{ ai_gen_id }}">
          {% if block.settings.image %}
            <img
              src="{{ block.settings.image | image_url: width: 800 }}"
              alt="{{ block.settings.image.alt | escape }}"
              loading="lazy"
              width="{{ block.settings.image.width }}"
              height="{{ block.settings.image.height }}"
              class="ai-about-content__image-{{ ai_gen_id }}"
            >
          {% else %}
            <div class="ai-about-content__image-placeholder-{{ ai_gen_id }}">
              {{ 'image' | placeholder_svg_tag }}<div class="ai-about-content__empty-state-{{ ai_gen_id }}">
                Add an image
              </div>
            </div>
          {% endif %}
        </div>
      </div>
    {% endif %}<div class="ai-about-content__content-{{ ai_gen_id }}">
      {% if block.settings.content != blank %}
        <div class="ai-about-content__text-{{ ai_gen_id }}">{{ block.settings.content }}</div>
      {% endif %}
    </div>
  </div>
</div>

