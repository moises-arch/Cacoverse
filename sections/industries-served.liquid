{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
  }

  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
{{ 'industries-served.css' | asset_url | stylesheet_tag }}
<div class="container-fluid page-width">
  <div class="row">
    <div class="col-12">
      <h2 class="sh-48 mb-4">{{ section.settings.heading }}</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <div class="slider">
        <div class="swiper-container" data-space-between="10" data-slides-desktop="4" data-auto-play="1">
          <div class="swiper-wrapper">
            {% for block in section.blocks %}
              <div class="swiper-slide d-flex flex-column gap-4" onclick="location.href = '{{  block.settings.url }}';" style="cursor:pointer;" >
                <a href="{{ block.settings.url }}"><img
                  src="{{  block.settings.image | img_url: '464x464', crop: 'center' }}"
                  width="464"
                  height="464"
                  alt="{{   block.settings.image.alt }}"
                  class="img-fluid"
                  loading="lazy"
                ></a>
                <h3 class="sh-32">
                  <a href="{{ block.settings.url }}">{{ block.settings.heading }}</a>
                </h3>
                <p class="sp-16">{{ block.settings.description | truncatewords: 20 }}</p>
                {% comment %}
                <a
                  class="s-btn"
                  href="{% if block.settings.url != blank  %}{{ block.settings.url  }}{% else %}#{% endif %}"
                >
                  <span>{{- section.settings.button_label -}}</span>
                </a>
                 {% endcomment %}
              </div>
            {% endfor %}
          </div>
        </div>
      </div>
    </div>
  </div>

  {% comment %}
    <div class="row">
      {% for block in section.blocks %}
        <div class="col-md-4 d-flex flex-column gap-4">
          <img
            src="{{  block.settings.image | img_url: '464x' }}"
            width="464"
            height="720"
            alt="{{   block.settings.image.alt }}"
            class="img-fluid"
            loading="lazy"
          >
          <h3 class="sh-32">
            {{ block.settings.heading }}
          </h3>
          <p class="sp-16">{{ block.settings.description }}</p>
          <a class="s-btn" href="{% if block.settings.url != blank  %}{{ block.settings.url  }}{% else %}#{% endif %}">
            <span>{{- section.settings.button_label -}}</span>
          </a>
        </div>
      {% endfor %}
    </div>
  {% endcomment %}
</div>
{% schema %}
{
  "name": "Industries Served",
  "class": "industries-served",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Industries Served"
    },
    {
      "type": "checkbox",
      "id": "show_buttons",
      "label": "Show Buttons",
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
       "default" : "Learn More"
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },
  ],
  "blocks": [
    {
      "type": "industries",
      "name": "Industries",
      "settings": [
         {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
        },
        {
          "type": "url",
          "id": "url",
          "label": "Link",
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Industries Served",
    }
  ]
}
{% endschema %}
