{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
     background-image: url( "{{ section.settings.bg_image | img_url : 'master'  }}" );
    background-repeat: no-repeat;
    background-size: cover;
  }

  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
{{ 'brand-hero-banner.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid">
  <div class="row">
    <div class="col-md-4 mb-5 mb-md-0 text-center">
      <img
        src="{{  section.settings.image | img_url: 'master' }}"
        width="{{ section.settings.image.width }}"
        height="{{ section.settings.image.height }}"
        alt="{{   section.settings.image.alt }}"
        class="img-fluid"
        loading="lazy"
      >
    </div>
    <div class="col-md-8 d-flex align-items-start justify-content-center gap-4 flex-column ">
      <h1 class="sh-60">{{ section.settings.heading }}</h1>
      <p class="sp-16">{{ section.settings.sub_heading }}</p>
      <a class="s-btn" href="{{ section.settings.link }}"
        ><span>{{ section.settings.button_txt }}</span></a
      >
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Brand Hero Banner",
  "class": "brand-hero-banner",
  "settings": [
     {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image",
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Brand Image",
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "GE PPE"
    },
     {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "GE Company is dedicated to providing high-quality, reliable PPE that ensures the safety and well-being of workers across industries, with a focus on innovation and trust. We prioritize quality, innovation, and sustainability, offering durable PPE solutions that meet the highest safety standards while minimizing environmental impact and putting customersâ€™ needs first. Founded to enhance workplace safety, GE Company has become a trusted leader in PPE, achieving key milestones in innovation and safety, and building a legacy of excellence and protection."
    },
    {
      "type": "url",
      "id": "link",
      "label": "First Button Link",
    },
    {
      "type": "text",
      "id": "button_txt",
      "label": "Button Text",
      "default" : "Become a Distributor"
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "presets": [
    {
      "name": "Brand Hero Banner",
    }
  ]
}
{% endschema %}
