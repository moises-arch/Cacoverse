{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
    background-image: url( "{{ section.settings.bg_image | image_url: width: 1800, format: 'webp' }}" );
    background-repeat: no-repeat;
    background-size: 124%;
    background-position: left center;
    position: relative;
    z-index: 2;
  }

   #shopify-section-{{ section.id }}:after{
     content: '';
    background-image: url( "{{ section.settings.image | image_url: width: 800, format: 'webp' }}" );
   background-repeat: no-repeat;
    background-size: contain;
    background-position: bottom right;
    width: 48.5%;
    height: 100%;
    position: absolute;
    bottom: 0;
    right: 15px;
    z-index: 9;
  }

   .template-ppe-categories #shopify-section-{{ section.id }}:after{
       content: '';
      background-image: url( "{{ section.settings.image | image_url: width: 800, format: 'webp' }}" );
     background-repeat: no-repeat;
      background-size: contain;
      background-position: bottom right;
      width: 18%;
      height: 100%;
      position: absolute;
      bottom: 0;
      right: 15%;
      z-index: 9;
  }

  @media( max-width: 1050px){

    #shopify-section-{{ section.id }}{
      padding-bottom: 0 !important;
      background-size: cover;
    }

    #shopify-section-{{ section.id }}:after{
      display:none;
    }
  }

  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
{{ 'hero-banner.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid">
  <div class="hero-banner-inner d-flex align-items-start justify-content-center flex-wrap flex-column gap-3">
    <h1 class="ph-60">{{ section.settings.heading | replace : '|' , '<br>' }}</h1>
    <p class="pp-16">{{ section.settings.sub_heading | replace : '|' , '<br>'  }}</p>
    <div class="hero-banner-buttons d-flex gap-4 flex-wrap mt-2">
      {% if section.settings.first_link_label != blank %}
        <a
          class="p-btn"
          href="{% if section.settings.first_link != blank %}{{ section.settings.first_link }}{% else %}#{% endif %}"
        >
          <span>{{ section.settings.first_link_label -}}</span>
        </a>
      {% endif %}
      {% if section.settings.second_link_label != blank %}
        <a
          class="s-btn"
          href="{% if section.settings.second_link != blank %}{{ section.settings.second_link }}{% else %}#{% endif %}"
        >
          <span>{{ section.settings.second_link_label -}}</span>
        </a>
      {% endif %}
    </div>
    <div class="d-none showing-r">
      <img
        src="{{ section.settings.image | image_url: width: 650, format: 'webp' }}"
        loading="eager"
        fetchpriority="high"
        width="650"
        height="auto"
        class="img-fluid"
      >
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Hero Banner",
  "class": "hero-banner",
  "settings": [
     {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image",
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image",
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Trusted Personal Protective Equipment"
    },
     {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Empower your distribution network with high-quality PPE solutions designed to raise standards in the safety industry."
    },
    {
      "type": "url",
      "id": "first_link",
      "label": "First Button Link",
    },
    {
      "type": "text",
      "id": "first_link_label",
      "label": "First Button Text",
      "default" : "Become a Distributor"
    },
    {
      "type": "url",
      "id": "second_link",
      "label": "First Button Link",
    },
    {
      "type": "text",
      "id": "second_link_label",
      "label": "Second Button Text",
      "default" : "View Catalogs"
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "presets": [
    {
      "name": "Hero Banner",
    }
  ]
}
{% endschema %}
