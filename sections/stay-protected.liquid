{% style %}
  #shopify-section-{{ section.id }}{
   padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
    background-image: url( "{{ section.settings.bg_image | image_url: width: 1800, format: 'webp' }}" );
    background-repeat: no-repeat;
    background-position: left center;
    background-size: cover;
    position: relative;
    z-index: 8;
  }


  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
{{ 'stay-protected.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid">
  <div class="stay-protected-inner d-flex align-items-center justify-content-center flex-wrap flex-column gap-3">
    <h1 class="sh-40">{{ section.settings.heading }}</h1>
    <p class="sp-16">{{ section.settings.sub_heading }}</p>

    <a
      class="p-btn"
      href="{% if section.settings.first_link != blank %}{{ section.settings.first_link }}{% else %}#{% endif %}"
    >
      <span>{{ section.settings.first_link_label -}}</span>
    </a>
  </div>
</div>
{% schema %}
{
  "name": "Stay Protected",
  "class": "stay-protected",
  "settings": [
     {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image",
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Want to stay protected with GE PPE?"
    },
     {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Stay protected and stylish with the GE PPEâ€”engineered for durability and comfort, perfect for any worksite."
    },
    {
      "type": "url",
      "id": "first_link",
      "label": "Button Link",
    },
    {
      "type": "text",
      "id": "first_link_label",
      "label": "Button Text",
      "default" : "Get a Quotation Today!"
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "presets": [
    {
      "name": "Stay protected",
    }
  ]
}
{% endschema %}
