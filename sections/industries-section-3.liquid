{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
  }


  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}

{{ 'industries-section-3.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid bbl-3 ">
  <div class="row">
    <div class="col-12">
      <h2 class="sh-48 text-center mb-3">{{ section.settings.heading | replace : '|' , '<br>' }}</h2>
       <div class="sp-16 text-center">{{ section.settings.sub_heading }}</div>
    </div>
  </div>
  <div class="row mt-lg-5 mt-3">
    <h4 class="sh-32 text-center">{{ section.settings.sub_heading1 }}</h4>
    <ul class="info-list list-unstyled d-flex flex-wrap my-5 gap-lg-5 gap-3 {% if section.settings.col == true %} row {% endif %}" >
      {% for block in section.blocks %}
        <li class="p-lg-0 d-flex align-items-start justify-content-start gap-4 my-2 {% if section.settings.col == true %} col-12 col-md-6 col-lg-4 {% endif %} {% if forloop.index == 4 %} ms-lg-auto me-lg-0 {% elsif forloop.index == 5 %}  ms-lg-0 me-lg-auto {% endif %}">
          <img class="img-fluid flex-shrik-0" src="{{ block.settings.image | img_url : '40x' }}" width="{{ block.settings.image.width }}" height="{{ block.settings.image.height }}" loading="lazy"  />
          <div>
          <p class="sp-24">{{ block.settings.heading }}</p>
          {% if block.settings.sub_heading %}
            <p class="sp-16">{{ block.settings.sub_heading }}</p>
          {% endif %}
          </div>
        </li>
      {% endfor %}
    </ul>
  </div>
</div>

{% schema %}
{
  "name": "Industries Section 3",
  "class": "industries-section-3",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
    },
     {
      "type": "richtext",
      "id": "sub_heading",
      "label": "Sub Heading",
    },
     {
      "type": "text",
      "id": "sub_heading1",
      "label": "Sub Heading 1",
    },
     {
      "type": "checkbox",
      "id": "col",
      "label": "Use Column",
      "default": false
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "blocks": [
    {
      "type": "info",
      "name": "Information",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
        },
        {
          "type": "text",
          "id": "heading",
          "label": "heading"
        },
        {
          "type": "text",
          "id": "sub_heading",
          "label": "heading"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Industries Section 3",
    }
  ]
}
{% endschema %}
