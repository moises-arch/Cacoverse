{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
    background-color: #EBF0F5;
  }

  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}

{{ 'industries-section-7.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid">
  <div class="d-flex align-items-center justify-content-center flex-wrap flex-column gap-3">
    <h2 class="sh-48">{{ section.settings.heading }}</h2>
    {{ section.settings.description }}
  </div>
</div>
{% schema %}
{
  "name": "Industries Section 7",
  "class": "industries-section-7",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
    },
     {
      "type": "richtext",
      "id": "description",
      "label": "Sub Heading",
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "presets": [
    {
      "name": "Industries Section 7",
    }
  ]
}
{% endschema %}
