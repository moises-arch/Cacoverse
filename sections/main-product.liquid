      .replace(/^-+|-+$/g, '');
  }

  function tokensFromOptionValue(optionValue) {
    if (!optionValue) return [];

    const rawTokens = optionValue
      .toLowerCase()
      .split(/[|,\/]/)
      .map((token) => handleizeToken(token))
      .filter(Boolean);

    return Array.from(new Set(rawTokens));
  }

  function tokensFromOptionValues(optionValues) {
    if (!optionValues || optionValues.length === 0) return [];

    const values = Array.isArray(optionValues) ? optionValues : [optionValues];
    const tokens = values.flatMap((value) => tokensFromOptionValue(value));

    return Array.from(new Set(tokens));
