<script>
(function(){
  const MQ = window.matchMedia('(max-width:749px)');

  function setupProduct(product){
    const mediaList  = product.querySelector('.product__media-list');
    const mediaItems = mediaList ? Array.from(mediaList.querySelectorAll('.product__media-item')) : [];
    const thumbs     = Array.from(product.querySelectorAll('.thumbnail-list .thumbnail'));
    if(!mediaItems.length || !thumbs.length) return;

    // mapa por id
    const byId = new Map();
    mediaItems.forEach(mi=>{
      const id = mi.id || mi.dataset.mediaId;
      if(id) byId.set(id, mi);
      mi.classList.remove('__mobile-visible');
    });

    // primera visible en mobile
    if(MQ.matches) mediaItems[0].classList.add('__mobile-visible');

    // helper UI
    const setActiveThumb = (thumb)=>{
      thumbs.forEach(t=>t.classList.remove('is-active'));
      if(thumb) thumb.classList.add('is-active');
    };
    setActiveThumb(thumbs[0]);

    // click de thumbs
    thumbs.forEach((thumb, idx)=>{
      thumb.addEventListener('click', (e)=>{
        if(!MQ.matches) return;                 // solo mobile
        e.preventDefault(); e.stopPropagation();

        let key =
          thumb.getAttribute('aria-controls') ||
          (thumb.dataset.target||'').replace('#','') ||
          thumb.getAttribute('data-media-id') ||
          ((thumb.getAttribute('href')||'').split('#')[1]);

        let target = (key && (byId.get(key) || product.querySelector('#'+key))) || mediaItems[idx] || mediaItems[0];
        if(!target) return;

        mediaItems.forEach(mi=>mi.classList.remove('__mobile-visible'));
        target.classList.add('__mobile-visible');
        setActiveThumb(thumb);
      }, {passive:false});
    });
  }

  function initAll(){
    if(!MQ.matches) return;                     // solo mobile
    document.querySelectorAll('product-info .product').forEach(setupProduct);
  }

  // iniciar
  document.addEventListener('DOMContentLoaded', initAll);
  window.addEventListener('resize', initAll);

  // Re-init cuando Shopify refresca la sección o cambias variante
  document.addEventListener('shopify:section:load', initAll);
  document.addEventListener('variant:changed', initAll); // themes Dawn-like
})();



</script>










<script>
(function(){
  const SECTION_ID = "{{ section.id }}";
  const PRODUCT_FALLBACK_MEDIA_ID = {{ product.featured_media?.id | json }};

  // ===== helpers =====
  const $ = (s, r=document) => r.querySelector(s);
  const $$ = (s, r=document) => Array.from(r.querySelectorAll(s));
  const root = () => document.querySelector(`#shopify-section-${SECTION_ID}`) || document;

  function mediaItems(){
    const r = root();
    return $$('.product__media-item, [id^="Media-"]', r);
  }
  function thumbs(){
    const r = root();
    return $$('.thumbnail, .thumbnail-list__item button, [data-media-id]', r);
  }
  function selectByMediaId(id){
    if(!id){return false;}
    const r = root();
    const pick = 
      $(`.thumbnail[aria-controls="Media-${id}"]`, r) ||
      $(`.thumbnail [aria-controls="Media-${id}"]`, r) ||
      $(`[data-media-id="Media-${id}"]`, r) ||
      $(`#Media-${id}`, r);
    if (!pick) return false;
    (pick.closest('button, .thumbnail') || pick).click?.();
    return true;
  }
  function ensureOneVisible(){
    let vis = mediaItems().filter(el=>{
      const cs = getComputedStyle(el);
      return cs.display!=='none' && cs.visibility!=='hidden';
    });
    if (vis.length) return vis[0];

    // Desbloquea todo si quedó todo oculto
    mediaItems().forEach(el=> el.style.removeProperty('display'));
    const first = mediaItems()[0];
    if (first){
      const img = first.querySelector('img');
      if (img){ img.loading='eager'; }
    }
    return first || null;
  }

  // ===== core: selección segura con reintentos cortos =====
  function selectSafe(variant){
    const vId = variant?.featured_media?.id;
    // 1) intenta variante
    if (selectByMediaId(vId)) return true;
    // 2) intenta featured del producto
    if (selectByMediaId(PRODUCT_FALLBACK_MEDIA_ID)) return true;
    // 3) desbloquea y sincroniza con primer thumb visible
    const first = ensureOneVisible();
    const firstThumb = thumbs().find(t=>{
      const cs = getComputedStyle(t);
      return cs.display!=='none' && cs.visibility!=='hidden';
    }) || thumbs()[0];
    if (firstThumb){
      (firstThumb.closest('button, .thumbnail') || firstThumb).click?.();
      return true;
    }
    return !!first;
  }

  // Reintentos en distintos ticks para ganarle al DOM del tema + tus filtros
  function scheduleSafeSelect(variant){
    // rAF inmediato
    requestAnimationFrame(()=> selectSafe(variant));
    // micro-requeue
    setTimeout(()=> selectSafe(variant), 0);
    // y si los thumbs lazy se tardan, un último tiro
    setTimeout(()=> selectSafe(variant), 250);
  }

  // ===== guardian: si el activo queda invisible o sin src, repara =====
  function startGuardian(){
    const r = root();
    const list = $('.product__media-list', r) || r;
    if (!list) return;

    const fixIfBlank = () => {
      const active = $('.product__media-item.is-active, .product__media-item.is-selected, .product__media-item.__mobile-visible', r)
                   || mediaItems()[0];
      const img = active && active.querySelector('img');
      const blank = !active
                 || getComputedStyle(active).display === 'none'
                 || (img && !(img.currentSrc || img.src));
      if (blank) scheduleSafeSelect(window.__lastSelectedVariant || null);
    };

    // Observa cambios que suelen romper el estado (ocultar/mostrar, reemplazos)
    const mo = new MutationObserver((muts)=>{
      for (const m of muts){
        if (m.type==='childList' || m.type==='attributes'){
          fixIfBlank();
          break;
        }
      }
    });
    mo.observe(list, {childList:true, subtree:true, attributes:true, attributeFilter:['style','class','src']});

    // También al cargar/resize
    window.addEventListener('load', fixIfBlank, {once:true});
    window.addEventListener('resize', ()=> setTimeout(fixIfBlank, 0));
  }

  // ===== eventos de variante (Dawn y forks) =====
  function onVariant(e){
    const v = e.detail?.variant || e.detail?.selectedVariant || null;
    window.__lastSelectedVariant = v || window.__lastSelectedVariant || null;
    scheduleSafeSelect(v);
  }

  function init(){
    document.addEventListener('variant:change', onVariant);
    document.addEventListener('variant:changed', onVariant);
    document.addEventListener('product:variant-change', onVariant);
    // primera pasada por si ya cargó “en blanco”
    scheduleSafeSelect(window.__lastSelectedVariant || null);
    startGuardian();
  }

  document.readyState === 'loading'
    ? document.addEventListener('DOMContentLoaded', init)
    : init();
})();
</script>










<!-- ===== PDP No-Jump Guard v2 (packs + variantes) ===== -->
<script>
(function(){
  if (window.__PDP_NOJUMP_V2) return; window.__PDP_NOJUMP_V2 = true;

  let armed = false, cancelTimer = null, user = false;

  const prev = {
    scrollTo: window.scrollTo.bind(window),
    scrollBy: window.scrollBy.bind(window),
    scrollIntoView: Element.prototype.scrollIntoView,
    focus: HTMLElement.prototype.focus
  };

  function patch(){
    window.scrollTo = function(){ if(armed && !user) return; return prev.scrollTo(...arguments); };
    window.scrollBy = function(){ if(armed && !user) return; return prev.scrollBy(...arguments); };
    Element.prototype.scrollIntoView = function(){ if(armed && !user) return; return prev.scrollIntoView.apply(this, arguments); };
    HTMLElement.prototype.focus = function(){
      if(armed && !user){
        try { return prev.focus.call(this, { preventScroll: true }); }
        catch(e){ return prev.focus.call(this); }
      }
      return prev.focus.apply(this, arguments);
    };
  }
  function unpatch(){
    window.scrollTo = prev.scrollTo;
    window.scrollBy = prev.scrollBy;
    Element.prototype.scrollIntoView = prev.scrollIntoView;
    HTMLElement.prototype.focus = prev.focus;
  }

  function freeze(ms = 800){
    armed = true; user = false; patch();
    const html = document.documentElement, body = document.body;
    const oh = html.style.scrollBehavior, ob = body.style.scrollBehavior;
    html.style.scrollBehavior = 'auto'; body.style.scrollBehavior = 'auto';
    clearTimeout(cancelTimer);
    cancelTimer = setTimeout(() => {
      armed = false; unpatch();
      html.style.scrollBehavior = oh; body.style.scrollBehavior = ob;
    }, ms);
  }

  // Cualquier gesto real del usuario desarma el bloqueo
  ['wheel','touchmove','keydown'].forEach(evt => {
    window.addEventListener(evt, () => { user = true; }, { passive: true });
  });

  // Armado por eventos de cambio de variante (Dawn y similares)
  const armEv = () => freeze(800);
  document.addEventListener('variant:change', armEv);
  document.addEventListener('variant:changed', armEv);
  document.addEventListener('product:variant-change', armEv);

  // Armado al hacer click en radios/labels/botones de opciones (packs, color, talla, etc.)
  document.addEventListener('mousedown', (e)=>{
    const hit = e.target.closest(
      '.product-form__input input[type="radio"],' +
      '.product-form__input label,' +
      '.product-form__input button[role="radio"],' +
      '.variant-pill,' +
      '.product-form__input .swatch,' +
      '.product-form__input .variant-pills'
    );
    if (hit) freeze(800);
  }, { capture:true });

  // Mientras esté armado, suprime anchors/hash (#Media-, #Slide-, etc.)
  document.addEventListener('click', (e) => {
    if (!armed || user) return;
    const a = e.target.closest('a[href^="#"], button[aria-controls^="Media-"], .thumbnail, .thumbnail-list__item button');
    if (!a) return;
    const href = a.getAttribute('href') || '';
    if (href.startsWith('#')) {
      e.preventDefault(); e.stopPropagation();
      history.replaceState('', document.title, location.pathname + location.search);
    }
  }, { capture: true });

  // Primer auto-select puede provocar salto
  window.addEventListener('load', () => freeze(500), { once: true });
})();
</script>














