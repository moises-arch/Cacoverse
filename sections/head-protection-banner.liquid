{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
    background-image: url( "{{ section.settings.bg_image | img_url : '2000x'  }}" );
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center center;
    position: relative;
    z-index: 1;
  }

  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
{{ 'head-protection-banner.css' | asset_url | stylesheet_tag }}

<div class="page-width container-fluid">
  <div class="row">
    <div class="col-12 col-lg-8">
      <div class="header-protection-banner-inner d-flex align-items-start justify-content-center flex-wrap flex-column gap-3">
      <h1 class="sh-60">{{ section.settings.heading }}</h1>
      <p class="sp-24">{{ section.settings.sub_heading }}</p>
      <div class="hero-banner-buttons d-flex gap-4 flex-wrap mt-2">
        {% if section.settings.first_link_label != blank %}
          <a
            class="p-btn"
            href="{% if section.settings.first_link != blank %}{{ section.settings.first_link }}{% else %}#{% endif %}"
          >
            <span>{{ section.settings.first_link_label -}}</span>
          </a>
        {% endif %}
        {% if section.settings.second_link_label != blank %}
          <a
            class="s-btn"
            href="{% if section.settings.second_link != blank %}{{ section.settings.second_link }}{% else %}#{% endif %}"
          >
            <span>{{ section.settings.second_link_label -}}</span>
          </a>
        {% endif %}
      </div>
    </div>
    </div>
    <div class="col-12 col-lg-4">
       <img src="{{ section.settings.image_desktop | img_url : 'master' }}" width="{{ section.settings.width  }}" height="{{ section.settings.height }}" loading="lazy" class="img-fluid" />
    </div>
  </div>
 
</div>
{% schema %}
{
  "name": "Head Protection Banner",
  "class": "head-protection-banner",
  "settings": [
     {
      "type": "image_picker",
      "id": "bg_image",
      "label": "Background Image",
    },
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "<span>Head Protection</span><br> Designed to Save Lives:<br> GH400 & GH500 Helmets"
    },
     {
      "type": "text",
      "id": "sub_heading",
      "label": "Sub Heading",
      "default": "Our award-winning safety helmets, featuring Koroyd’s advanced impact-absorbing technology, deliver unmatched protection and superior comfort—because safety should never be compromised."
    },
    {
      "type": "image_picker",
      "id": "image_desktop",
      "label": "Image",
    },
    {
      "type": "url",
      "id": "first_link",
      "label": "First Button Link",
    },
    {
      "type": "text",
      "id": "first_link_label",
      "label": "First Button Text",
      "default" : "Watch Video"
    },
    {
      "type": "url",
      "id": "second_link",
      "label": "First Button Link",
    },
    {
      "type": "text",
      "id": "second_link_label",
      "label": "Second Button Text",
      "default" : "Find Out More"
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "presets": [
    {
      "name": "Head Protection Banner",
    }
  ]
}
{% endschema %}
