{% style %}
  /* === HERO SECTION WRAPPER (scoped por section.id) === */
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
    background-image: url("{{ section.settings.bg_image | img_url: '2000x' }}");
    background-repeat: no-repeat;
    background-size: 124%;
    background-position: left center;
    position: relative;
    z-index: 2;
    overflow: hidden; /* evita overflow en viewports extremos */
  }

  /* Overlay suave para legibilidad — solo este section */
  #shopify-section-{{ section.id }}::before{
    content:"";
    position:absolute; inset:0;
    background: linear-gradient(90deg, rgba(0,0,0,0.35) 0%, rgba(0,0,0,0.15) 45%, rgba(0,0,0,0.00) 100%);
    pointer-events:none;
    z-index:0;
  }

  /* Capa de contenido */
  #shopify-section-{{ section.id }} .hero-banner-inner{
    position: relative;
    z-index: 1;
    max-width: 920px; /* líneas legibles en desktop */
  }

  /* Tipografía base (solo aquí) */
  #shopify-section-{{ section.id }} .hero-banner-inner h1{
    line-height: 1.05;
    margin: 0;
  }
  #shopify-section-{{ section.id }} .hero-banner-inner p{
    margin: 0.25rem 0 0;
    max-width: 68ch;
    opacity: 0.95;
  }

  /* Botones (solo este hero) */
  #shopify-section-{{ section.id }} .hero-banner-buttons a{
    display: inline-flex;
    align-items:center;
    justify-content:center;
    gap:.4rem;
    text-decoration:none;
    padding:.8rem 1.2rem;
    border-radius: 999px;
    font-weight:600;
    border:1px solid transparent;
    transition: transform .15s ease, opacity .15s ease;
  }
  #shopify-section-{{ section.id }} .hero-banner-buttons .p-btn{ background:#111; color:#fff; }
  #shopify-section-{{ section.id }} .hero-banner-buttons .s-btn{ background:#fff; color:#111; border-color:#E6EEF6; }
  #shopify-section-{{ section.id }} .hero-banner-buttons a:hover{ transform: translateY(-1px); }

  /* ======== MOBILE OPTIMIZATION (solo este section) ======== */
  @media (max-width: 767px){
     #shopify-section-{{ section.id }}{
      /* + aire arriba para despegar el H1 del borde superior */
      padding-top: calc({{ section.settings.padding_top_mobile }} + 36px + env(safe-area-inset-top));
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
      background-size: cover;
      background-position: center center;
     }

     #shopify-section-{{ section.id }}::before{
       background: linear-gradient(180deg, rgba(0,0,0,.45) 0%, rgba(0,0,0,.25) 50%, rgba(0,0,0,.05) 100%);
     }

     #shopify-section-{{ section.id }} .hero-banner-inner{
       width: 100%;
       align-items: flex-start !important; /* texto alineado a la izquierda */
       gap: .8rem !important;
     }

     #shopify-section-{{ section.id }} .hero-banner-inner h1{
       font-size: clamp(28px, 7vw, 36px);
       margin-top: 40px; /* extra tweak anti-pegado */
     }
     #shopify-section-{{ section.id }} .hero-banner-inner p{
       font-size: clamp(14px, 4vw, 16px);
       opacity: .95;
     }

     #shopify-section-{{ section.id }} .hero-banner-buttons{
       width: 100%;
       gap: .6rem !important;
     }
     #shopify-section-{{ section.id }} .hero-banner-buttons a{
       width: 100%;
       padding: .9rem 1rem;
     }
  }

  /* ======== TABLET TWEAKS ======== */
  @media (min-width: 768px) and (max-width: 1024px){
    #shopify-section-{{ section.id }}{
      background-size: cover;
      background-position: center left 15%;
    }
    #shopify-section-{{ section.id }} .hero-banner-inner h1{
      font-size: clamp(36px, 5vw, 48px);
    }
  }


  /* Opcional: mover TODO el bloque, incluido el background */
@media (min-width: 768px){
  #shopify-section-{{ section.id }}{
    padding-left: 30px;
    padding-right: 30px;
  }
}
@media (max-width: 767px){
  #shopify-section-{{ section.id }}{
    padding-left: calc(10px + env(safe-area-inset-left));
    padding-right: calc(10px + env(safe-area-inset-right));
  }
}

{% endstyle %}

{{ 'hero-banner.css' | asset_url | stylesheet_tag }}

<div class="page-width container-fluid">
  <div class="hero-banner-inner d-flex align-items-start justify-content-center flex-wrap flex-column gap-3">
    <h1 class="ph-60">{{ section.settings.heading }}</h1>
    <p class="pp-16">{{ section.settings.sub_heading }}</p>
    <div class="hero-banner-buttons d-flex gap-4 flex-wrap mt-2">
      {% if section.settings.first_link_label != blank %}
        <a class="p-btn" href="{% if section.settings.first_link != blank %}{{ section.settings.first_link }}{% else %}#{% endif %}">
          <span>{{ section.settings.first_link_label -}}</span>
        </a>
      {% endif %}
      {% if section.settings.second_link_label != blank %}
        <a class="s-btn" href="{% if section.settings.second_link != blank %}{{ section.settings.second_link }}{% else %}#{% endif %}">
          <span>{{ section.settings.second_link_label -}}</span>
        </a>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero Banner Simple",
  "class": "hero-banner",
  "settings": [
    { "type": "image_picker", "id": "bg_image", "label": "Background Image" },
    { "type": "image_picker", "id": "image", "label": "Product Image" },
    { "type": "text", "id": "heading", "label": "Heading", "default": "Trusted Personal Protective Equipment" },
    { "type": "text", "id": "sub_heading", "label": "Sub Heading", "default": "Empower your distribution network with high-quality PPE solutions designed to raise standards in the safety industry." },
    { "type": "url", "id": "first_link", "label": "First Button Link" },
    { "type": "text", "id": "first_link_label", "label": "First Button Text", "default": "Become a Distributor" },
    { "type": "url", "id": "second_link", "label": "Second Button Link" },
    { "type": "text", "id": "second_link_label", "label": "Second Button Text", "default": "View Catalogs" },
    { "type": "text", "id": "padding_top_desktop", "label": "Padding Desktop Top", "default": "80px" },
    { "type": "text", "id": "padding_bottom_desktop", "label": "Padding Desktop Bottom", "default": "80px" },
    { "type": "text", "id": "padding_top_mobile", "label": "Padding Mobile Top", "default": "40px" },
    { "type": "text", "id": "padding_bottom_mobile", "label": "Padding Mobile Bottom", "default": "40px" }
  ],
  "presets": [
    { "name": "Hero Banner Simple" }
  ]
}
{% endschema %}
