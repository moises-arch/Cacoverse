{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
    background-image: url( "{{ 'contact-info-bg.jpg' | asset_img_url : 'master'  }}");
    background-repeat: no-repeat;
    background-size: cover;
  }


  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
<div class="page-width container-fluid">
  <div class="collection-banner-inner">
    <div class="row">
      {% if collection.metafields.custom.collection_header_image != blank %}
        <div class="col-lg-4 offset-lg-1 text-center">
          <img
            class="img-fluid"
            src="{{ collection.metafields.custom.collection_header_image | img_url : '400x' }}"
            loading="lazy"
            width="{{ collection.metafields.custom.collection_header_image.width }}"
            height="{{ collection.metafields.custom.collection_header_image.height }}"
            alt="{{ collection.metafields.custom.collection_header_image.alt }}"
          >
        </div>
      {% endif %}
      <div
        class="{% if collection.metafields.custom.collection_header_image != blank %}col-lg-7 {% else %}col-lg-12{% endif %} d-flex flex-column justify-content-center"
      >
        <!-- Breadcumb -->
        {{ 'page-breadcrumb.css' | asset_url | stylesheet_tag }}
        <div class="breadcrumbs-share-list justify-content-center ">
          <nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
            <ol class="breadcrumbs__list">
              <li class="breadcrumbs__item">
                <a
                  class="breadcrumbs__link link"
                  href="/"
                  title="Home"
                  aria-current="page"
                  >Home</a
                >
              </li>
              <li class="breadcrumbs__item">
                <a
                  class="breadcrumbs__link link"
                  href="/collections/all"
                  title="Products"
                  aria-current="page"
                  >Products</a
                >
              </li>
              <li class="breadcrumbs__item">
                <span class="breadcrumbs__link_no" aria-current="page">
                  {%- if collection.title == 'Products' %}All{% else %}{{ collection.title }}{% endif -%}
                </span>
              </li>
            </ol>
          </nav>
        </div>
        <!-- Breadcumb -->
        <div class="collection-title text-center">
          <h1 class="sh-60 mb-0">
            {{ collection.title }}
          </h1>
          <p class="sh-16">{{ collection.metafields.custom.collection_header_text }}</p>
        </div>
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Collection Banner",
  "class": "collection-banner",
  "settings": [
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },
  ],
  "presets": [
    {
      "name": "Collection Banner",
    }
  ]
}
{% endschema %}
