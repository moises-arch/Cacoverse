{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
  }


  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}

{{ 'page-breadcrumb.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid ">
  {% if section.settings.show_breadcumb_title == true %}
    <div class="breadcrumbs-share-list {% if section.settings.show_page_title == true %} mb-4 {% endif %}">
      <nav class="breadcrumbs" role="navigation" aria-label="breadcrumbs">
        <ol class="breadcrumbs__list">
          <li class="breadcrumbs__item">
            <a
              class="breadcrumbs__link link"
              href="/"
              title="Home"
              aria-current="page"
              >Home</a
            >
          </li>
          <li class="breadcrumbs__item">
            <span class="breadcrumbs__link_no" aria-current="page">Blog</span>
          </li>
        </ol>
      </nav>
    </div>
  {% endif %}
  {% if section.settings.show_page_title == true %}
    <div class="page-title">
      <h1 class="sh-60 mb-3">{{ section.settings.blog_title }}</h1>
      <p class="sp-12">{{ section.settings.blog_sub_title }}</p>
    </div>
  {% endif %}
</div>

{% schema %}
{
  "name": "Blog Breadcrumb",
  "class": "blog-breadcrumb",
  "settings": [
     {
      "type": "checkbox",
      "id": "show_page_title",
      "label": "Show Blog Title",
    },

    {
      "type": "checkbox",
      "id": "show_breadcumb_title",
      "label": "Show breadcrumb",
    },
    {
      "type": "text",
      "id": "blog_title",
      "label": "Title",
    },
    {
      "type": "text",
      "id": "blog_sub_title",
      "label": "Sub Title",
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "presets": [
    {
      "name": "Blog Breadcrumb",
    }
  ]
}
{% endschema %}
