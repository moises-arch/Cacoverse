{% style %}
  #shopify-section-{{ section.id }}{
    padding-top: {{ section.settings.padding_top_desktop }};
    padding-bottom: {{ section.settings.padding_bottom_desktop }};
  }


  @media( max-width: 767px){
     #shopify-section-{{ section.id }}{
      padding-top: {{ section.settings.padding_top_mobile }};
      padding-bottom: {{ section.settings.padding_bottom_mobile }};
    }
  }
{% endstyle %}
{{ 'paragraph-with-logos.css' | asset_url | stylesheet_tag }}
<div class="page-width container-fluid">
  <div class="">
    {{ section.settings.description }}
    <ul class="list-unstyled d-flex align-items-center justify-content-start gap-3">
      {% for block in section.blocks %}
        <li>
          <img
            src="{{  block.settings.image | img_url: 'master' }}"
            width="{{ block.settings.image.width }}"
            height="{{ block.settings.image.height }}"
            alt="{{   block.settings.image.alt }}"
            class="img-fluid"
            loading="lazy"
          >
        </li>
      {% endfor %}
    </ul>
  </div>
</div>
{% schema %}
{
  "name": "Paragraph with logos",
  "class": "para-with-logo",
  "settings": [

     {
      "type": "richtext",
      "id": "description",
      "label": "Sub Heading",
    },
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "blocks": [
    {
      "type": "logos",
      "name": "Logos",
      "settings": [
         {
          "type": "image_picker",
          "id": "image",
          "label": "Image",
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "Paragraph with logos",
    }
  ]
}
{% endschema %}
