{% style %}
   #shopify-section-{{ section.id }}{
     padding-top: {{ section.settings.padding_top_desktop }};
     padding-bottom: {{ section.settings.padding_bottom_desktop }};
   }

  .hero-banner .swiper-container {
       width: 100vw; /* Ensures full width without overflow */
       max-width: 99vw;
       height: 1080px;
   }
   .hero-banner .swiper-slide {
       width: 100%;
       height: 100%;
       background-size: cover;
       background-position: center;
       background-repeat: no-repeat;
   }

    .video-background {
      position: relative;
      width: 100%;
      height: 100vh;
      overflow: hidden;
      min-height: 1080px;
    }

  .video-background video{
      min-width: 100%;
      min-height: 100%;
      object-fit: cover;
    }

   @media( max-width: 1050px){

     #shopify-section-{{ section.id }}{
       padding-bottom: 0 !important;
       background-size: cover;
     }

     #shopify-section-{{ section.id }}:after{
       display:none;
     }

    .hero-banner .swiper-container {
       width: 100vw; /* Ensures full width without overflow */
       max-width: 99vw;
       height: auto;
   }

     .video-background {
        position: relative;
        width: 100%;
        height: auto;
        overflow: hidden;
        min-height: 100%;
      }

     .video-background video{
        width: 100%;
        height: auto;
        max-width: 100%;
    }

      .swiper-pagination {
        left: 42%;
        bottom: 9px;
       }
   }


   @media( max-width: 767px){
      #shopify-section-{{ section.id }}{
       padding-top: {{ section.settings.padding_top_mobile }};
       padding-bottom: {{ section.settings.padding_bottom_mobile }};
     }


   }
{% endstyle %}
{{ 'hero-banner.css' | asset_url | stylesheet_tag }}
<div class="slider">
  <div
    class="swiper-container"
    data-space-between="0"
    data-slides-desktop="1"
    data-slides-tablet="1"
    data-slides-mobile="1"
  >
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <div
          id="swiper-slide-{{ forloop.index }}"
          class="swiper-slide"
        >
          <div id="product-video-{{ forloop.index }}" class="company-video-inner">
            <div class="video-background">
              {%- if forloop.first -%}
                <video autoplay muted loop playsinline preload="auto" class="hero-video-active">
              {%- else -%}
                <video muted loop playsinline preload="none" class="hero-video-lazy">
              {%- endif -%}
                <source src="{{ block.settings.video  }}" type="video/mp4">
                Your browser does not support the video tag.
              </video>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <!-- pagination -->
    <div class="swiper-pagination">
      <button class="swiper-button-prev"></button>
      <button class="swiper-button-next"></button>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Hero Banner Slider Video",
  "class": "hero-banner-1",
  "settings": [
    {
      "type": "text",
      "id": "padding_top_desktop",
      "label": "Padding Desktop Top",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_bottom_desktop",
      "label": "Padding Desktop Bottom",
      "default": "80px"
    },
     {
      "type": "text",
      "id": "padding_top_mobile",
      "label": "Padding Mobile Top",
      "default": "40px"
    },
     {
      "type": "text",
      "id": "padding_bottom_mobile",
      "label": "Padding Mobile Bottom",
      "default": "40px"
    },

  ],
  "blocks": [
    {
      "type": "Slide",
      "name": "Slide",
      "limit": 3,
      "settings": [
        {
            "type": "url",
            "id": "video",
            "label": "Copy the Video Url",
          },
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Banner Slider Video",
    }
  ]
}
{% endschema %}
