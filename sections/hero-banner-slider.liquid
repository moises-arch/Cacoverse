<div class="slider">
  <div
    class="swiper-container"
    data-space-between="0"
    data-slides-desktop="1"
    data-slides-tablet="1"
    data-slides-mobile="1"
    data-auto-play="1"
  >
    <div class="swiper-wrapper">
      {% for block in section.blocks %}
        <style>
           .hero-banner #swiper-slide-{{ forloop.index }}{
             background-image: url( "{{ block.settings.bg_image | img_url : '2000x'  }}" );
              background-repeat: no-repeat;
              background-size: 124%;
              background-position: left center;
              position: relative;
              z-index: 8;
              display: flex;
              align-items: center;
            }

              @media( max-width: 1050px){
                 .hero-banner #swiper-slide-{{ forloop.index }}{
                      display: flex;
                      align-items: stretch;
                    }
              }


          .hero-banner #swiper-slide-{{ forloop.index }}:after{
            content: '';
            background-image: url( "{{ block.settings.image | img_url : '750x'  }}" );
            background-repeat: no-repeat;
            background-size: contain;
            background-position: bottom right;
            width: 48.5%;
            height: 100%;
            position: absolute;
            bottom: 0;
            right: 0px;
            z-index: 9;
          }

           @media( max-width: 1050px){

             .hero-banner #swiper-slide-{{ forloop.index }}{
                padding-bottom: 0 !important;
                background-size: cover;
              }

             .hero-banner #swiper-slide-{{ forloop.index }}:after{
               display:none;
             }
           }
        </style>
        <div
          id="swiper-slide-{{ forloop.index }}"
          class="swiper-slide"
        >
          <div class="page-width container-fluid">
            <div class="hero-banner-inner d-flex align-items-start justify-content-center flex-wrap flex-column gap-2">
              <h1 class="ph-60">{{ block.settings.heading }}</h1>
              <p class="pp-16">{{ block.settings.sub_heading }}</p>
              <div class="hero-banner-buttons d-flex gap-4 flex-wrap">
                {% if block.settings.first_link_label != blank %}
                  <a
                    class="p-btn"
                    href="{% if block.settings.first_link != blank %}{{ block.settings.first_link }}{% else %}#{% endif %}"
                  >
                    <span>{{ block.settings.first_link_label -}}</span>
                  </a>
                {% endif %}
                {% if block.settings.second_link_label != blank %}
                  <a
                    class="s-btn"
                    href="{% if block.settings.second_link != blank %}{{ block.settings.second_link }}{% else %}#{% endif %}"
                  >
                    <span>{{ block.settings.second_link_label -}}</span>
                  </a>
                {% endif %}
              </div>
              <div class="d-none showing-r">
                <img
                  src="{{ block.settings.image | img_url : '650x'  }}"
                  loading="lazy"
                  width="650"
                  height="auto"
                  class="img-fluid"
                >
              </div>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
    <!-- pagination -->
    {% comment %} <div class="swiper-pagination">
      <button class="swiper-button-prev"></button>
      <button class="swiper-button-next"></button>
    </div> {% endcomment %}

    <div class="swiper-pagination"></div>
  </div>
</div>
