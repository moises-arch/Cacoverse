{% style %}


/* Pill buttons for the hero */
.hero-banner .hero-banner-buttons a {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: .5rem;
  padding: 12px 22px;            /* tweak as needed */
  min-height: 44px;              /* touch target */
  border-radius: 9999px;         /* the pill magic */
  font-weight: 700;
  text-decoration: none;
  line-height: 1;
  transition: transform .12s ease, box-shadow .12s ease, background-color .12s ease, color .12s ease, border-color .12s ease;
}

/* Primary pill (p-btn) */
.hero-banner .p-btn {
  background: var(--primary-color, #1761a2);
  color: #fff;
  border: 2px solid transparent;
  box-shadow: 0 6px 16px rgba(0,0,0,.12);
}
.hero-banner .p-btn:hover {
  transform: translateY(-1px);
  background: var(--primary-hover-color, #0f4b7d);
  box-shadow: 0 8px 20px rgba(0,0,0,.18);
}
.hero-banner .p-btn:focus-visible {
  outline: none;
  box-shadow: 0 0 0 3px rgba(23,97,162,.35);
}

/* Secondary pill (s-btn) */
.hero-banner .s-btn {
  background: transparent;
  color: #fff;                       /* swap to #111 if your hero is light */
  border: 2px solid rgba(255,255,255,.8);
  box-shadow: 0 6px 16px rgba(0,0,0,.08) inset;
}
.hero-banner .s-btn:hover {
  background: rgba(255,255,255,.12);
  border-color: #fff;
}
.hero-banner .s-btn:focus-visible {
  outline: none;
  box-shadow: 0 0 0 3px rgba(255,255,255,.35);
}

/* Ensure inner span doesn't fight the padding */
.hero-banner .hero-banner-buttons a > span {
  display: inline-block;
  line-height: 1;
}

/* Optional: tighten pills on small screens */
@media (max-width: 767px){
  .hero-banner .hero-banner-buttons a {
    padding: 10px 18px;
    min-height: 40px;
  }
}






  /* make the container match the page width, not the viewport */
  .hero-banner .swiper-container{
    width: 100%;
    height: 640px;
    overflow: hidden;
    position: relative;
  }

  /* optional: keep slides full-bleed inside */
  .hero-banner .swiper-slide{
    width: 100%;
    height: 100%;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  /* hard-center the dots */
  .hero-banner .swiper-pagination{
    left: 50% !important;
    right: auto !important;
    transform: translateX(-50%);
    width: auto;
    bottom: 24px;          /* adjust to taste */
    z-index: 20;           /* above slide artwork */
  }

  /* (optional) nicer bullets */
  .hero-banner .swiper-pagination-bullet{
    width: 8px; height: 8px; opacity: .5;
  }
  .hero-banner .swiper-pagination-bullet-active{
    opacity: 1;
  }

