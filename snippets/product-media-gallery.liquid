{% comment %}
  Professional Product Media Gallery
  Uses Swiper JS wrapped in a custom <media-gallery> element.
  Supports variant filtering, zoom, and thumbnails.
{% endcomment %}

{%- assign media_count = product.media.size -%}
{%- if media_count > 0 -%}

<style>
  media-gallery {
    display: block;
    width: 100%;
    position: relative;
    --swiper-theme-color: #000;
  }
  
  /* Main Slider */
  .gallery-main {
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: 24px; 
    background-color: #f8f9fa;
    transition: all 0.3s ease;
    box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  }

  .gallery-main .swiper {
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1;
    border-radius: 24px;
    overflow: hidden;
  }

  /* Force visible slides */
  .gallery-main .swiper-wrapper {
    display: flex;
    align-items: center;
  }
  
  .gallery-main .swiper-slide {
    height: auto;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    visibility: visible;
    flex-shrink: 0;
    overflow: hidden;
    border-radius: 20px;
    cursor: zoom-in; /* Main Slider Cursor */
  }

  .gallery-main img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    border-radius: 20px;
  }
  .gallery-main video {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Swiper Pagination */
  .gallery-pagination {
    position: absolute;
    bottom: 20px !important;
    left: 50% !important;
    transform: translateX(-50%);
    z-index: 10;
    background: rgba(255, 255, 255, 0.4);
    backdrop-filter: blur(8px);
    padding: 6px 12px;
    border-radius: 20px;
    display: flex;
    gap: 6px;
    width: auto !important;
  }
  .gallery-pagination .swiper-pagination-bullet {
    width: 6px;
    height: 6px;
    background: #000;
    opacity: 0.2;
    margin: 0 !important;
    transition: all 0.3s ease;
  }
  .gallery-pagination .swiper-pagination-bullet-active {
    width: 20px;
    border-radius: 4px;
    opacity: 1;
    background: #0d6ba6;
  }

  /* Navigation Buttons - Glassmorphism */
  .gallery-nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: 48px;
    height: 48px;
    background: rgba(255, 255, 255, 0.7);
    backdrop-filter: blur(12px);
    border: 1px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 8px 32px rgba(0,0,0,0.08);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    opacity: 0;
  }
  media-gallery:hover .gallery-nav-btn {
    opacity: 1;
  }
  .gallery-nav-btn:hover {
    background: #fff;
    transform: translateY(-50%) scale(1.05);
    box-shadow: 0 12px 40px rgba(0,0,0,0.12);
  }
  .gallery-prev { left: 20px; }
  .gallery-next { right: 20px; }
  
  @media(max-width: 768px) {
    .gallery-nav-btn { display: none; }
    .gallery-main { border-radius: 16px; }
    .gallery-main .swiper { border-radius: 16px; }
  }

  /* Thumbnails */
  .gallery-thumbs {
    margin-top: 24px;
    overflow: hidden;
    width: 100%;
  }
  .gallery-thumbs .swiper {
    padding: 8px 0;
  }
  .gallery-thumbs .swiper-slide {
    width: 100px; /* INCREASED SIZE */
    aspect-ratio: 1 / 1;
    height: 100px !important;
    opacity: 0.5;
    cursor: pointer;
    border-radius: 16px;
    overflow: hidden;
    border: 2px solid transparent;
    transition: all 0.3s ease;
    filter: grayscale(20%);
    flex-shrink: 0;
  }
  .gallery-thumbs .swiper-slide-thumb-active {
    opacity: 1;
    border-color: #0d6ba6;
    transform: scale(0.92);
    filter: grayscale(0%);
    box-shadow: 0 4px 15px rgba(13, 107, 166, 0.2);
  }
  .gallery-thumbs img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* Lightbox Styles */
  .media-lightbox {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: flex;
    visibility: hidden;
    pointer-events: none;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.3s ease, visibility 0.3s ease;
  }
  .media-lightbox.active {
    visibility: visible;
    pointer-events: auto;
    opacity: 1;
  }
  .lightbox-close {
    position: absolute;
    top: 30px;
    right: 30px;
    color: white;
    cursor: pointer;
    z-index: 101;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    backdrop-filter: blur(10px);
    transition: all 0.2s;
  }
  .lightbox-close:hover { transform: scale(1.1); background: rgba(255,255,255,0.2); }
  
  .lightbox-content {
    position: relative;
    width: 90%;
    height: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }
  .lightbox-image {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
    transition: transform 0.3s cubic-bezier(0.2, 0, 0.2, 1);
    cursor: grab;
  }
  .lightbox-image:active { cursor: grabbing; }

  .lightbox-controls {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 20px;
    background: rgba(255, 255, 255, 0.1);
    padding: 12px 24px;
    border-radius: 40px;
    backdrop-filter: blur(15px);
    z-index: 101;
  }
  .zoom-btn {
    color: white;
    cursor: pointer;
    background: none;
    border: none;
    font-size: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    transition: opacity 0.2s;
  }
  .zoom-btn:hover { opacity: 0.7; }
</style>

<media-gallery data-section="{{ section.id }}" class="media-gallery-component">
  
  {%- assign featured_media = product.selected_or_first_available_variant.featured_media -%}

  <!-- Main Slider -->
  <div class="gallery-main">
    <div class="swiper main-swiper-{{ section.id }}">
      <div class="swiper-wrapper">
        {%- comment -%} ALWAYS PLACE FEATURED MEDIA FIRST {%- endcomment -%}
        {%- if featured_media -%}
          {%- assign media = featured_media -%}
          {%- assign raw_alt = media.alt | default: 'all' -%}
          {%- assign normalized_alt = raw_alt | replace: '|', ',' -%}
          {%- assign alt_parts = normalized_alt | split: ',' -%}
          
          {%- capture m_colors -%}
            {%- for part in alt_parts -%}
              {{ part | strip | handleize }}{% unless forloop.last %},{% endunless %}
            {%- endfor -%}
          {%- endcapture -%}

          <div class="swiper-slide" 
               data-media-id="{{ media.id }}" 
               data-color="{{ m_colors | strip }}"
               data-color-tokens="{{ raw_alt | downcase | escape }}"
               data-index="0">
            
            {% if media.media_type == 'image' %}
                <img src="{{ media | image_url: width: 1440 }}" 
                     alt="{{ media.alt | escape }}" 
                     loading="eager"
                     data-zoom-url="{{ media | image_url: width: 3000 }}"
                     class="gallery-image">
            {% elsif media.media_type == 'video' %}
                {{ media | video_tag: controls: true, class: 'gallery-video' }}
            {% endif %}

          </div>
        {%- endif -%}

        {%- for media in product.media -%}
          {%- if featured_media == nil or media.id != featured_media.id -%}
            {%- assign raw_alt = media.alt | default: 'all' -%}
            {%- assign normalized_alt = raw_alt | replace: '|', ',' -%}
            {%- assign alt_parts = normalized_alt | split: ',' -%}
            
            {%- capture m_colors -%}
              {%- for part in alt_parts -%}
                {{ part | strip | handleize }}{% unless forloop.last %},{% endunless %}
              {%- endfor -%}
            {%- endcapture -%}

            <div class="swiper-slide" 
                 data-media-id="{{ media.id }}" 
                 data-color="{{ m_colors | strip }}"
                 data-color-tokens="{{ raw_alt | downcase | escape }}"
                 data-index="{{ forloop.index }}">
              
              {% if media.media_type == 'image' %}
                  <img src="{{ media | image_url: width: 1440 }}" 
                       alt="{{ media.alt | escape }}" 
                       loading="lazy"
                       data-zoom-url="{{ media | image_url: width: 3000 }}"
                       class="gallery-image">
              {% elsif media.media_type == 'video' %}
                  {{ media | video_tag: controls: true, class: 'gallery-video' }}
              {% endif %}

            </div>
          {%- endif -%}
        {%- endfor -%}
      </div>
      
      <!-- Navigation -->
      <div class="gallery-nav-btn gallery-prev swiper-button-prev-{{ section.id }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
      </div>
      <div class="gallery-nav-btn gallery-next swiper-button-next-{{ section.id }}">
         <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
      </div>
      <div class="gallery-pagination swiper-pagination-{{ section.id }}"></div>
    </div>
  </div>

  <!-- Thumbnails -->
  <div class="gallery-thumbs">
     <div class="swiper thumbs-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {%- if featured_media -%}
            {%- assign media = featured_media -%}
            {%- assign raw_alt = media.alt | default: 'all' -%}
            {%- assign normalized_alt = raw_alt | replace: '|', ',' -%}
            {%- assign alt_parts = normalized_alt | split: ',' -%}
            
            {%- capture m_colors -%}
              {%- for part in alt_parts -%}
                {{ part | strip | handleize }}{% unless forloop.last %},{% endunless %}
              {%- endfor -%}
            {%- endcapture -%}

            <div class="swiper-slide" 
                 data-media-id="{{ media.id }}"
                 data-color="{{ m_colors | strip }}">
              <img src="{{ media | image_url: width: 200 }}" alt="{{ media.alt | escape }}" loading="lazy">
            </div>
          {%- endif -%}
          
          {%- for media in product.media -%}
            {%- if featured_media == nil or media.id != featured_media.id -%}
              {%- assign raw_alt = media.alt | default: 'all' -%}
              {%- assign normalized_alt = raw_alt | replace: '|', ',' -%}
              {%- assign alt_parts = normalized_alt | split: ',' -%}
              
              {%- capture m_colors -%}
                {%- for part in alt_parts -%}
                  {{ part | strip | handleize }}{% unless forloop.last %},{% endunless %}
                {%- endfor -%}
              {%- endcapture -%}

             <div class="swiper-slide" 
                  data-media-id="{{ media.id }}"
                  data-color="{{ m_colors | strip }}">
                <img src="{{ media | image_url: width: 200 }}" alt="{{ media.alt | escape }}" loading="lazy">
             </div>
          {%- endfor -%}
        </div>
     </div>
  </div>

  <!-- Lightbox Structure -->
  <div class="media-lightbox" id="GalleryLightbox">
    <div class="lightbox-close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </div>
    
    <div class="lightbox-content">
      <img src="" class="lightbox-image" draggable="false">
    </div>

    <div class="lightbox-controls">
      <button class="zoom-btn zoom-out">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line><line x1="8" y1="11" x2="14" y2="11"></line></svg>
      </button>
      <button class="zoom-btn zoom-in">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line><line x1="11" y1="8" x2="11" y2="14"></line><line x1="8" y1="11" x2="14" y2="11"></line></svg>
      </button>
    </div>
  </div>

</media-gallery>

<script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>

{% endif %}
