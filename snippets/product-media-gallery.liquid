{% comment %}
  Professional Product Media Gallery
  Uses Swiper JS wrapped in a custom <media-gallery> element.
  Supports variant filtering, zoom, and thumbnails.
{% endcomment %}

{%- assign media_count = product.media.size -%}
{%- if media_count > 0 -%}

<style>
  media-gallery {
    display: block;
    width: 100%;
    position: relative;
    --swiper-theme-color: #000;
  }
  
  /* Main Slider */
  .gallery-main {
    width: 100%;
    position: relative;
    overflow: hidden;
    border-radius: var(--media-radius, 8px);
    background-color: #f4f4f4; /* Placeholder bg */
  }

  .gallery-main .swiper {
    width: 100%;
    height: auto;
    aspect-ratio: 1 / 1; /* Default square, can be overridden */
  }

  /* Force visible slides */
  .gallery-main .swiper-wrapper {
    display: flex;
    align-items: center;
  }
  
  .gallery-main .swiper-slide {
    height: auto;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    visibility: visible;
    flex-shrink: 0;
  }

  .gallery-main img {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Or cover, depending on preference */
    display: block;
  }
  .gallery-main video {
    width: 100%;
    height: 100%;
    object-fit: contain;
  }

  /* Navigation Buttons */
  .gallery-nav-btn {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    z-index: 10;
    width: 44px;
    height: 44px;
    background: rgba(255, 255, 255, 0.8);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    transition: all 0.2s ease;
    opacity: 0; /* Hidden by default, shown on hover/init */
  }
  media-gallery:hover .gallery-nav-btn {
    opacity: 1;
  }
  .gallery-nav-btn:hover {
    background: white;
    transform: translateY(-50%) scale(1.1);
  }
  .gallery-prev { left: 10px; }
  .gallery-next { right: 10px; }
  
  @media(max-width: 768px) {
    .gallery-nav-btn { display: none; } /* Use touch on mobile */
  }

  /* Thumbnails */
  .gallery-thumbs {
    margin-top: 10px;
    overflow: hidden;
    width: 100%;
  }
  .gallery-thumbs .swiper {
    padding: 2px 0;
  }
  .gallery-thumbs .swiper-slide {
    width: 80px;
    height: 80px;
    opacity: 0.5;
    cursor: pointer;
    border-radius: 4px;
    overflow: hidden;
    border: 2px solid transparent;
    transition: all 0.2s;
    flex-shrink: 0;
  }
  .gallery-thumbs .swiper-slide-thumb-active {
    opacity: 1;
    border-color: #000;
  }
  .gallery-thumbs img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Zoom Lens */
  .zoom-lens {
    position: absolute;
    border: 1px solid rgba(255,255,255,0.5);
    background-color: rgba(255,255,255,0.2);
    width: 200px;
    height: 200px;
    display: none;
    pointer-events: none;
    z-index: 20;
    border-radius: 50%;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
  }
</style>

<media-gallery data-section="{{ section.id }}" class="media-gallery-component">
  
  <!-- Main Slider -->
  <div class="gallery-main">
    <div class="swiper main-swiper-{{ section.id }}">
      <div class="swiper-wrapper">
        {%- for media in product.media -%}
            
            {%- comment -%} Parse Color Data {%- endcomment -%}
            {%- assign m_parts = media.alt | default: '' | split: '|' -%}
            {%- assign m_color_source = m_parts[0] | default: '' | downcase -%}
            {%- assign m_color = 'all' -%}
            
            {%- if m_color_source != '' -%}
                 {%- assign m_color = m_color_source | strip | handleize -%}
            {%- endif -%}

            {%- comment -%} Image tag generation {%- endcomment -%}
            <div class="swiper-slide" 
                 data-media-id="{{ media.id }}" 
                 data-color="{{ m_color }}"
                 data-color-tokens="{{ media.alt | downcase | escape }}">
              
              {% if media.media_type == 'image' %}
                  <img src="{{ media | image_url: width: 1440 }}" 
                       alt="{{ media.alt | escape }}" 
                       loading="{% if forloop.first %}eager{% else %}lazy{% endif %}"
                       data-zoom="{{ media | image_url: width: 3000 }}"
                       class="gallery-image">
              {% elsif media.media_type == 'video' %}
                  {{ media | video_tag: controls: true, class: 'gallery-video' }}
              {% elsif media.media_type == 'external_video' %}
                   {{ media | external_video_tag: class: 'gallery-video' }}
              {% endif %}

            </div>
        {%- endfor -%}
      </div>
      
      <!-- Navigation -->
      <div class="gallery-nav-btn gallery-prev swiper-button-prev-{{ section.id }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
      </div>
      <div class="gallery-nav-btn gallery-next swiper-button-next-{{ section.id }}">
         <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
      </div>
    </div>
    
    <!-- Zoom Container -->
    <div class="zoom-lens"></div>
  </div>

  <!-- Thumbnails -->
  <div class="gallery-thumbs">
     <div class="swiper thumbs-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {%- for media in product.media -%}
              <!-- Logic for color filtering applies to thumbs too -->
              {%- assign m_parts = media.alt | default: '' | split: '|' -%}
              {%- assign m_color_source = m_parts[0] | default: '' | downcase -%}
              {%- assign m_color = 'all' -%}
              {%- if m_color_source != '' -%}
                  {%- assign m_color = m_color_source | strip | handleize -%}
              {%- endif -%}

             <div class="swiper-slide" 
                  data-media-id="{{ media.id }}"
                  data-color="{{ m_color }}">
                <img src="{{ media | image_url: width: 200 }}" alt="{{ media.alt | escape }}" loading="lazy">
             </div>
          {%- endfor -%}
        </div>
     </div>
  </div>

</media-gallery>

<script src="{{ 'media-gallery.js' | asset_url }}" defer="defer"></script>

{% endif %}
