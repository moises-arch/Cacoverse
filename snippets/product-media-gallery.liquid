                 data-media-id="{{ media.id }}" 
                 data-color="{{ m_colors | strip }}"
                 data-variants="{{ variant_ids | strip | remove_last: ',' }}"
                 data-color-tokens="{{ raw_alt | downcase | escape }}"
                 data-index="{{ forloop.index }}">
              
              {% if media.media_type == 'image' %}
                  <img src="{{ media | image_url: width: 950 }}" 
                       alt="{{ media.alt | escape }}" 
                       loading="lazy"
                       data-zoom-url="{{ media | image_url: width: 2048 }}"
                       class="gallery-image">
              {% elsif media.media_type == 'video' %}
                  {{ media | video_tag: controls: true, class: 'gallery-video' }}
              {% endif %}

            </div>
          {%- endif -%}
        {%- endfor -%}
        {%- if video_count > 0 and video_inserted_main == false -%}
          <div class="swiper-slide video-hub-tile-main" data-video-trigger="true" data-index="video-hub">
            <div style="position:relative; width:100%; height:100%; display:flex; align-items:center; justify-content:center; background:#f8f9fa;">
              <img src="{{ featured_video.thumbnail_url | default: product.featured_image | img_url: '950x' }}" alt="Watch Videos" style="opacity:0.6; filter:blur(2px);">
              <div class="video-hub-play" style="width:80px; height:80px;">
                <svg width="40" height="40" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
              </div>
              <div class="video-hub-label" style="font-size:14px; padding:8px 0;">WATCH VIDEOS ({{ video_count }})</div>
            </div>
          </div>
        {%- endif -%}
      </div>
      
      <!-- Navigation -->
      <div class="gallery-nav-btn gallery-prev swiper-button-prev-{{ section.id }}">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 18l-6-6 6-6"/></svg>
      </div>
      <div class="gallery-nav-btn gallery-next swiper-button-next-{{ section.id }}">
         <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M9 18l6-6-6-6"/></svg>
      </div>
      <div class="gallery-pagination swiper-pagination-{{ section.id }}"></div>
    </div>
  </div>

  <!-- Thumbnails -->
  <div class="gallery-thumbs">
    <div class="thumb-nav-wrapper">
      <div class="thumb-nav-btn thumb-prev-{{ section.id }}">
        <svg viewBox="0 0 24 24"><path d="M15 18l-6-6 6-6"/></svg>
      </div>

      <div class="swiper thumbs-swiper-{{ section.id }}">
        <div class="swiper-wrapper">
          {%- if featured_media -%}
            {%- assign media = featured_media -%}
            {%- assign raw_alt = media.alt | default: 'all' -%}
            {%- assign normalized_alt = raw_alt | replace: '|', ',' -%}
            {%- assign alt_parts = normalized_alt | split: ',' -%}
            
            {%- capture m_colors -%}
              {%- for part in alt_parts -%}
                {{ part | strip | handleize }}{% unless forloop.last %},{% endunless %}
              {%- endfor -%}
            {%- endcapture -%}

            {%- capture variant_ids -%}
              {%- for variant in product.variants -%}
                {%- if variant.featured_media.id == media.id -%}{{ variant.id }},{%- endif -%}
              {%- endfor -%}
            {%- endcapture -%}
            <div class="swiper-slide" 
                 data-media-id="{{ media.id }}"
                 data-variants="{{ variant_ids | strip | remove_last: ',' }}"
                 data-color="{{ m_colors | strip }}">
              <img src="{{ media | image_url: width: 400 }}" alt="{{ media.alt | escape }}" loading="lazy">
            </div>
          {%- endif -%}
          
          {%- assign video_inserted_thumb = false -%}
          {%- for media in product.media -%}
            {%- if featured_media == nil or media.id != featured_media.id -%}
              {%- comment -%} Add Video Hub Tile at position 2 in thumbnails {%- endcomment -%}
              {%- if video_count > 0 and video_inserted_thumb == false and forloop.index >= 2 -%}
              <div class="swiper-slide video-hub-tile" data-video-trigger="true">
                <img src="{{ featured_video_thumb }}" alt="Watch Videos" loading="lazy">
                <div class="video-hub-play" style="width:24px; height:24px;">
                  <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                </div>
                <div class="video-hub-badge">{{ video_count }}</div>
                <div class="video-hub-label">VIDEOS</div>
              </div>
                {%- assign video_inserted_thumb = true -%}
              {%- endif -%}

              {%- assign raw_alt = media.alt | default: 'all' -%}
...
             <div class="swiper-slide" 
                  data-media-id="{{ media.id }}"
                  data-variants="{{ variant_ids | strip | remove_last: ',' }}"
                  data-color="{{ m_colors | strip }}">
                <img src="{{ media | image_url: width: 400 }}" alt="{{ media.alt | escape }}" loading="lazy">
             </div>
            {%- endif -%}
          {%- endfor -%}
          {%- if video_count > 0 and video_inserted_thumb == false -%}
            <div class="swiper-slide video-hub-tile" data-video-trigger="true">
              <img src="{{ featured_video.thumbnail_url | default: product.featured_image | img_url: '200x' }}" alt="Watch Videos" loading="lazy">
              <div class="video-hub-play" style="width:24px; height:24px;">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
              </div>
              <div class="video-hub-badge">{{ video_count }}</div>
              <div class="video-hub-label">VIDEOS</div>
            </div>
          {%- endif -%}
        </div>
      </div>

      <div class="thumb-nav-btn thumb-next-{{ section.id }}">
        <svg viewBox="0 0 24 24"><path d="M9 18l6-6-6-6"/></svg>
      </div>
    </div>
  </div>

  {%- comment -%} Video Lightbox Structure {%- endcomment -%}
  {%- if video_count > 0 -%}
    <div class="video-lightbox" id="VideoLightbox-{{ section.id }}" role="dialog" aria-modal="true" aria-label="Video Player">
      <div class="video-lightbox-container">
        <div class="video-lightbox-main">
          <div id="VideoPlayerContainer-{{ section.id }}" style="width:100%; height:100%; display:flex; align-items:center; justify-content:center;">
            {%- comment -%} Player will be injected here via JS {%- endcomment -%}
          </div>
        </div>
        <div class="video-lightbox-sidebar">
          <div class="video-lightbox-header">
            <h3>Videos ({{ video_count }})</h3>
            <button class="video-lightbox-close" aria-label="Close video player">
              <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
            </button>
          </div>
        <div class="video-playlist">
          {%- comment -%} Playlist items are now partially generated in JS for dynamic thumbs {%- endcomment -%}
          {%- comment -%} But we render the native ones here for SEO/instant preview {%- endcomment -%}
          {%- for video in native_videos -%}
            <div class="playlist-item {% if forloop.first %}active{% endif %}" 
                 data-index="{{ forloop.index0 }}"
                 data-type="native">
              <div class="playlist-item-thumb">
                <img src="{{ video.preview_image | img_url: '200x' }}" alt="{{ video.alt | escape }}" loading="lazy">
                <div class="video-hub-play" style="width:20px; height:20px;">
                  <svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                </div>
              </div>
              <div class="playlist-item-info">
                <div class="playlist-item-title">{{ video.alt | default: 'Product Video' }}</div>
                <div class="playlist-item-active-label">NOW PLAYING</div>
              </div>
            </div>
          {%- endfor -%}
          {%- for url in external_videos -%}
            {%- assign actual_index = forloop.index0 | plus: native_video_count -%}
            <div class="playlist-item" 
                 data-index="{{ actual_index }}"
                 data-type="external">
              <div class="playlist-item-thumb" id="ExternalThumb-{{ section.id }}-{{ actual_index }}">
                {%- comment -%} Thumb will be injected by JS {%- endcomment -%}
                <img src="{{ product.featured_image | img_url: '200x' }}" alt="External Video" loading="lazy">
                <div class="video-hub-play" style="width:20px; height:20px;">
                  <svg width="10" height="10" viewBox="0 0 24 24" fill="currentColor"><path d="M8 5v14l11-7z"/></svg>
                </div>
              </div>
              <div class="playlist-item-info">
                <div class="playlist-item-title">Video {{ forloop.index | plus: native_video_count }}</div>
                <div class="playlist-item-active-label">NOW PLAYING</div>
              </div>
            </div>
          {%- endfor -%}
        </div>
      </div>
    </div>

    {%- comment -%} Video Hub Data for JS {%- endcomment -%}
    <script type="application/json" id="VideoData-{{ section.id }}">
      {{ video_json }}
    </script>
  {%- endif -%}

  <!-- Lightbox Structure -->
  <div class="media-lightbox" id="GalleryLightbox">
    <div class="lightbox-close">
      <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><line x1="18" y1="6" x2="6" y2="18"></line><line x1="6" y1="6" x2="18" y2="18"></line></svg>
    </div>

    <div class="lightbox-loader">
      <span class="loader-dot"></span>
      <span class="loader-dot"></span>
      <span class="loader-dot"></span>
    </div>
    
    <div class="lightbox-content">
      <img src="" class="lightbox-image" draggable="false">
    </div>

    <div class="lightbox-controls">
      <button class="zoom-btn zoom-out">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line><line x1="8" y1="11" x2="14" y2="11"></line></svg>
      </button>
      <button class="zoom-btn zoom-in">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="11" cy="11" r="8"></circle><line x1="21" y1="21" x2="16.65" y2="16.65"></line><line x1="11" y1="8" x2="11" y2="14"></line><line x1="8" y1="11" x2="14" y2="11"></line></svg>
      </button>
    </div>
  </div>

</media-gallery>

