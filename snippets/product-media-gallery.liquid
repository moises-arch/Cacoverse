{% comment %}
  Professional Product Media Gallery
  Uses Swiper JS wrapped in a custom <media-gallery> element.
  Supports variant filtering, zoom, and thumbnails.
{% endcomment %}

{%- liquid
  assign media_count = product.media.size
  assign video_data = nil
  assign has_videos = false
  assign video_cover_image = product.featured_media | image_url: width: 800

  if product.metafields.custom.video_hub.value
    assign video_data = product.metafields.custom.video_hub.value
  elsif product.metafields.custom.video_json.value
    assign video_data = product.metafields.custom.video_json.value
  endif

  if video_data != nil and video_data.size > 0
    assign has_videos = true
    assign sorted_videos = video_data | sort: 'sort_order'
    
    assign first_vid = sorted_videos[0]
    assign first_file = first_vid.video_file.value | default: first_vid.video_file
    assign first_file_url = nil
    if first_file
      if first_file.sources and first_file.sources.size > 0
        assign first_source = first_file.sources | where: 'format', 'mp4' | first
        if first_source
          assign first_file_url = first_source.url
        else
          assign first_file_url = first_file.sources[0].url
        endif
      elsif first_file.url
        assign first_file_url = first_file.url
      else
        assign first_file_url = first_file | file_url
      endif
    endif
    assign first_url = first_vid.videos_url.value | first | default: first_vid.videos_url.value | default: first_vid.videos_url
    assign first_url = first_url | remove: '["' | remove: '"]'
    
    assign first_thumb_url = first_vid.thumbnail_url.value | default: first_vid.thumbnail_url
    assign first_thumb = first_vid.thumbnail.value | default: first_vid.thumbnail

    if first_thumb_url != blank
      assign video_cover_image = first_thumb_url
    elsif first_thumb != blank
      assign video_cover_image = first_thumb | image_url: width: 800
    elsif first_file.preview_image
       assign video_cover_image = first_file.preview_image | image_url: width: 800
    elsif first_file_url != blank
       assign video_cover_image = product.featured_media | image_url: width: 800
    elsif first_url contains 'youtube' or first_url contains 'youtu.be'
       assign yt_id = first_url | split: 'v=' | last | split: '&' | first | split: '/' | last
       assign video_cover_image = 'https://img.youtube.com/vi/' | append: yt_id | append: '/hqdefault.jpg'
    endif
  endif
-%}

