{% comment %}
  Renders an article card for a given blog with settings to either show the image or not.

  Accepts:
  - blog: {Object} Blog object
  - article: {Object} Article object
  Usage:
  {% render 'article-card' blog: blog, article: article %}
{% endcomment %}

{%- if article and article != empty -%}
  <div class="imager-blog-card">
    <img
      src="{{ article.image.src | img_url : '550x' }}"
      width="{{ article.image.width }}"
      height="{{ article.image.height }}"
      loading="lazy"
      alt="{{ article.image.alt }}"
      class="img-fluid mb-2"
    >
  </div>
  <div class="blog-desc">
    <span class="blog-sp-12">{{ article.published_at | time_tag: format: 'date' }}</span>
    <h3 class="blog-sp-16">
      <a href="{{ article.url }}">{{ article.title }}</a>
    </h3>
    <p class="blog-sp-12">
      {%- if article.excerpt.size > 0 -%}
        {{ article.excerpt | strip_html | truncatewords: 60 }}
      {%- else -%}
        {{ article.content | strip_html | truncatewords: 60 }}
      {%- endif -%}
    </p>
  </div>
  <a class="blog-a" href="{{ article.url }}">Read More</a>
{%- endif -%}
