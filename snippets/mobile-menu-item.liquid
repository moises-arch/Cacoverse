{% if link.links.size > 0 %}
  <li class="m-item">
    <button class="m-link m-parent" data-title="{{ link.title }}">
      <span>{{ link.title }}</span>
      <svg width="18" height="18" viewBox="0 0 24 24">
        <path d="M8 4l8 8-8 8" stroke="currentColor" stroke-width="2" fill="none"/>
      </svg>
    </button>
    <ul class="m-sub">
      <li class="m-back-title">
        <button class="m-prev">â€¹</button>
        <span>{{ link.title }}</span>
      </li>
      {% for sublink in link.links %}
        {% render 'mobile-menu-item', link: sublink %}
      {% endfor %}
    </ul>
  </li>
{% else %}
  <li class="m-item">
    <a href="{{ link.url }}" class="m-link">{{ link.title }}</a>
  </li>
{% endif %}
