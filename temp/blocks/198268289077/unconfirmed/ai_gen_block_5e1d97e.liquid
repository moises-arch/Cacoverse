{% doc %}
  @prompt
    Create an image gallery slider for product pages with thumbnails positioned below the main image. When a thumbnail is clicked, it should display the corresponding large image in the main slider area. The gallery should include zoom functionality on the main images. The design should be clean and modern, with smooth transitions between images., quiero ponerle flechas a los lados  de los thumbnails. 
    
    agrega la función de zoom en la imagen grande
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-gallery-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    max-width: 100%;
  }

  .ai-gallery-container-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.spacing }}px;
    width: 100%;
  }

  .ai-gallery-main-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    overflow: hidden;
    border-radius: {{ block.settings.border_radius }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-gallery-main-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    display: block;
    cursor: zoom-in;
    transition: opacity 0.3s ease, transform 0.3s ease;
  }

  .ai-gallery-main-image-{{ ai_gen_id }}.zooming {
    transform: scale(1.5);
    cursor: zoom-out;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1 / 1;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: {{ block.settings.border_radius }}px;
  }

  .ai-gallery-placeholder-{{ ai_gen_id }} svg {
    width: 100%;
    height: 100%;
    max-width: 300px;
    max-height: 300px;
  }

  .ai-gallery-zoom-overlay-{{ ai_gen_id }} {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.95);
    z-index: 9999;
    display: none;
    align-items: center;
    justify-content: center;
    cursor: zoom-out;
  }

  .ai-gallery-zoom-overlay-{{ ai_gen_id }}.active {
    display: flex;
  }

  .ai-gallery-zoom-image-{{ ai_gen_id }} {
    max-width: 90%;
    max-height: 90%;
    object-fit: contain;
  }

  .ai-gallery-zoom-close-{{ ai_gen_id }} {
    position: absolute;
    top: 20px;
    right: 20px;
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10000;
    transition: background 0.3s ease;
  }

  .ai-gallery-zoom-close-{{ ai_gen_id }}:hover {
    background: #ffffff;
  }

  .ai-gallery-thumbnails-wrapper-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .ai-gallery-thumbnails-container-{{ ai_gen_id }} {
    flex: 1;
    overflow: hidden;
    position: relative;
  }

  .ai-gallery-thumbnails-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.thumbnail_spacing }}px;
    transition: transform 0.3s ease;
    padding: 4px 0;
  }

  .ai-gallery-thumbnail-{{ ai_gen_id }} {
    flex-shrink: 0;
    width: {{ block.settings.thumbnail_size }}px;
    height: {{ block.settings.thumbnail_size }}px;
    border: 2px solid transparent;
    border-radius: {{ block.settings.thumbnail_border_radius }}px;
    overflow: hidden;
    cursor: pointer;
    transition: all 0.3s ease;
    background-color: #f4f4f4;
  }

  .ai-gallery-thumbnail-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.thumbnail_hover_border_color }};
  }

  .ai-gallery-thumbnail-{{ ai_gen_id }}.active {
    border-color: {{ block.settings.thumbnail_active_border_color }};
  }

  .ai-gallery-thumbnail-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  .ai-gallery-thumb-nav-{{ ai_gen_id }} {
    flex-shrink: 0;
    background: rgba(0, 0, 0, 0.05);
    border: none;
    border-radius: 50%;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: background 0.3s ease;
  }

  .ai-gallery-thumb-nav-{{ ai_gen_id }}:hover {
    background: rgba(0, 0, 0, 0.1);
  }

  .ai-gallery-thumb-nav-{{ ai_gen_id }}:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  .ai-gallery-thumb-nav-{{ ai_gen_id }}:disabled:hover {
    background: rgba(0, 0, 0, 0.05);
  }

  .ai-gallery-nav-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    background: rgba(255, 255, 255, 0.9);
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    z-index: 10;
    transition: background 0.3s ease;
  }

  .ai-gallery-nav-{{ ai_gen_id }}:hover {
    background: #ffffff;
  }

  .ai-gallery-nav-{{ ai_gen_id }}.prev {
    left: 16px;
  }

  .ai-gallery-nav-{{ ai_gen_id }}.next {
    right: 16px;
  }

  @media screen and (max-width: 749px) {
    .ai-gallery-thumbnail-{{ ai_gen_id }} {
      width: {{ block.settings.thumbnail_size | times: 0.8 }}px;
      height: {{ block.settings.thumbnail_size | times: 0.8 }}px;
    }

    .ai-gallery-nav-{{ ai_gen_id }} {
      width: 32px;
      height: 32px;
    }

    .ai-gallery-nav-{{ ai_gen_id }}.prev {
      left: 8px;
    }

    .ai-gallery-nav-{{ ai_gen_id }}.next {
      right: 8px;
    }

    .ai-gallery-thumb-nav-{{ ai_gen_id }} {
      width: 28px;
      height: 28px;
    }
  }
{% endstyle %}

<product-gallery-{{ ai_gen_id }} class="ai-gallery-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-gallery-container-{{ ai_gen_id }}">
    <div class="ai-gallery-main-{{ ai_gen_id }}">
      {% if product.images.size > 0 %}
        <img
          src="{{ product.images[0] | image_url: width: 1200 }}"
          alt="{{ product.images[0].alt | escape }}"
          class="ai-gallery-main-image-{{ ai_gen_id }}"
          width="{{ product.images[0].width }}"
          height="{{ product.images[0].height }}"
          loading="eager"
          data-index="0"
        >

        {% if block.settings.show_navigation and product.images.size > 1 %}
          <button class="ai-gallery-nav-{{ ai_gen_id }} prev" aria-label="Imagen anterior">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="15 18 9 12 15 6"></polyline>
            </svg>
          </button>
          <button class="ai-gallery-nav-{{ ai_gen_id }} next" aria-label="Siguiente imagen">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <polyline points="9 18 15 12 9 6"></polyline>
            </svg>
          </button>
        {% endif %}
      {% else %}
        <div class="ai-gallery-placeholder-{{ ai_gen_id }}">
          {{ 'product-1' | placeholder_svg_tag }}
        </div>
      {% endif %}
    </div>

    {% if product.images.size > 1 %}
      <div class="ai-gallery-thumbnails-wrapper-{{ ai_gen_id }}">
        <button class="ai-gallery-thumb-nav-{{ ai_gen_id }} thumb-prev" aria-label="Miniaturas anteriores">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="15 18 9 12 15 6"></polyline>
          </svg>
        </button>

        <div class="ai-gallery-thumbnails-container-{{ ai_gen_id }}">
          <div class="ai-gallery-thumbnails-{{ ai_gen_id }}">
            {% for image in product.images %}
              <div class="ai-gallery-thumbnail-{{ ai_gen_id }} {% if forloop.first %}active{% endif %}" data-index="{{ forloop.index0 }}">
                <img
                  src="{{ image | image_url: width: 200 }}"
                  alt="{{ image.alt | escape }}"
                  class="ai-gallery-thumbnail-image-{{ ai_gen_id }}"
                  width="200"
                  height="200"
                  loading="lazy"
                >
              </div>
            {% endfor %}
          </div>
        </div>

        <button class="ai-gallery-thumb-nav-{{ ai_gen_id }} thumb-next" aria-label="Siguientes miniaturas">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <polyline points="9 18 15 12 9 6"></polyline>
          </svg>
        </button>
      </div>
    {% endif %}
  </div>

  <div class="ai-gallery-zoom-overlay-{{ ai_gen_id }}">
    <button class="ai-gallery-zoom-close-{{ ai_gen_id }}" aria-label="Cerrar zoom">
      <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
    <img src="" alt="" class="ai-gallery-zoom-image-{{ ai_gen_id }}">
  </div>
</product-gallery-{{ ai_gen_id }}>

<script>
  (function() {
    class ProductGallery{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.currentIndex = 0;
        this.images = [];
        this.thumbnailOffset = 0;
        this.isZooming = false;
      }

      connectedCallback() {
        this.mainImage = this.querySelector('.ai-gallery-main-image-{{ ai_gen_id }}');
        this.thumbnails = this.querySelectorAll('.ai-gallery-thumbnail-{{ ai_gen_id }}');
        this.thumbnailsContainer = this.querySelector('.ai-gallery-thumbnails-{{ ai_gen_id }}');
        this.prevBtn = this.querySelector('.ai-gallery-nav-{{ ai_gen_id }}.prev');
        this.nextBtn = this.querySelector('.ai-gallery-nav-{{ ai_gen_id }}.next');
        this.thumbPrevBtn = this.querySelector('.ai-gallery-thumb-nav-{{ ai_gen_id }}.thumb-prev');
        this.thumbNextBtn = this.querySelector('.ai-gallery-thumb-nav-{{ ai_gen_id }}.thumb-next');
        this.zoomOverlay = this.querySelector('.ai-gallery-zoom-overlay-{{ ai_gen_id }}');
        this.zoomImage = this.querySelector('.ai-gallery-zoom-image-{{ ai_gen_id }}');
        this.zoomCloseBtn = this.querySelector('.ai-gallery-zoom-close-{{ ai_gen_id }}');

        if (this.mainImage) {
          this.images = Array.from(this.thumbnails).map((thumb, index) => {
            const img = thumb.querySelector('.ai-gallery-thumbnail-image-{{ ai_gen_id }}');
            return {
              src: img.src.replace('width=200', 'width=1200'),
              alt: img.alt,
              index: index
            };
          });

          this.setupEventListeners();
          this.updateThumbnailNavigation();
        }
      }

      setupEventListeners() {
        this.thumbnails.forEach((thumbnail) => {
          thumbnail.addEventListener('click', () => {
            const index = parseInt(thumbnail.dataset.index);
            this.changeImage(index);
          });
        });

        if (this.prevBtn) {
          this.prevBtn.addEventListener('click', () => {
            this.navigateImage(-1);
          });
        }

        if (this.nextBtn) {
          this.nextBtn.addEventListener('click', () => {
            this.navigateImage(1);
          });
        }

        if (this.thumbPrevBtn) {
          this.thumbPrevBtn.addEventListener('click', () => {
            this.scrollThumbnails(-1);
          });
        }

        if (this.thumbNextBtn) {
          this.thumbNextBtn.addEventListener('click', () => {
            this.scrollThumbnails(1);
          });
        }

        if (this.mainImage) {
          this.mainImage.addEventListener('click', (e) => {
            if (this.isZooming) {
              this.closeInlineZoom();
            } else {
              this.openInlineZoom(e);
            }
          });

          this.mainImage.addEventListener('dblclick', () => {
            this.openZoom();
          });
        }

        if (this.zoomOverlay) {
          this.zoomOverlay.addEventListener('click', (e) => {
            if (e.target === this.zoomOverlay || e.target === this.zoomImage) {
              this.closeZoom();
            }
          });
        }

        if (this.zoomCloseBtn) {
          this.zoomCloseBtn.addEventListener('click', () => {
            this.closeZoom();
          });
        }

        document.addEventListener('keydown', (e) => {
          if (this.zoomOverlay.classList.contains('active')) {
            if (e.key === 'Escape') {
              this.closeZoom();
            } else if (e.key === 'ArrowLeft') {
              this.navigateImage(-1);
            } else if (e.key === 'ArrowRight') {
              this.navigateImage(1);
            }
          }
        });
      }

      changeImage(index) {
        if (index < 0 || index >= this.images.length) return;

        this.currentIndex = index;
        const imageData = this.images[index];

        this.mainImage.style.opacity = '0';

        setTimeout(() => {
          this.mainImage.src = imageData.src;
          this.mainImage.alt = imageData.alt;
          this.mainImage.dataset.index = index;
          this.mainImage.style.opacity = '1';
        }, 150);

        this.thumbnails.forEach((thumb) => {
          thumb.classList.remove('active');
        });
        this.thumbnails[index].classList.add('active');

        if (this.zoomOverlay.classList.contains('active')) {
          this.zoomImage.src = imageData.src;
          this.zoomImage.alt = imageData.alt;
        }
      }

      navigateImage(direction) {
        const newIndex = this.currentIndex + direction;
        if (newIndex >= 0 && newIndex < this.images.length) {
          this.changeImage(newIndex);
        }
      }

      scrollThumbnails(direction) {
        const containerWidth = this.thumbnailsContainer.offsetWidth;
        const scrollAmount = containerWidth * 0.8;
        
        this.thumbnailOffset += direction * scrollAmount;
        
        const maxOffset = 0;
        const minOffset = -(this.thumbnailsContainer.scrollWidth - containerWidth);
        
        this.thumbnailOffset = Math.max(minOffset, Math.min(maxOffset, this.thumbnailOffset));
        
        this.thumbnailsContainer.style.transform = `translateX(${this.thumbnailOffset}px)`;
        
        this.updateThumbnailNavigation();
      }

      updateThumbnailNavigation() {
        if (!this.thumbnailsContainer) return;

        const containerWidth = this.thumbnailsContainer.offsetWidth;
        const scrollWidth = this.thumbnailsContainer.scrollWidth;
        
        if (this.thumbPrevBtn) {
          this.thumbPrevBtn.disabled = this.thumbnailOffset >= 0;
        }
        
        if (this.thumbNextBtn) {
          this.thumbNextBtn.disabled = this.thumbnailOffset <= -(scrollWidth - containerWidth);
        }
      }

      openInlineZoom(e) {
        if (!this.mainImage) return;
        
        this.isZooming = true;
        this.mainImage.classList.add('zooming');
        
        const rect = this.mainImage.getBoundingClientRect();
        const x = ((e.clientX - rect.left) / rect.width) * 100;
        const y = ((e.clientY - rect.top) / rect.height) * 100;
        
        this.mainImage.style.transformOrigin = `${x}% ${y}%`;
      }

      closeInlineZoom() {
        if (!this.mainImage) return;
        
        this.isZooming = false;
        this.mainImage.classList.remove('zooming');
        this.mainImage.style.transformOrigin = 'center center';
      }

      openZoom() {
        if (!this.zoomOverlay || !this.mainImage) return;

        this.closeInlineZoom();
        this.zoomImage.src = this.mainImage.src;
        this.zoomImage.alt = this.mainImage.alt;
        this.zoomOverlay.classList.add('active');
        document.body.style.overflow = 'hidden';
      }

      closeZoom() {
        if (!this.zoomOverlay) return;

        this.zoomOverlay.classList.remove('active');
        document.body.style.overflow = '';
      }
    }

    customElements.define('product-gallery-{{ ai_gen_id }}', ProductGallery{{ ai_gen_id }});
  })();
</script>

